_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=php
_choconame=php
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=8.4.13
pkgrel=1
pkgdesc="A general-purpose scripting language that is especially suited to web development"
url="https://windows.php.net/"
arch=('any')
license=('PHP')
provides=("${pkgbase}")
options=(!strip)
source=("php-nts-Win32-vs17-x64.zip::https@subdir://windows.php.net/downloads/releases/php-${pkgver}-nts-Win32-vs17-x64.zip")
sha512sums=('65006f750acab44c5047ff896f9078d62551acf5f9d4fbe6434cd52c40c1dd002d17c87c6da51ad6b5c5af727ffe662d36f54d03e0f5c02ca070c03c2588a6c5')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "php-nts-Win32-vs17-x64"/* "${a}"
}
