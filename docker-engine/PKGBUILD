# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=docker-engine
_choconame=docker-engine
_dirname=docker
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=26.1.0
pkgrel=1
pkgdesc="Pack, ship and run any application as a lightweight container"
url="https://docs.docker.com/engine/"
arch=('any')
license=('Apache')
provides=("${pkgbase}")
options=(!strip)
source=("docker.zip::https://download.docker.com/win/static/stable/x86_64/docker-${pkgver}.zip")
sha512sums=('2800d116f8c6679d7529a49309ec2f0245995d1da65529f1d0f475c2ca6bd25ce800bc2692dc502d6ee75185065be59a373314cf8f9be3977130f6021455039f')

package() {
    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}"
    cp "docker"/* "${a}/"
    rm "${a}/docker.exe"
}
