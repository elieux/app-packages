_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

_realname=crystaldiskinfo
_dirname=crystal
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=8.8.5
pkgrel=1
pkgdesc="A disk utility (Crystal Dew World)"
url="https://crystalmark.info/software/CrystalDiskInfo/index-e.html"
arch=('any')
license=('MIT')
replaces=("app-i686-${_realname}")
provides=("${pkgbase}")
options=(!strip)
source=("CrystalDiskInfo.zip::https@subdir://osdn.net/dl/crystaldiskinfo/CrystalDiskInfo${pkgver//./_}.zip")
sha512sums=('700cf60d4028e20a5d9a53a906d47ed30d6fe296dfe0dd5c6182256e44b2e61532f03a0a97605e6c81670241ac93246761d88e88dcb3403f17780eb21934c106')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

package() {
    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}"
    cp -R "CrystalDiskInfo"/* "${a}"
    rm "${a}/DiskInfo32.exe" "${a}"/DiskInfoA*.exe
    mv "${a}/DiskInfo64.exe" "${a}/CrystalDiskInfo.exe"
    mv "${a}/License" "${a}/CdiLicense"
    mv "${a}/ReadMe.txt" "${a}/CdiReadMe.txt"
    _lc "${a}"/*
}
