# Maintainer: David Macek <david.macek.0@gmail.com>

_chocover() {
    # 86.0.9 -> 86.0.9.0
    echo "${1}" | sed -r -e 's/^([0-9]+)[.]([0-9]+)[.]([0-9]+)$/\1.\2.\3.0/'
}

_realname=google-drive
_choconame=googledrive
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=118.0.1.0
pkgrel=1
pkgdesc="The Google Drive synchronization tool"
url="https://www.google.com/drive/"
arch=('any')
license=('custom')
replaces=("app-i686-${_realname}")
makedepends=("p7zip" "unzip")
provides=("${pkgbase}")
options=(!strip)
source=("GoogleDriveSetup.exe::https://dl.google.com/drive-file-stream/GoogleDriveSetup.exe")
sha512sums=('3d2d1c7896fe0d0401c6a6439641897c06ddc023d50128eb549de5018b526088842942a4ee42cba1b5b9abd6bb7086705875909fabf2e7d78282b2357f18f4b0')
noextract=("GoogleDriveSetup.exe")

prepare() {
    7z x -y -bd "GoogleDriveSetup.exe" -o"GoogleDriveSetup.dir" > /dev/null
    for zip in "GoogleDriveSetup.dir/.rsrc/RCDATA"/*
    do
        unzip -q -o "${zip}" -d "${zip}.dir"
    done
}

pkgver() {
    powershell -command '(Get-Item "GoogleDriveSetup.exe").VersionInfo.FileVersionRaw.ToString()'
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "GoogleDriveSetup.dir/.rsrc/RCDATA"/*.dir "${a}"
    # remove ARM version
    rm -R "${a}"/{104,232}.dir
    # remove uninstaller, updater and Edge bootstrap
    rm -R "${a}"/{102,103,251}.dir
    # take app and driver
    mv "${a}/101.dir"/* "${a}"
    mv "${a}/231.dir"/* "${a}"
    rm -R "${a}"/{101,231}.dir
}
