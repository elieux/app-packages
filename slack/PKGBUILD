# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=slack
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=3.1.0
pkgrel=2
pkgdesc="Client for the Slack team communication platform"
url="http://www.slack.com/"
arch=('any')
license=('custom')
makedepends=("p7zip" "unzip")
provides=("${pkgbase}")
options=(!strip)
source=("SlackSetup32.exe::https://slack.com/ssb/download-win"
        "SlackSetup64.exe::https://slack.com/ssb/download-win64")
sha512sums=('401fe805bce4c4a8f78eac4b9d1b031242863f633647e2fa7b939a5aade2d274a1091a72ccfe451828c22099a472eb68a92c5784713f78dbaaf839c78892ae72'
            '30852d44a15ba7c7a0365970ea33fabfe53d6a702c160266c74906bb9926e3b13ac6c88f1516461602ca33f78270eebfa93bf7377e5d7bd3d15e3d8ba2176380')

_eqver() {
    local r v

    for v in "${@}"
    do
        if [ -n "${r}" -a "${r}" != "${v}" ]
        then
            echo "Version mismatch between ${r} and ${v}."
        fi
        r="${v}"
    done
    echo "${r}"
}

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+"
        "vc([ao]mp|corlib|runtime)[0-9]+"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

pkgver() {
    _vers=( $(
        for _apparch in 32 64
        do
            "${SYSTEMROOT}/System32/WindowsPowerShell/v1.0/powershell" -command '(Get-Item "SlackSetup'"${_apparch}"'.exe").VersionInfo.ProductVersion' | dos2unix
        done
    ) )
    _eqver "${_vers[@]}"
}

_prepare() {
    find -name 'slack-*-full.nupkg' -delete
    7z x -y -bd "SlackSetup${_apparch}.exe" -o"SlackSetup${_apparch}"
    unzip -o "SlackSetup${_apparch}/slack"-*-"full.nupkg" -d "SlackSetup${_apparch}"
    _lc "lib/net45"/*
}

prepare() {
    for _apparch in 32 64
    do
        _prepare
    done
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "SlackSetup${_apparch}/lib/net45"/* "${a}"
    _rmmsdll "${a}"
}

package_app-i686-slack() {
    _apparch=32
    _package
}

package_app-x86_64-slack() {
    _apparch=64
    _package
}
