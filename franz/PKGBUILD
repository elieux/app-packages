# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=franz
_choconame=franz
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=5.9.2
pkgrel=1
pkgdesc="Franz is a free messaging app and combines chat & messaging services into one application"
url="https://meetfranz.com/"
arch=('any')
license=('custom')
replaces=("app-i686-${_realname}")
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("franz-setup.exe::https://github.com/meetfranz/franz/releases/download/v${pkgver}/franz-setup-${pkgver}.exe")
sha512sums=('08c9744353ea424c71f25fdbcebb164e85472d4d7ddeaab3a664ae6be604e5b91e22d4a666db71f22b94cccac47423f7625f3795751b2689c93eed6cfabeeac1')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    7z x -y -bd "franz-setup.exe" -o"franz-setup.dir" > /dev/null
    7z x -y -bd "franz-setup.dir"/'$PLUGINSDIR'/"app-64.7z" -o"app-64" > /dev/null
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "app-64"/* "${a}"
    _lc "${a}"/*
}
