# Maintainer: David Macek <david.macek.0@gmail.com>

DLAGENTS=('https::/usr/bin/curl -qb "" -fLC - -e "https://www.cheater.cz/" -o %o %u')

_realname=wincheater
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=2.07
pkgrel=1
pkgdesc="Video game cheats and guides database viewer"
url="https://www.cheater.cz/wincheater2/info/"
arch=('any')
license=('custom')
depends=("app-i686-wincheater-data-base")
optdepends=("app-i686-wincheater-data-libs: Databases")
makedepends=("app-innounp")
provides=("${pkgbase}")
options=(!strip)
source=()


_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_dl() {
    (
        cd "${SRCDEST}"
        download_file "${1}"
    )
}

_dlread() {
    local tmp

    tmp=".tmp"
    rm -f "${SRCDEST}/${tmp}"
    _dl "${tmp}::${1}" &> /dev/null
    cat "${SRCDEST}/${tmp}"
    rm "${SRCDEST}/${tmp}"
}

prepare() {
    n="winch2-setup"
    f="$(_dlread "https://www.cheater.cz/download/get-name.php?soubor=${n}")"
    h="$(_dlread "https://www.cheater.cz/download/get-link.php?soubor=${n}" | sed -r 's/.*hash=([a-z0-9]+).*/\1/')"
    if [ "${f}" = "????" ]
    then
        f="${i}.exe"
    fi
    _dl "${f}::https://www.cheater.cz/download/download-file.php?hash=${h}"
    source+=("${f}")
    noextract+=("${f}")
    extract_sources

    /apps/innounp/innounp -x -q -m -a -y "WinCheater2_setup.exe"
    _lc "{app}"/*
}

pkgver() {
    "${SYSTEMROOT}/System32/WindowsPowerShell/v1.0/powershell" -command '(Get-Item "WinCheater2_setup.exe").VersionInfo.FileDescription' | sed -r 's/^Scorpions WinCheater ([0-9]+[.][0-9]+)/\1/' | cut -d' ' -f1
}

package() {
    a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -r "{app}"/* "${a}"
    rm "${a}/texty.sct" "${a}"/*.sc2
}


