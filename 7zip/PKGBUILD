# Maintainer: David Macek <david.macek.0@gmail.com>

_chocover() {
    # 22.1.0 -> 22.01
    echo "${1}" | sed -r 's/^([0-9]+)[.]([0-9])[.]0$/\1.0\2/'
}

_realname=7zip
_choconame=7zip
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=25.01
pkgrel=1
pkgdesc="A free file archiver for extremely high compression"
url="https://www.7-zip.org/"
arch=('any')
license=('LGPL2' 'custom')
replaces=("app-i686-${_realname}")
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("7z-x64.exe::https://7-zip.org/a/7z${pkgver//./}-x64.exe")
sha512sums=('44c7c2b683383f8555f9d8420391c118e4631eb88bb1d5e8ca7b6e2750568a697493509eeba6f758df1a82c2b76298261c672331a22b0d7f3d4487ae05dedfc6')
noextract=("7z-x64.exe")

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    7z x -y -bd "7z-x64.exe" -o"7z-x64.dir" > /dev/null
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "7z-x64.dir"/* "${a}"
    rm "${a}/Uninstall.exe"
    _lc "${a}"/*
}
