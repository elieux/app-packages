# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=filezilla-server
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=0.9.57
pkgrel=1
pkgdesc="A popular FTP server"
url="http://filezilla-project.org/"
arch=('any')
license=('GPL')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("FileZilla_Server.exe::http://downloads.sourceforge.net/filezilla/FileZilla%20Server/${pkgver}/FileZilla_Server-${pkgver//./_}.exe")
sha512sums=('eb507003b4e05e809430eece2607dd33c36c6dc70e2e7ea53fccf9ff959170e83cfbd3a18812e6887ab6e44c5e30731e62fd370be4efe8dace55fcc9e3ae5dad')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

prepare() {
    7z x -y -bd "FileZilla_Server.exe"
    _lc *
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "filezilla server.exe" "filezilla server interface.exe" *.dll "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    cp -r "license.txt" *.htm "${d}"
}
