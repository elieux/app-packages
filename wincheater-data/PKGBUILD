# Maintainer: David Macek <david.macek.0@gmail.com>

DLAGENTS=('https::/usr/bin/curl -qb "" -fLC - -e "https://www.cheater.cz/" -o %o %u')

_dirname=wincheater
pkgbase="app-wincheater-data"
pkgname=("app-i686-wincheater-data-base"
         "app-i686-wincheater-data-libs")
epoch=1
pkgver=2016.05.06
pkgrel=3
url="https://www.cheater.cz/wincheater2/download-knihovny/"
arch=('any')
license=('custom')
makedepends=("unrar")
options=(!strip)
source=("download-knihovny.html::${url}")
sha512sums=('ede45ae349f7fc278dec3e5c34a9ab7d118aea87ce1d3b7df2380f43e2fc5d70a312053f69bd3f74530ae067f049c90ffc5bb25397140bb751881826b76dac98')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_dl() {
    (
        cd "${SRCDEST}"
        download_file "${1}"
    )
}

_dlread() {
    local tmp

    tmp=".tmp"
    rm -f "${SRCDEST}/${tmp}"
    _dl "${tmp}::${1}" &> /dev/null
    cat "${SRCDEST}/${tmp}"
    rm "${SRCDEST}/${tmp}"
}

prepare() {
    source=()
    noextract=()
    for n in $(cat "download-knihovny.html" | grep 'onclick="downloadx' | sed -r "s/.*downloadx\('(.*?)'\).*/\1/")
    do
        f="$(_dlread "https://www.cheater.cz/download/get-name.php?soubor=${n}")"
        h="$(_dlread "https://www.cheater.cz/download/get-link.php?soubor=${n}" | sed -r 's/.*hash=([a-z0-9]+).*/\1/')"
        if [ "${f}" = "????" ]
        then
            f="${i}.exe"
        fi
        _dl "${f}::https://www.cheater.cz/download/download-file.php?hash=${h}"
        source+=("${f}")
        noextract+=("${f}")
    done
    extract_sources

    for f in *.exe
    do
        unrar x -idq -tsm -o+ "${f}"
    done
    _lc *
    for f in *" "*
    do
        n="$(echo "${f}" | tr ' ' '_')"
        mv "${f}" "${n}"
    done
}

pkgver() {
    #find . -mindepth 1 -maxdepth 1 -name '*.sc2' -printf '%TY.%Tm.%Td\n' | sort | tail -1
    find . -mindepth 1 -maxdepth 1 -name '*.exe' -execdir bash -c 'unrar l -c- "{}" | sed "/^;/d" | sed "/^$/d" | tail -n +6 | head -n -2 | sed -r "s/[ ]+/\t/g" | cut -f 4 | sed -r "s/^([0-9][0-9])-([0-9][0-9])-([0-9][0-9])$/20\3-\2-\1/" | tr "-" "."' \; | sort | tail -1
}

package_wincheater-data-base() {
    a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}"
    cp *.sct "${a}"
}

package_wincheater-data-libs() {
    a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}"
    cp *.sc2 "${a}"
}

package_app-i686-wincheater-data-base() {
    pkgdesc="Texts for WinCheater"
    provides=("app-wincheater-data-base")
    replaces=("app-i686-wincheater-data")
    conflicts=("app-i686-wincheater-data")

    package_wincheater-data-base
}

package_app-i686-wincheater-data-libs() {
    pkgdesc="Libraries for WinCheater"
    provides=("app-wincheater-data-libs")
    replaces=("app-i686-wincheater-libraries")
    conflicts=("app-i686-wincheater-libraries")
    depends=("app-i686-wincheater")

    package_wincheater-data-libs
}
