# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=docker-engine
_choconame=docker-engine
_dirname=docker
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=27.0.2
pkgrel=1
pkgdesc="Pack, ship and run any application as a lightweight container"
url="https://docs.docker.com/engine/"
arch=('any')
license=('Apache')
provides=("${pkgbase}")
options=(!strip)
source=("docker.zip::https://download.docker.com/win/static/stable/x86_64/docker-${pkgver}.zip")
sha512sums=('4c97c706369baeb3355d47fb2f21c00099b49914cd434f404586b1bd4dbe011bb3223124847a474ea284f1c50db5df2024e829053d6d38bd98f2d7f58f14fa01')

package() {
    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}"
    cp "docker"/* "${a}/"
    rm "${a}/docker.exe"
}
