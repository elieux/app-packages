# Maintainer: David Macek <david.macek.0@gmail.com>

_chocover() {
    # 2021.1.9 -> 2021.01.09
    # 2021.1.19 -> 2021.01.19
    # 2021.11.9 -> 2021.11.09
    # 2021.11.11 -> 2021.11.11
    echo "${1}" | sed -r -e 's/[.]([0-9])[.]/.0\1./' -e 's/[.]([0-9])$/.0\1/'
}

_realname=shotcut
_choconame=Shotcut
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=25.12.31
pkgrel=1
pkgdesc="Cross-platform, open-source video editor"
url="https://shotcut.org/"
arch=('any')
license=('GPL3')
provides=("${pkgbase}")
options=(!strip)
source=("shotcut-win64.zip::https://github.com/mltframework/shotcut/releases/download/v${pkgver}/shotcut-win64-${pkgver}.zip")
sha512sums=('3a1da9a966d54629277bbec21325ac1d0ba68575a52152a822f0e77aaafb4a978c96303387096218ec408bec2c6d567832b3be7d24a821b89d95ac07aac71b11')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "Shotcut"/* "${a}"
    _lc "${a}"/*
}
