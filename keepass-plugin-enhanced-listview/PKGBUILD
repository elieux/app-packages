# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=keepass-plugin-enhanced-listview
_dirname=keepass
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=0.9.3.0
pkgrel=1
pkgdesc="A KeePass plugin that extends the listview"
url="http://kpenhancedlistview.blogspot.com/"
url="http://code.google.com/p/kpenhancedlistview/"
arch=('any')
license=('GPL2')
depends=("app-i686-keepass")
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("KPEnhancedListview.zip::http://kpenhancedlistview.googlecode.com/files/KPEnhancedListview_${pkgver//./_}.zip")
sha512sums=('201f21d151b99cb29af61029fb6d96176da0e19cbaf50589923a7697060abca4870b4bcda25d69a70bd5366e0f2e5b07d88b44660521c7211276aefdf8e6a2b3')

package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}/plugins"
    cp *.plgx "${a}/plugins"
}
