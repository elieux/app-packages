# Maintainer: David Macek <david.macek.0@gmail.com>

_dirname=xnview
_realname=xnshell
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=4.10.0
pkgrel=1
pkgdesc="A powerful shell extension with image preview and transforms"
url="https://www.xnview.com/en/xnshell/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("XnShellEx64.zip::https://download.xnview.com/XnShellEx64.zip"
        "XnShellEx.zip::https://download.xnview.com/XnShellEx.zip")
sha512sums=('1f2bcb25a675a0d0bae19772536d3eb3fb0f384ee7c3efa99c9d0f708bec79bb03da412f7fe4ad4d4fc79e3727c81d1ac7406c3dd284a1b6488443f18b85837a'
            '6040e6799f8ac7707055b0ad0e3e29e3bc2dc0930e68eb38067853f3419f8a2f2e5a0155c319e6e7e6418cc73dfff1836dc29dfebe19eecb95c58a17cae391d1')

_eqver() {
    local r v

    for v in "${@}"
    do
        if [ -n "${r}" -a "${r}" != "${v}" ]
        then
            echo "Version mismatch between ${r} and ${v}."
        fi
        r="${v}"
    done
    echo "${r}"
}

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_[0-9])?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

pkgver() {
    local _ver64="$(powershell -command '(Get-Item "XnShellEx64/XnViewShellExt64.dll").VersionInfo.ProductVersionRaw.ToString()')"
    local _ver32="$(powershell -command '(Get-Item "XnShellEx/XnViewShellExt.dll").VersionInfo.ProductVersionRaw.ToString()')"
    _eqver "${_ver64}" "${_ver32}" | sed -r 's/([0-9]+)[.]([0-9]+)[.]([0-9]+)[.]([0-9]+)/\1.\2\3.\4/'
}

package() {
    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}" "${a}/ShellEx64" "${a}/ShellEx"
    cp -R "XnShellEx64"/* "${a}/ShellEx64"
    cp -R "XnShellEx"/* "${a}/ShellEx"
    _rmmsdll "${a}"
    _lc "${a}"/*
}
