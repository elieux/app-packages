# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=unbound
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=1.6.1
pkgrel=1
pkgdesc="Validating, recursive, and caching DNS resolver"
arch=('any')
url="http://unbound.net/"
license=('custom:BSD')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("unbound.zip::https://www.unbound.net/downloads/unbound-${pkgver}.zip")
sha512sums=('25c4cfba396d3625dc778b47e10bc7c5990da6aa4019569e8b6cbf7f995074db96f302817009918381f7534b1a38c62cb8ef5ef381d281af7f1bd92f6938cc35')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    _lc *
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp *.{exe,cmd} "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    cp *.{txt,conf,url} "license" "${d}"
}
