# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=exact-audio-copy
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=1.3
pkgrel=2
pkgdesc="A very accurate CD audio grabber"
url="http://www.exactaudiocopy.de/en/"
arch=('any')
license=('custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("eac.exe::http://www.exactaudiocopy.de/eac-${pkgver}.exe")
sha512sums=('2eb30132e8abd7b4cf628e2ae6465bba9f4059f868a688da395aa467f3009fac0e6e4b337f73c3b344083231cbbabf959c9fd3e0d24794c0d22f7215ed358503')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    7z x -y -bd "eac.exe" -o"eac"
    _lc "eac"/*
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "eac"/* "${a}"
    rm -r "${a}"/*.nsi "${a}"/'$pluginsdir' "${a}/microsoft.vc80.crt" "${a}/uninst.exe.nsis"
}
