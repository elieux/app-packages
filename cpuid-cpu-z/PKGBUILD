_chocover() {
    # 2.0.0 -> 2.00
    echo "${1}" | sed -r -e 's/^([0-9]+)[.]([0-9]+)[.]0$/\1.\2/' -e 's/^([0-9]+)[.]([0-9])$/\1.0\2/'
}

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

download_http@subdir() {
    download_file "${1/@subdir:/:}"
}

extract_http@subdir() {
    _extract_subdir "${@}"
}

_realname=cpu-z
_choconame=cpu-z
_dirname=cpuid
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=2.17
pkgrel=1
pkgdesc="Gathers information on some of the main devices of your system (CPUID)"
url="https://www.cpuid.com/softwares/cpu-z.html"
arch=('any')
license=('custom')
replaces=("app-i686-${_realname}")
provides=("${pkgbase}")
options=(!strip)
source=("cpu-z-en.zip::http@subdir://download.cpuid.com/cpu-z/cpu-z_${pkgver}-en.zip")
sha512sums=('b7d8fbbcc6b6e097cfe9c7a78afe2654c6fc491050880ad5eff099a279394a0cff931c1a9dd3fde50039fe67243e5403ac5bdd5fd596049eada2a10d802cdf36')

package() {
    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}"
    cp "cpu-z-en"/* "${a}"
    rm "${a}/cpuz_x32.exe"
    mv "${a}/cpuz_x64.exe" "${a}/cpuz.exe"
}
