_realname=traystatus
_choconame=traystatus
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=4.6
pkgrel=1
pkgdesc="Show status of Caps Lock, Num Lock, Scroll Lock, and more in system tray"
url="https://www.traystatus.com/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("TrayStatus.zip::https://binaryfortressdownloads.com/Download/BFSFiles/114/TrayStatus-${pkgver}.zip")
sha512sums=('c91af2ace34a89b6f4ba7425066a4ebe297132083e3022bed123d1c58c0061dbec47020f36f7ac2dcb4f8b09ee5830c6fc7dd27289f0b280773f2b264e100ac9')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "TrayStatus"/* "${a}"
}
