DLAGENTS=('https::/usr/bin/curl -qb "" -fLC - -e "https://www.nirsoft.net/" -o %o %u')

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

_realname=nirsoft
_choconame=nirlauncher
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=2
pkgver=1.23.71
pkgrel=1
pkgdesc="Collection of small and useful freeware utilities by Nir Sofer"
url="https://www.nirsoft.net/"
arch=('any')
license=('custom')
replaces=("app-i686-${_realname}")
makedepends=("unzip" "curl")
provides=("${pkgbase}")
options=(!strip)
source=("nirsoft_package_enc.zip::https://download.nirsoft.net/nirsoft_package_enc_${pkgver}.zip")
sha512sums=('d5333493b5d8e6fe9797fd5f71c68a813113af3df93e8f26c783642e8495623fdcb42e1bef4ec0f52e606c28db938b7bcd934fa262a16d9aa9b2137f485c27aa')
noextract=("nirsoft_package_enc.zip")

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    unzip -q -P nirsoft9876$ -o nirsoft_package_enc.zip -d "nirsoft_package_enc"
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"

    cp -R "nirsoft_package_enc/NirSoft"/* "${a}"
    mv "${a}/x64"/* "${a}"
    rm -R "${a}/x64"

    _lc "${a}"/*
}
