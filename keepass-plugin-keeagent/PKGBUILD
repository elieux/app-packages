# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

_realname=keepass-plugin-keeagent
_realver=2020/05
_dirname=keepass
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=0.12.0
pkgrel=1
pkgdesc="A KeePass plugin that acts as a SSH authentication agent"
url="https://lechnology.com/software/keeagent/"
arch=('any')
license=('unknown')
provides=("${pkgbase}")
options=(!strip)
source=("KeeAgent.zip::https@subdir://lechnology.com/wp-content/uploads/${_realver}/KeeAgent_v${pkgver}.zip")
sha512sums=('08e6996f3b68775ec4e182a42223b7a673336e953cc60d70cbedf28a5bfa27b72d8899291907ce65e52f7ff2c35c1ac7aba5323c48de12634ca1b36095587b04')

package() {
    depends=("app-keepass")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/Plugins" "${a}/Plugins/keeagent"
    cp -R "KeeAgent"/* "${a}/Plugins/keeagent"
    mv "${a}/Plugins/keeagent"/*.plgx "${a}/Plugins"
}
