# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=atom
_choconame=Atom
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=1.63.1
pkgrel=1
pkgdesc="A hackable text editor for the 21st Century"
arch=('any')
url="https://atom.io/"
license=('custom')
replaces=("app-i686-${_realname}")
provides=("${pkgbase}")
options=(!strip)
source=("atom-x64-windows.zip::https://github.com/atom/atom/releases/download/v${pkgver}/atom-x64-windows.zip")
sha512sums=('99b4a1f4ecbd3d8c60f23d5e6d0facc0ce0ca4cf743f241c6d42829f619b3a6f00e43fcecda4daa40ebd8faa2deec9c3f88835cd135b9f1c561f8b2104bc7464')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids|atomic_wait))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_[0-9])?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "Atom x64"/* "${a}"
    _rmmsdll "${a}"
    _lc "${a}"/*
}
