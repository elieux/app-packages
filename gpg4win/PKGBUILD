# Maintainer: David Macek <david.macek.0@gmail.com>

_status=("broken" "v2.3.0" "nsis")
_realname=gpg4win
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=2.2.6
pkgrel=1
pkgdesc="A secure solution for file and email encryption"
url="http://www.gpg4win.org/index.html"
arch=('any')
license=('custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("gpg4win.exe::http://files.gpg4win.org/gpg4win-${pkgver}.exe")
sha512sums=('b1c48d84d041055db3d3e3cbd22ef2f3300728b06c76660b9b78ececf56b7ccbc80addb39a64c0a4eb68bf3463ceb6d254dedda047049ce680e9d543dd8a9af9')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

prepare() {
    7z x -y -bd "gpg4win.exe"
    _lc *
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r * "${a}"
    find "${a}" -iname '*.tmp' -delete
    rm -r "${a}/gpg4win.exe" "${a}"/*.nsi{,s} "${a}"/'$'*

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}" "${d}/gnupg"
    mv "${a}/[license].txt" "${d}/LICENSE.txt"
    mv "${a}/share/doc"/* "${d}"
    rm -r "${a}/share/doc"
    mv "${a}/share/gnupg"/*.{man,txt} "${d}/gnupg"
    mv "${a}/share/gpg4win" "${d}/gpg4win"
}
