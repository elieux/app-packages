# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=google-drive
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=1.27.1227.2094
pkgrel=1
pkgdesc="The Google Drive synchronization tool"
url="http://www.google.com/drive/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("gsync.msi::http://dl.google.com/drive/${pkgver}/gsync.msi")
sha512sums=('38565f3dbab1b2572e7d46a1983361edda0aea5a631f1f91a329726288a1883576ef7c7f06b48e8cd848d814a3be168cfc4ac48b9234c733a8ad17919ec6eb81')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

build() {
    msiexec -a "gsync.msi" "TARGETDIR=$(cygpath -wa "msi")" -qn
    _lc "msi/Google/Drive"/*
}

package() {
    s="msi/Google/Drive"
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "${s}"/*.{dll,exe} "${s}/languages" "${a}"
}
