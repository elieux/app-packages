_realname=keepass-plugin-entry-templates
_dirname=keepass
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=7.0.0.1
pkgrel=1
pkgdesc="A KeePass plugin that provides templating support"
url="https://github.com/mitchcapper/KPEntryTemplates"
arch=('any')
license=('unknown')
depends=("app-i686-keepass")
provides=("${pkgbase}")
options=(!strip)
source=("KPEntryTemplates.plgx::https://github.com/mitchcapper/KPEntryTemplates/releases/download/${pkgver}/KPEntryTemplates.plgx")
sha512sums=('b3dc004da5f62614089c199b2d6a84e41a67f661a2fe239e63e01da09e6570e7d5c599d9955e2db55abc271fadec0e2d9830fe1993e4bce81ead5675832b52c2')

package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}/plugins"
    cp *.plgx "${a}/plugins"
}
