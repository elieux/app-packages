# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=vistalizator
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=2.75
pkgrel=1
pkgdesc="Tool for changing display language in all Windows editions"
url="http://www.froggie.sk/index.html"
arch=('any')
license=('custom')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("Vistalizator.exe::http://www.froggie.sk/download/Vistalizator.exe"
        "Languages.zip::http://www.froggie.sk/download/Languages.zip")
sha512sums=('0d9c8ad7aa400183ba4be559d2e4eeafd137e068a8fe70f79c7b9f721fe21ceffee6a70abfdc72a627a10f97c35d1a6606702df52b8d77293beb25b46efa2012'
            '5f2d87a16a8f5880bedc3e7430c8a1c71f7fd1e3ad7e82dbabb855cf34d41cfce7a3344bec05d5a5649cff5d6278300bb56cb5e37b70fd8a61272ba8a06aa01c')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

pkgver() {
    b="$(cygpath -wa "Vistalizator.exe" | sed 's/\\/\\\\/g')"
    wmic datafile where name=\""${b}"\" get version | grep 'Version' -A 1 | tail -1 | tr -d ' ' | sed -r 's/([0-9]+)[.]([0-9]+)[.]([0-9]+).0$/\1.\2\3/'
}

prepare() {
    _lc *
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r *.exe "languages" "${a}"
}
