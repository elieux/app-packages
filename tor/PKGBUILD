_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=tor
_realver=12.0.2
_choconame=tor
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=0.4.7.13
pkgrel=1
pkgdesc="Anonymizing overlay network"
url="https://www.torproject.org/"
arch=('any')
license=('BSD')
replaces=("app-i686-${_realname}")
makedepends=("binutils")
provides=("${pkgbase}")
options=(!strip)
source=("tor-expert-bundle-windows-x86_64.tgz::https@subdir://dist.torproject.org/torbrowser/${_realver}/tor-expert-bundle-${_realver}-windows-x86_64.tar.gz")
sha512sums=('6d2008710abf33b1c703d9bcc0d53245224afe00de30e9f3f6982d2d87229845bed5f2c9ef59bb34212d987ccc688aea44e69dcc8d40e3fe49f0397158a791e4')

pkgver() {
    strings -d "tor-expert-bundle-windows-x86_64/tor/tor.exe" | grep -Fx -A1 VERSION | tail -1
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "tor-expert-bundle-windows-x86_64"/* "${a}"
}
