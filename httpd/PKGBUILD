# without user-agent, it redirects to localhost
DLAGENTS=('https::/usr/bin/curl -qb "" -fLC - -H user-agent:Mozilla -o %o %u')

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=httpd
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=2.4.46
pkgrel=1
pkgdesc="A high performance Unix-based HTTP server"
url="https://httpd.apache.org/"
arch=('any')
license=('Apache')
provides=("${pkgbase}")
options=(!strip)
source=("httpd-win64-VS16.zip::https@subdir://www.apachelounge.com/download/VS16/binaries/httpd-${pkgver}-win64-VS16.zip")
sha512sums=('bf38992fa5b4646e15dbbea56cf01604c0061506fd2b8ad4060da60c08b8c362b4cfae88ce609a18e88967bf7e24d8099ff9ab660dbc8ed6da6350be7839fb00')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "httpd-win64-VS16"/* "${a}"
    mv "${a}/ReadMe.txt" "${a}/ReadMe_ApacheLounge.txt"
    rm "${a}/-- Win64 VS16  --"
    mv "${a}/Apache24"/* "${a}"
    rm -R "${a}/Apache24" "${a}/conf/original" "${a}/logs"
    _lc "${a}"/*
}
