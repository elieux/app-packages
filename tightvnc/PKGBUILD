# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=tightvnc
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=2.8.5
pkgrel=1
pkgdesc="Light weight VNC implementation"
url="http://www.tightvnc.com/"
arch=('any')
license=('GPL2')
provides=("${pkgbase}")
options=(!strip)
source=("tightvnc-setup-64bit.msi::http://www.tightvnc.com/download/${pkgver}/tightvnc-${pkgver}-gpl-setup-64bit.msi"
        "tightvnc-setup-32bit.msi::http://www.tightvnc.com/download/${pkgver}/tightvnc-${pkgver}-gpl-setup-32bit.msi")
sha512sums=('0e5a213ce0a161d6706184d036d7bf421f5a49fa5edd09692c66a317cc4e9bd7557bcf0775759756729da9d2d1134d4f02ef33cfbb015823d0128e4c5293fdb2'
            '79abd88ac2786ed2242520fa1f65fb6f8683bcb095e23021adbede54bf3a5fd24d3edfee23f09b219748b4a7bc0a44c4a6ea1e79991476ead18ed1886b507a0e')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_build() {
    msiexec -a "tightvnc-setup-${_apparch}bit.msi" "TARGETDIR=$(cygpath -wa "install${_apparch}")" -qn
}

build() {
    for _apparch in 32 64
    do
        _build
    done
}

_package() {
    s="install${_apparch}/PFiles/TightVNC"

    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "${s}"/*.{exe,dll} "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    cp "${s}"/*.{txt,url} "${d}"
}

package_app-i686-tightvnc() {
    _apparch=32
    _package
}

package_app-x86_64-tightvnc() {
    _apparch=64
    _package
}
