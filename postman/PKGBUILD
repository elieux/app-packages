# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=postman
_choconame=postman
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=10.6.0
pkgrel=1
pkgdesc="Client for the Slack team communication platform"
url="https://www.postman.com/"
arch=('any')
license=('custom')
makedepends=("p7zip" "unzip")
provides=("${pkgbase}")
options=(!strip)
source=("Postman-win64-Setup.exe::https://dl.pstmn.io/download/latest/win64")
sha512sums=('a9f98b3b0671f7ded8a3ddcc47c45aa30c446919f32927923c34e9c8624f561d00d31853bd513e1ddc50cfc954e59fe5d63983452ccf9fa1d6c09ace828fbdd9')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids|atomic_wait))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_[0-9])?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

prepare() {
    rm -fR "Postman-win64-Setup.dir"
    7z x -y -bd "Postman-win64-Setup.exe" -o"Postman-win64-Setup.dir" > /dev/null
    unzip -q -o "Postman-win64-Setup.dir/Postman"-*-"full.nupkg" -d "Postman-full"
}

pkgver() {
    powershell -command '(Get-Item "Postman-win64-Setup.exe").VersionInfo.ProductVersion'
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "Postman-full/lib/net45"/* "${a}"
    rm -R "${a}/resources/data/git"
    _rmmsdll "${a}"
    _lc "${a}"/*
}
