_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

_realname=keepass-plugin-keeagent
_choconame=keepass-plugin-keeagent
_dirname=keepass
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=0.13.7
pkgrel=1
pkgdesc="A KeePass plugin that acts as a SSH authentication agent"
url="https://lechnology.com/software/keeagent/"
arch=('any')
license=('unknown')
provides=("${pkgbase}")
options=(!strip)
source=("KeeAgent.zip::https@subdir://github.com/dlech/KeeAgent/releases/download/v${pkgver}/KeeAgent_v${pkgver}.zip")
sha512sums=('243a5d922189221f20f7f356efdf44c69a99d039f9707f697954263b7cd90611465339b88f52b48d1cc2f69f7b381e4a41bec767c669b9349a1d71ceb76c57f5')

package() {
    depends=("app-keepass")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/Plugins" "${a}/Plugins/keeagent"
    cp -R "KeeAgent"/* "${a}/Plugins/keeagent"
    mv "${a}/Plugins/keeagent"/*.{dll,plgx} "${a}/Plugins"
}
