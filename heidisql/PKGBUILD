_chocover() {
    # choco version format: 12.3.0.6589
    echo "${1}" | sed -r -e 's/^([0-9]+)[.]([0-9]+)[.]0[.][0-9]+$/\1.\2/'
}

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=heidisql
_choconame=HeidiSQL
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=12.4
pkgrel=1
pkgdesc="Free relational database graphical client"
url="https://www.heidisql.com/"
arch=('any')
license=('GPL2')
provides=("${pkgbase}")
options=(!strip)
source=("HeidiSQL_64_Portable.zip::https@subdir://www.heidisql.com/downloads/releases/HeidiSQL_${pkgver}_64_Portable.zip")
sha512sums=('41a8f19be2865ec29b1485e84627969f450a020fb07e25ffc19cb01faa5d0e50c6f2b7ce938e502f112fa53ada40c0901f785df9d6759d035a96541f6f62f618')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "HeidiSQL_64_Portable"/* "${a}"
    rm "${a}/portable.lock"
    rm "${a}/plink.exe"
}
