_realname=keepass-plugin-twofish-cipher
_dirname=keepass
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=1.3
pkgrel=2
pkgdesc="A KeePass plugin that enables to encrypt databases using the Twofish algorithm"
url="http://gogogadgetscott.info/keepass/twofishcipher/"
arch=('any')
license=('GPL3')
depends=("app-i686-keepass")
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("TwofishCipher.zip::http://gogogadgetscott.info/keepass/twofishcipher/TwofishCipher-${pkgver}.zip")
sha512sums=('a9ec7b5d1cd38e791ea590d2dfe7ec5aef8777d7f59a1900097736bc5d2c4478e3cfe6d71473bf38d0bef90e6546641f925b0aaa55f014a4ebfde71dc2875d99')

package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}/plugins" "${a}/plugins/twofish-cipher"
    cp *.plgx "${a}/plugins"
    cp *.txt "${a}/plugins/twofish-cipher"
}
