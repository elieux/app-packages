# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_dirname=xnview
_realname=xnshell
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=4.15.0
pkgrel=1
pkgdesc="A powerful shell extension with image preview and transforms"
url="https://www.xnview.com/en/xnshell/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("XnShellEx64.zip::https@subdir://download.xnview.com/XnShellEx64.zip"
        "XnShellEx.zip::https://download.xnview.com/XnShellEx.zip")
sha512sums=('a141acb5322ff98ec285df1aed53a0cb06ab219b9a668aac1b097fbe12d7be3b7155994e40e01ff6b2c046d0437b196bf71ef8652bc605182515c268f352ab36'
            '1c91a574433d15f7927f49201f7aacc4a7f7c5ba61b32bf1c2f12ad050f570f14ac70f8a630d352b8b512be8c327e73785534690acb6d9641d1c3e88c11f84b5')

_eqver() {
    local r v

    for v in "${@}"
    do
        if [ -n "${r}" -a "${r}" != "${v}" ]
        then
            echo "Version mismatch between ${r} and ${v}."
        fi
        r="${v}"
    done
    echo "${r}"
}

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids|atomic_wait))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_[0-9])?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

pkgver() {
    local _ver64="$(powershell -command '(Get-Item "XnShellEx64/XnShellEx/XnViewShellExt64.dll").VersionInfo.ProductVersionRaw.ToString()')"
    local _ver32="$(powershell -command '(Get-Item "XnShellEx/XnViewShellExt.dll").VersionInfo.ProductVersionRaw.ToString()')"
    _eqver "${_ver64}" "${_ver32}" | sed -r 's/([0-9]+)[.]([0-9]+)[.]([0-9]+)[.]([0-9]+)/\1.\2\3.\4/'
}

package() {
    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}" "${a}/ShellEx64" "${a}/ShellEx"
    cp -R "XnShellEx64/XnShellEx"/* "${a}/ShellEx64"
    cp -R "XnShellEx"/* "${a}/ShellEx"
    _rmmsdll "${a}"
    _lc "${a}"/*
}
