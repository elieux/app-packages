# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=7zip
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=9.38
pkgrel=4
pkgdesc="A free file archiver for extremely high compression"
url="http://www.7-zip.org/"
arch=('any')
license=('LGPL2' 'custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("7z32.msi::http://7-zip.org/a/7z${pkgver//./}.msi"
        "7z64.msi::http://7-zip.org/a/7z${pkgver//./}-x64.msi"
        "7zextra.7z::http://7-zip.org/a/7z${pkgver//./}-extra.7z")
sha512sums=('eb079ca091ac70f4c0cc173e6138ae795b1e562db24e9f637df8a9b522c4e769855a774a385c63796d3d281a2fe9e717ed7f5e297021ce25f7fd9fe107cc96ed'
            'd8a5514236e599384e96d62eb5920334e65b7c02d43a26582479c159591873e41b3af406b952f7574ffeadcfd5aa3de79d44f945bee26072ce99afd39bf11b32'
            '6bcf3235ebf50887a8f17240401ac40a5e37664295a4fb61189f91a4819bcdee17be28ea355375f93b8d0094a275e97385479acb0f06f9cd45eac0498542c62e')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

prepare() {
    _lc *
}

_build() {
    msiexec -a "7z${_apparch}.msi" "TARGETDIR=$(cygpath -wa "install${_apparch}")" -qn
    _lc "install${_apparch}/Files/7-Zip"/*
}

build() {
    for _apparch in 32 64
    do
        _build
    done
}

_package() {
    s="install${_apparch}/Files/7-Zip"

    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "${@}" "${s}/lang" "${s}"/*.{exe,dll,sfx} "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}" "${d}/extra"
    cp "${s}"/*.{chm,txt,ion} "${d}"
    cp *.txt "${d}/extra"
}

package_app-i686-7zip() {
    _apparch=32
    _package *.{dll,exe}
}

package_app-x86_64-7zip() {
    _apparch=64
    _package "x64"/*.{dll,exe}
}
