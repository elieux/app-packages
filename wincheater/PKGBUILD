DLAGENTS=('http::/usr/bin/curl -qb "" -fLC - -e "http://www.cheater.cz/" -o %o %u')

_realname=wincheater
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=2.07
pkgrel=3
pkgdesc="Video game cheats and guides database viewer"
url="http://www.cheater.cz/wincheater2/info/"
arch=('any')
license=('custom')
depends=("app-i686-wincheater-data-base")
optdepends=("app-i686-wincheater-data-libs: Databases")
makedepends=("app-i686-innounp")
provides=("${pkgbase}")
options=(!strip)
source=()


_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_dl() {
    pushd "${SRCDEST}" &> /dev/null
    download_file "${1}"
    popd &> /dev/null
}

_dlread() {
    tmp=".tmp"

    rm -f "${SRCDEST}/${tmp}"
    _dl "${tmp}::${1}" &> /dev/null
    cat "${SRCDEST}/${tmp}"
    rm "${SRCDEST}/${tmp}"
}

pkgver() {
    powershell -command '(Get-Item "WinCheater2_setup.exe").VersionInfo.FileDescription' | sed -r 's/^Scorpions WinCheater ([0-9]+[.][0-9]+)/\1/' | cut -d' ' -f1
}

prepare() {
    n="winch2-setup"
    f="$(_dlread "http://www.cheater.cz/download/get-name.php?soubor=${n}")"
    h="$(_dlread "http://www.cheater.cz/download/get-link.php?soubor=${n}" | sed -r 's/.*hash=([a-z0-9]+).*/\1/')"
    if [ "${f}" = "????" ]
    then
        f="${i}.exe"
    fi
    _dl "${f}::http://www.cheater.cz/download/download-file.php?hash=${h}"
    source+=("${f}")
    noextract+=("${f}")
    extract_sources

    /apps32/innounp/innounp -x -q -m -a -y "WinCheater2_setup.exe"
    _lc "{app}"/*
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "{app}"/* "${a}"
    rm "${a}/texty.sct" "${a}"/*.sc2
}
