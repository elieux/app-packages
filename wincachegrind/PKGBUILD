# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=wincachegrind
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1.1
pkgrel=1
pkgdesc="A viewer for cachegrind.out files generated by Xdebug"
url="https://ceefour.github.io/wincachegrind/"
arch=('any')
license=('GPL3')
provides=("${pkgbase}")
options=(!strip)
source=("wincachegrind.zip::https@subdir://github.com/ceefour/wincachegrind/releases/download/${pkgver}/wincachegrind-${pkgver}.zip")
sha512sums=('07886b5a6056320e492a52e4ca1f050f21136db438b941744fc80e5978365060f15cf7f4d79964084d68d4261cc5097a27475d8dcb8f12437ddc5a9c55c4e30f')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "wincachegrind"/* "${a}"
    _lc "${a}"/*
}
