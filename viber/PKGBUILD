# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=viber
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=11.9.1.3
pkgrel=1
pkgdesc="Free messages and calls in any country"
url="https://www.viber.com/download/"
arch=('any')
license=('custom')
makedepends=("app-lessmsi" "app-wix")
provides=("${pkgbase}")
options=(!strip)
source=("ViberSetup.exe::https://download.cdn.viber.com/desktop/windows/ViberSetup.exe")
sha512sums=('a92003c957dc976cde035000f8efc9cde587855b06befbbcccd7a214867738277c5945286d706dd4549af70d5a3e5e68d16d60e5e7acae7a8eef6fb5e3d6f863')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+"
        "vc([ao]mp|corlib|runtime)[0-9]+"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

prepare() {
    /apps/wix/dark -x . "ViberSetup.exe"
    rm -fR "ViberSetup"
    /apps/lessmsi/lessmsi x "AttachedContainer\\ViberSetup.msi"
    _lc "AttachedContainer/ViberSetup/SourceDir/Viber"/*
}

pkgver() {
    "${SYSTEMROOT}/System32/WindowsPowerShell/v1.0/powershell" -command '(Get-Item "AttachedContainer/ViberSetup/SourceDir/Viber/viber.exe").VersionInfo.FileVersionRaw.ToString()' | dos2unix
}

package() {
    a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "AttachedContainer/ViberSetup/SourceDir/Viber"/* "${a}"
    _rmmsdll "${a}"
}
