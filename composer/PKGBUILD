# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=composer
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=2.9.1
pkgrel=1
pkgdesc="A dependency manager for PHP"
url="https://getcomposer.org/"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("composer.phar::https://github.com/composer/composer/releases/download/${pkgver}/composer.phar")
sha512sums=('16949b1eb017e56abda18c6e68679e370bf21ddfc6fe10fb4dff6f32c5e1703b7e44cbe8f1dc849d4e6dcb21ea1d5b85fcfe860d47c87f6626e2800b09155389')

package() {
    depends=("app-php")

    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp "composer.phar" "${a}"
}
