# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=unetbootin
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=655
pkgrel=1
pkgdesc="Create bootable Live USB drives"
arch=('any')
url="https://unetbootin.github.io/"
license=('GPL')
provides=("${pkgbase}")
options=(!strip)
source=("unetbootin-windows.exe::http://launchpad.net/unetbootin/trunk/${pkgver}/+download/unetbootin-windows-${pkgver}.exe")
sha512sums=('b6157207357097cf278a6a8363181305d0ddce8b7b55fec9bc10bdf5b2c7490ca8c21b62d34026789c478a611c50d69f2b0f00cb408fcbcedd9b1f0acf30f632')

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp unetbootin-windows.exe "${a}/unetbootin.exe"
}
