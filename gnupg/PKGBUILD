# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=gnupg
_realver=2.2.5_20180222
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=${_realver%%_*}
pkgrel=1
pkgdesc="Complete and free implementation of the OpenPGP standard"
url="http://www.gnupg.org/"
arch=('any')
license=('custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("gnupg-w32.exe::ftp://ftp.gnupg.org/gcrypt/binary/gnupg-w32-${_realver}.exe")
sha512sums=('dc4d261033eafe2f3cf3f1f7ea78d21d09b6d8095be083034ad9197c949a2121c59631f2cf31ba92f61d2afd5f2ca3c123c14b6648b0fd10613bd423697eaa28')

prepare() {
    7z x -y -bd "gnupg-w32.exe"
}

package() {
    a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -r "bin" "include" "lib" "share" "${a}"
    find "${a}" -iname '*.tmp' -delete
    cp -r "README.txt" "${a}"
}
