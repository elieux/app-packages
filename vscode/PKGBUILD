# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=vscode
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=1.21.1
pkgrel=1
pkgdesc="Editor for building and debugging modern web and cloud applications"
arch=('any')
url="https://code.visualstudio.com/"
license=('custom')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("VSCode-win32.zip::https://vscode-update.azurewebsites.net/${pkgver}/win32-archive/stable"
        "VSCode-win64.zip::https://vscode-update.azurewebsites.net/${pkgver}/win32-x64-archive/stable")
sha512sums=('4ab3ea40ec7ed969156cb30cc907b7aaf1187a1a218b57a761a07f8c3e50c67d24a79f0fa8c02ef6dd03cd3707c0f93666f97ea21849f3002fa069bb8071c186'
            'a3360dc05cf1ff7faa8f1a46ad76266d5a075a6507713e108a611d50d341e50bdc84a1b55bae82c3ab603cedafc5acea74d11709c12a72d7067808fe13bc4ae4')
noextract=("VSCode-win32.zip"
           "VSCode-win64.zip")

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+"
        "vc([ao]mp|corlib|runtime)[0-9]+"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

_prepare() {
    unzip -o "VSCode-win${_apparch}.zip" -d "vscode${_apparch}"
    _lc "vscode${_apparch}"/*
}

prepare() {
    for _apparch in 32 64
    do
        _prepare
    done
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "vscode${_apparch}"/* "${a}"
    _rmmsdll "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    mv "${a}/resources/app"/*.{html,txt} "${a}/resources/app/licenses"/* "${d}"
    rm -r "${a}/resources/app/licenses"
}

package_app-i686-vscode() {
    _apparch=32
    _package
}

package_app-x86_64-vscode() {
    _apparch=64
    _package
}
