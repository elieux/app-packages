_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=innounp
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=2.65.2.0
pkgrel=1
pkgdesc="Inno Setup unpacker"
url="https://www.rathlev-home.de/index-e.html?tools/prog-e.html#unpack"
arch=('any')
license=('MIT' 'GPL')
provides=("${pkgbase}")
options=(!strip)
source=("innounpacker.zip::https@subdir://www.rathlev-home.de/tools/download/innounpacker.zip")
sha512sums=('00c77aa9570dbe4e7491d76093210bec5c67097e933ab5f31fbb2d666b749bdf95482c2252dede68813640fa7a68d052a2554a73f4913dba88d7cae81e2d80c1')

pkgver() {
    powershell -command '(Get-Item "innounpacker/innounp.exe").VersionInfo.ProductVersionRaw.ToString()'
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp "innounpacker"/* "${a}"
}
