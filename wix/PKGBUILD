# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=wix
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=3.11.1
pkgrel=1
pkgdesc="Builds Windows installation packages from XML source code"
url="http://wixtoolset.org/"
arch=('any')
license=('custom')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("wix-binaries.zip::https://github.com/wixtoolset/wix3/releases/download/wix${pkgver//./}rtm/wix$(echo "${pkgver}" | sed -r 's/([0-9]+)[.]([0-9]+)[.]([0-9]+)/\1\2/')-binaries.zip")
sha512sums=('a8c3c2243489fc79e7a18b321ed03133354d43620dd265f087d32ba508f7baf769d32d12b1ccbc22f924573e205ebda7fd8d8ca5e35d5d4a7181af4997657a20')

package() {
    a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -r * "${a}"
    rm "${a}"/*.zip
}
