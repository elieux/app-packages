# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=viber
_choconame=viber
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=14.8.0.3
pkgrel=1
pkgdesc="Free messages and calls in any country"
url="https://www.viber.com/download/"
arch=('any')
license=('custom')
makedepends=("app-lessmsi" "app-wix")
provides=("${pkgbase}")
options=(!strip)
source=("ViberSetup.exe::https://download.cdn.viber.com/desktop/windows/ViberSetup.exe")
sha512sums=('b1668e9df07983e4460dfef477e81b5d8f6cfd28be7e42590b8162e1fd32b93e62266de43b7e7cffe067f5d0f6832c0cb8dfa0d447ab176c33604bc495210b99')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_[0-9])?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

prepare() {
    /apps/wix/dark -x "ViberSetup.dir" "ViberSetup.exe"
    cd "ViberSetup.dir/AttachedContainer"
    rm -fR "ViberSetup"
    /apps/lessmsi/lessmsi x "ViberSetup.msi" > /dev/null
}

pkgver() {
    powershell -command '(Get-Item "ViberSetup.dir/AttachedContainer/ViberSetup/SourceDir/Viber/viber.exe").VersionInfo.FileVersionRaw.ToString()'
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "ViberSetup.dir/AttachedContainer/ViberSetup/SourceDir/Viber"/* "${a}"
    _rmmsdll "${a}"
    _lc "${a}"/*
}
