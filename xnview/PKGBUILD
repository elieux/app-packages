# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=xnview
_choconame=XnView
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=2.52.2
pkgrel=1
pkgdesc="An efficient multimedia viewer, browser and converter"
url="https://www.xnview.com/en/xnview/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("XnView-win-full.zip::https://download3.xnview.com/XnView-win-full.zip")
sha512sums=('a8478e3582a16513dbb5723f53094d93d1740c0af20ff0cbe1c623c7bc8ea1ff194bfe7e76376597e8c400ca13efddb24df61eb10c4abb70f1460bcc1ac2c0e0')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids|atomic_wait))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_([0-9]|threads))?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

pkgver() {
    powershell -command '(Get-Item "XnView/xnview.exe").VersionInfo.ProductVersion'
}

package() {
    depends=("app-xnshell")

    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "XnView"/* "${a}"
    rm -R "${a}/AddOn/Microsoft.VC90.CRT"

    # the separate app-xnshell package usually contains newer versions as well as a 64-bit version
    rm -R "${a}/ShellEx"

    # the separate app-nconvert package usually contains a newer version
    rm "${a}/nconvert.exe"

    _rmmsdll "${a}"
    _lc "${a}"/*
}
