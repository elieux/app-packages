# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=unbound
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1.7.0
pkgrel=1
pkgdesc="Validating, recursive, and caching DNS resolver"
arch=('any')
url="http://unbound.net/"
license=('custom:BSD')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("unbound.zip::https://www.unbound.net/downloads/unbound-${pkgver}.zip")
sha512sums=('0c57f28b69cdcf641608219be8cd6b098651d80446f4d61a3a420eec4a8f47062e947be05773cae7f1b5f235b16c6661fa140696e0e43d70e51ace3c377572d0')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    _lc *
}

package() {
    a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp *.{exe,cmd} "${a}"
    cp *.{txt,conf,url} "license" "${a}"
}
