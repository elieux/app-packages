# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=keepass-plugin-keeautoexec
_dirname=keepass
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=2.0
pkgrel=1
pkgdesc="A KeePass plugin that opens additional databases when opening a database"
url="http://keepass.info/plugins.html#keeautoexec"
arch=('any')
license=('unknown')
depends=("app-i686-keepass")
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("KeeAutoExec.zip::http://keepass.info/extensions/v2/keeautoexec/KeeAutoExec-${pkgver}.zip")
sha512sums=('ec7b929199b9fde550f84f155e1ca34c612a9ac98b0838666417a07492bbc6d36a1c55810c0fba0028f18dda5ea83f4ea99dcfd3cdeb1799c76e4ec1b51b6163')

package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}/plugins"
    cp *.plgx "${a}/plugins"

    d="${pkgdir}/docs${_apparch}/${_dirname}"
    mkdir -p "${d}/plugins/keeautoexec"
    cp *.html "${d}/plugins/keeautoexec"
}
