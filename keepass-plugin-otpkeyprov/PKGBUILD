# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=keepass-plugin-otpkeyprov
_dirname=keepass
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=2.4
pkgrel=1
pkgdesc="A KeePass plugin that allows using OTP codes for master key"
url="http://keepass.info/plugins.html#otpkeyprov"
arch=('any')
license=('unknown')
depends=("app-i686-keepass")
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("OtpKeyProv.zip::http://keepass.info/extensions/v2/otpkeyprov/OtpKeyProv-${pkgver}.zip")
sha512sums=('a63721e5d2ae81786d4e64d316799d066459a53e911fc71558f354aaa67d8199ef2cca1172bfdff86aedfab895ce872e0a06cef4eb2e34ecec69ebaf5639cf86')

package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}/plugins"
    cp *.plgx "${a}/plugins"

    d="${pkgdir}/docs${_apparch}/${_dirname}"
    mkdir -p "${d}/plugins/otpkeyprov"
    cp *.html "${d}/plugins/otpkeyprov"
}
