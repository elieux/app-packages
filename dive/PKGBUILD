# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=dive
_choconame=dive
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=0.12.0
pkgrel=1
pkgdesc="A tool for exploring each layer in a Docker image"
url="https://github.com/wagoodman/dive"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("dive_windows_amd64.zip::https@subdir://github.com/wagoodman/dive/releases/download/v${pkgver}/dive_${pkgver}_windows_amd64.zip")
sha512sums=('a68de3b1960a569be1bf1c138cc27f3f11a00ca126ab9557b625169437ddca7356a21c99dec1233805143acda741f8b1d6cf4cd65f9625c811d70af22f610932')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp "dive_windows_amd64"/* "${a}"
}
