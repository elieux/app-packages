# Maintainer: David Macek <david.macek.0@gmail.com>

DLAGENTS=('https::/usr/bin/curl -k -qb "" -fLC - -o %o %u')

_realname=dropbox
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=63.4.107
pkgrel=1
pkgdesc="The Dropbox synchronization tool"
url="http://www.dropbox.com/"
arch=('any')
license=('custom')
makedepends=("p7zip" "curl")
provides=("${pkgbase}")
options=(!strip)
source=("DropboxOfflineInstaller.exe::https://www.dropbox.com/download?full=1&plat=win")
sha512sums=('69d2724c66ccc25dc7cae12b77d9502fb9a381156f562a8057f50d1a48b20e8a5de0da51eecc51ce944c71faa3bfd0f2f7ed5dda89edacc83e9486a0216c3092')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" -T "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+"
        "vc([ao]mp|corlib|runtime)[0-9]+"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

pkgver() {
    7z x -y -bd "DropboxOfflineInstaller.exe" > /dev/null
    b="$(cygpath -wa "Installer.exe".* | sed 's/\\/\\\\/g')"
    wmic datafile where name=\""${b}"\" get version | grep 'Version' -A 1 | tail -1 | tr -d ' ' | sed -r 's/([0-9]+[.][0-9]+[.][0-9]+)[.]0$/\1/'
}

prepare() {
    7z x -y -bd "DropboxOfflineInstaller.exe"
    7z x -y -bd "Installer.exe".*
    _lc '$0'/*
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r '$0'/* "${a}"
    rm -r "${a}/dropboxuninstaller.exe"
    _rmmsdll "${a}"
    rm "${a}"/msvcp140_{1,2}.dll
}
