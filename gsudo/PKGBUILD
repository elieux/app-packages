# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=gsudo
_choconame=gsudo
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=2.0.8
pkgrel=1
pkgdesc="A Sudo for Windows"
url="https://github.com/gerardog/gsudo"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("gsudo.portable.zip::https@subdir://github.com/gerardog/gsudo/releases/download/v${pkgver}/gsudo.portable.zip")
sha512sums=('4b68792d1c054925ec8ae67782988dc61bd1fe194456ed11cb8a256671f6b45326f6d08da311f1eacecf573f7761c5d0aea7ef48229979df7d3c07d272ecb58a')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "gsudo.portable/x64"/* "${a}"
    sed -i "${a}/gsudo" -e 's/gsudo.exe/sudo.exe/'
    mv "${a}/gsudo.exe" "${a}/sudo.exe"
}
