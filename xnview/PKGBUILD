# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=xnview
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=2.49.1
pkgrel=1
pkgdesc="An efficient multimedia viewer, browser and converter"
url="https://www.xnview.com/en/xnview/"
arch=('any')
license=('custom')
depends=("app-nconvert" "app-xnshell")
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("XnView-win-full.zip::https://download3.xnview.com/XnView-win-full.zip")
sha512sums=('cbc544b4186e727eb9c7f650b51dad269e75a44fdc5e6a7c9e306a9170bdd943a6cbe8ae3f4df22c8c1d6e5c6d83420ce65fff460764b65beb5fa9c57c363763')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    _lc "XnView"/*
}

pkgver() {
    "${SYSTEMROOT}/System32/WindowsPowerShell/v1.0/powershell" -command '(Get-Item "XnView/xnview.exe").VersionInfo.ProductVersion'
}

package() {
    a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "XnView"/* "${a}"
    rm -R "${a}/nconvert.exe" "${a}/addon/Microsoft.VC90.CRT" "${a}/shellex"
    rm "${a}"/{formats,license,plugins,readme,usage,whatsnew}.txt
}
