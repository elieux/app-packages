_realname=nodejs
_choconame=nodejs
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=23.3.0
pkgrel=1
pkgdesc="Evented I/O for V8 javascript"
url="https://nodejs.org/"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("node-win-x64.zip::https://nodejs.org/dist/v${pkgver}/node-v${pkgver}-win-x64.zip")
sha512sums=('fddae949d7cd40c96bde88f07601af71b6a4619b5af84313ac7d943740f60d45761c4707269ffb8ea880322f18409aadef9f36dcbf18eff4c84fc967cf54fdc5')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "node-v${pkgver}-win-x64"/* "${a}"
}
