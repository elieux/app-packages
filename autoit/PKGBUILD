# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=autoit
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=3.3.14.5
pkgrel=2
pkgdesc="A free BASIC-like scripting language for automating Windows GUIs"
url="http://www.autoitscript.com/"
arch=('any')
license=('custom')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("autoit.zip::http://www.autoitscript.com/files/autoit3/autoit-v3.zip")
sha512sums=('eacfc3176c688d3a68f3b7cbf1533a49fc9d2e99ac3fc63480564e61cb007a3382140e46887f63059e7edd5e85e76e733aacfe5938a9fffe3fa902271288498e')

pkgver() {
    b="install/Au3Check.exe"
    b="$(cygpath -wa "${b}" | sed 's/\\/\\\\/g')"
    wmic datafile where name=\""${b}"\" get version | grep 'Version' -A 1 | tail -1 | tr -d '\000 '
}

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    _lc "install/Aut2Exe/Icons"/* "install/Aut2Exe"/* "install/AutoItX/Examples" "install/AutoItX/AutoItX.chm" "install/Icons"/* "install"/*
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}" "${a}/extras/Editors/SciTE"
    cp -r "install"/{include,icons} "install/aut2exe/icons" "install"/au3check.* "install/autoitx"/*.psd1 "install/autoitx"/AutoItX3{_DLL.h,.Assembly.dll,.Assembly.xml,.PowerShell.dll} "install/autoitx/AutoItX3${1}.dll" "install/autoitx/AutoItX3${1}_DLL.lib" "install/aut2exe/aut2exe${1}.exe" "install/au3info${1}.exe" "install/autoit3${1}.exe" "${a}"
    if [ "${1}" != "" ]
    then
        for f in "${a}"/*${1}*
        do
            mv "${f}" "$(echo "${f}" | sed "s/${1}//")"
        done
    fi
    cp -r "install"/{examples,autoitx/examples,extras} "install/autoitx"/*.chm "install"/*.{chm,url} "install/autoit3help.exe" "${a}"
    cp -r "install/scite"/*.properties "install/scite/api" "${a}/extras/editors/SciTE"
}

package_app-i686-autoit() {
    _apparch=32
    _package ""
}

package_app-x86_64-autoit() {
    _apparch=64
    _package "_x64"
}
