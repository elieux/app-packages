# Maintainer: David Macek <david.macek.0@gmail.com>

_dirname=xnview
_realname=nconvert
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=7.39
pkgrel=1
pkgdesc="A powerful command line multi-platform batch image processor"
arch=('any')
url="https://www.xnview.com/en/nconvert/"
license=('custom')
replaces=("app-i686-${_realname}")
provides=("${pkgbase}")
options=(!strip)
source=("NConvert-win64.zip::https://download.xnview.com/NConvert-win64.zip")
sha512sums=('3c47af1481852c8ee19dc3064a17af82dd7ecdbcf2507cc24c9e0a2f933f40c3b1b5016a5d41359dc10d3afd8aeb2c1c2795ff935b47e68a748486ac73d48041')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_[0-9])?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

pkgver() {
    cat "XnView/whatsnew.txt" | head -1 | sed -r 's/^.*NConvert v([0-9.]+).*$/\1/'
}

package() {
    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}"
    cp "XnView"/* "${a}"
    _rmmsdll "${a}"
    _lc "${a}"/*
}
