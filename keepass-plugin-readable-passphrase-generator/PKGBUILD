# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=keepass-plugin-readable-passphrase-generator
_dirname=keepass
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=1.0
pkgrel=1
pkgdesc="A KeePass plugin that generates gramatically correct passphrases"
url="https://bitbucket.org/ligos/readablepassphrasegenerator"
arch=('any')
license=('Apache 2.0')
depends=("app-i686-keepass")
provides=("${pkgbase}")
options=(!strip)
source=("ReadablePassphrase.plgx::https://bitbucket.org/ligos/readablepassphrasegenerator/downloads/ReadablePassphrase%20${pkgver}.0.plgx")
sha512sums=('6612bf2a88d199ff164e9580315bfa79ca0099adb6fb1627f9bb34ea29c884bd63023de47544fc4eca0d4b77d0bb403a9af339ee9ead6b8d8cfc2408fa872cd9')

package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}/plugins"
    cp *.plgx "${a}/plugins"
}
