_chocover() {
    # choco version format: 1.53.4.20210131
    echo "${1}" | sed -r 's/^([0-9]+)[.]([0-9]+)[.]([0-9]+)[.][0-9]{8}$/\1.\2.\3/'
}

_realname=rclone
_choconame=rclone
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=1.55.0
pkgrel=1
pkgdesc="Syncs your files to cloud storage"
url="https://rclone.org/"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("rclone-windows-amd64.zip::https://downloads.rclone.org/v${pkgver}/rclone-v${pkgver}-windows-amd64.zip")
sha512sums=('51428209216cb5dfe20e6d22cd4d273677c164beca959ed4ffc6d25ebe067d6d4373e0f8715ed2954aba1d97825e0af8a4249f20946efb3202e9d7912ea6fa4e')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "rclone-v${pkgver}-windows-amd64"/* "${a}"
}
