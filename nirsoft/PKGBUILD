noextract=("nirsoft_package_enc.zip")

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    unzip -q -P nirsoft9876$ -o nirsoft_package_enc.zip -d "nirsoft_package_enc"
}

pkgver() {
    find . -name '*.exe' -printf '%TY.%Tm.%Td\n' | sort | tail -1
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"

    local d
    for d in $(find . -mindepth 1 -maxdepth 1 -type d | grep -v "nirsoft_package_enc")
    do
        d="$(basename "${d}")"
        u="${d%%-x64}"
        cp "${d}"/* "${a}"
        if test -f "${a}/readme.txt"
        then
            mv "${a}/readme.txt" "${a}/${u}.txt"
        fi
    done
    rm "${a}"/{mswinsck.ocx,regsvr32.exe,psapi.dll,vcsource.zip,main.cpp,main.manifest,resource.h,script1.aps,script1.rc}

    cp -R "nirsoft_package_enc/NirSoft"/* "${a}"
    mv "${a}/x64"/* "${a}"
    rm -R "${a}/x64"

    _lc "${a}"/*
}
