_chocover() {
    # choco version format: 2.31.0
    echo "${1}" | sed -r -e 's/^([0-9]+)[.]([0-9]+)[.]0$/\1.\2/'
}

_realname=screentogif
_choconame=screentogif
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=2.37
pkgrel=1
pkgdesc="Screen, webcam and sketchboard recorder with an integrated editor"
url="https://www.screentogif.com/"
arch=('any')
license=('MS-PL')
replaces=("app-i686-${_realname}")
provides=("${pkgbase}")
options=(!strip)
source=("ScreenToGif.Portable.x64.zip::https://github.com/NickeManarin/ScreenToGif/releases/download/${pkgver}/ScreenToGif.${pkgver}.Portable.x64.zip")
sha512sums=('fde5a6b5b2273b1faccd7d1580a629589d43aacbd1ca0563643d870e697a7cb33ba1ae69db07da1ba2ffff34a8f4f4f63cdbe9b8f40f38ed17d3a6dbb6b9e523')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp "ScreenToGif.exe" "${a}"
    _lc "${a}"/*
}
