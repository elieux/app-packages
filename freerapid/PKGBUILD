# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=freerapid
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=0.9u4
pkgrel=2
pkgdesc="A Java-based download manager for Rapidshare and other file sharing archives"
arch=('any')
url="http://wordrider.net/freerapid/"
license=('GPL')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip) # upx
source=("FreeRapid.zip::http://files.kral.hk/frd/FreeRapid-${pkgver}.zip")
md5sums=('a067ecbd37ac7c83a795c34a3dc6388f')

package() {
    mkdir -p "${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${pkgdir}/docs${_apparch}/${_realname}"

    cp -R "${srcdir}"/FreeRapid-${pkgver}/{lib,lookandfeel,search,tools,frd.*,instplgs.dat,objectdb.conf,*.properties} "${pkgdir}/apps${_apparch}/${_realname}/"
    cp -R "${srcdir}"/FreeRapid-${pkgver}/{doc,copyright,License,readme.txt} "${pkgdir}/docs${_apparch}/${_realname}/"
}
