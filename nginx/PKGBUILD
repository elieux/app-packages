# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=nginx
_choconame=nginx
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1.25.0
pkgrel=1
pkgdesc="Lightweight HTTP server and IMAP/POP3 proxy server"
url="https://nginx.org/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("nginx.zip::https://nginx.org/download/nginx-${pkgver}.zip")
sha512sums=('024502ddf141dde163fab035d2f008ef88c415837a1b0b775dfedb4934a8b5dad984e0327052c5c3885d85cfa280b2406338fbbcccad7e9e71136df750991fee')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "nginx-${pkgver}"/* "${a}"
    rm -R "${a}"/{logs,temp}
}
