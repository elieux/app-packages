# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=crystaldiskmark
_realver=68624
_dirname=crystal
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=6.0.0
pkgrel=1
pkgdesc="A disk benchmarking software (Crystal Dew World)"
url="http://crystalmark.info/software/CrystalDiskMark/index-e.html"
arch=('any')
license=('MIT')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("CrystalDiskMark.zip::https://osdn.net/dl/crystaldiskmark/CrystalDiskMark${pkgver//./_}.zip")
sha512sums=('41dfe6f639d2b97527e83f7069c97c6bac61764e728fb4d994f45fca5de9c4a987b40d2b3d69a9a3d0069260f84fc667d7f4416acf39b5872dc5dfe9ee8c7e73')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    _lc *
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}"
    cp "diskmark${_apparch}.exe" "${a}/crystaldiskmark.exe"
    cp -r "cdmresource" "${a}"
    rm "${a}/cdmresource/diskspd"/*
    cp "cdmresource/diskspd/diskspd${_apparch}.exe" "${a}/cdmresource/diskspd"
}

package_app-i686-crystaldiskmark() {
    _apparch=32
    _package
}

package_app-x86_64-crystaldiskmark() {
    _apparch=64
    _package
}
