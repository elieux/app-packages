# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=skype
_choconame=skype
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=8.77.0.97
pkgrel=1
pkgdesc="P2P software for high-quality voice communication"
url="https://www.skype.com/"
arch=('any')
license=('custom')
makedepends=("app-innounp")
provides=("${pkgbase}")
options=(!strip)
source=("Skype.exe::https://download.skype.com/s4l/download/win/Skype-${pkgver}.exe")
sha512sums=('cba72d90e5b1c3a475ce3ae12bd573e468714fb4eff8f4f561b59bb76a209202c9de43972df169550da7e3a6e0e2f6956f987de033f1700d9d5a1a7545659fe9')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids|atomic_wait))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_[0-9])?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

prepare() {
    /apps/innounp/innounp -x -q -m -a -y "Skype.exe" -d"Skype.dir"
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "Skype.dir/{app}"/* "${a}"
    _rmmsdll "${a}"
    _lc "${a}"/*
}
