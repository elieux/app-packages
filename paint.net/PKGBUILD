# Maintainer: David Macek <david.macek.0@gmail.com>

DLAGENTS=('https::/usr/bin/curl -qb "" -fLC - -k -o %o %u')

_realname=paint.net
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=4.0.21
pkgrel=2
pkgdesc="A free image and photo editing software"
url="https://www.getpaint.net"
arch=('any')
license=('custom')
makedepends=("xdelta3" "unzip" "p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("paint.net.zip::https://www.dotpdn.com/files/paint.net.${pkgver}.install.zip"
        "0001-use-system-ucrt.xd3")
sha512sums=('c266c1167cbabe653c3537d2b479681541c523968dd01cb872cd7cee8b3a633ea13216446ae551065569ef539f699cb000ec4fa489659fd14ca76b3e2b99d270'
            '8455c8d8ee1d61dc2392570e245a70e0fe200ba299ef616d3cee45be7eaca041cbfddd8733dd67b055991399be93bd2bd797695a7d6632d63ef0ca7839edd48a')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    7z x -y -bd "paint.net.${pkgver}.install.exe"
    mv -f "PaintDotNet_x86.msi" "PaintDotNet_x32.msi"
}

_build() {
    msiexec -a "PaintDotNet_x${_apparch}.msi" "TARGETDIR=$(cygpath -wa "install${_apparch}")" -qn
    _lc "install${_apparch}"/*
    attrib -r //s
    xdelta3 -f -e -s "install${_apparch}/paintdotnet.systemlayer.dll" 0001-use-system-ucrt.xd3 "install${_apparch}/paintdotnet.systemlayer.dll"
}

build() {
    for _apparch in 32 64
    do
        _build
    done
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "install${_apparch}"/* "${a}"
    rm -r "${a}/sxs" "${a}"/*.{msi,pdb}
    mkdir "${a}"/{effects,filetypes,shapes}
}

package_app-i686-paint.net() {
    _apparch=32
    _package
}

package_app-x86_64-paint.net() {
    _apparch=64
    _package
}
