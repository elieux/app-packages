_realname=keepass-plugin-keetheme
_choconame=keepass-plugin-keetheme
_dirname=keepass
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=0.6.12
pkgrel=1
pkgdesc="Change the appearance of KeePass, to make it look better at night"
url="https://github.com/xatupal/KeeTheme"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("KeeTheme.plgx::https://github.com/xatupal/KeeTheme/releases/download/v${pkgver}/KeeTheme.plgx")
sha512sums=('15dc87a1ecbd57f4a3f07cb8d2b1820d379053955f6dfee32e79240ba760c3462224b9db79a4230bf816b4855861ce26a67f4fe8167432adb1f39873f26bb416')

package() {
    depends=("app-keepass")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/Plugins"
    cp *.plgx "${a}/Plugins"
}
