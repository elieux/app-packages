# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=nginx
_choconame=nginx
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1.23.4
pkgrel=1
pkgdesc="Lightweight HTTP server and IMAP/POP3 proxy server"
url="https://nginx.org/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("nginx.zip::https://nginx.org/download/nginx-${pkgver}.zip")
sha512sums=('ff56a89fe854996af2d1f38f50b057cce5265ddc19e0979098e5b4cb56fd714c419df98c83c4732b94fb1c3e7c0c9f579d2a83ba9dff195db345b0f5a5f6e772')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "nginx-${pkgver}"/* "${a}"
    rm -R "${a}"/{logs,temp}
}
