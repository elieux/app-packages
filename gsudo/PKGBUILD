# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=gsudo
_choconame=gsudo
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=1.0.2
pkgrel=1
pkgdesc="A Sudo for Windows"
url="https://github.com/gerardog/gsudo"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("gsudo.zip::https@subdir://github.com/gerardog/gsudo/releases/download/v${pkgver}/gsudo.v${pkgver}.zip")
sha512sums=('473663ba5ed598e45ae6c6b5b68b32f8e2515ce167761372131f05ca7ece8a53d049cae8ecdc811475db7a4379d32c2c8645c037284f10d251625e2805f478bd')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "gsudo"/* "${a}"
    mv "${a}/gsudo" "${a}/sudo"
    mv "${a}/gsudo.exe" "${a}/sudo.exe"
}
