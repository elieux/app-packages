# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=php-ext-imagick
_dirname=php
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=3.6.0
pkgrel=2
pkgdesc="PHP extension to create and modify images using the ImageMagick library"
url="https://pecl.php.net/package/imagick"
arch=('any')
license=('PHP')
provides=("${pkgbase}")
options=(!strip)
source=("php_imagick-8.0-nts-vs16-x64.zip::https@subdir://windows.php.net/downloads/pecl/releases/imagick/${pkgver}/php_imagick-${pkgver}-8.0-nts-vs16-x64.zip")
sha512sums=('b16c063b00236bc94b3e35401dacc0d2d185b80bc6322b7f29746c50e75b87ce93bd6645c2b4db2625d5d1280433b3567fb0ef286c478d42e8d276d3970e7908')

package() {
    depends=("app-x86_64-php>=1~8.0.0" "app-x86_64-php<1~8.1.0")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/ext" "${a}/ext/imagick"
    cp -R "php_imagick-8.0-nts-vs16-x64"/* "${a}/ext/imagick"
    rm "${a}/ext/imagick"/*.pdb
    mv "${a}/ext/imagick/php_imagick.dll" "${a}/ext"
    mv "${a}/ext/imagick"/*.dll "${a}"
}
