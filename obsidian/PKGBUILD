# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=obsidian
_choconame=obsidian
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=1.11.7
pkgrel=1
pkgdesc="A powerful knowledge base that works on top of a local folder of plain text Markdown files"
url="https://obsidian.md/"
arch=('any')
license=('custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("Obsidian.exe::https://github.com/obsidianmd/obsidian-releases/releases/download/v${pkgver}/Obsidian-${pkgver}.exe")
sha512sums=('6598adb1a9b77281f3d92d79765829643dcbf1e3b1f11f3e82390a8f74fdd9be6147a8f12891170154f1c7848b342524af0d4687a83cadf55753f5d771032473')
noextract=("Obsidian.exe")

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    rm -fR "Obsidian.dir"
    7z x -y -bd "Obsidian.exe" -o"Obsidian.dir" > /dev/null
    7z x -y -bd "Obsidian.dir"/'$PLUGINSDIR'/"app-64.7z" -o"app-64" > /dev/null
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "app-64"/* "${a}"
    _lc "${a}"/*
}
