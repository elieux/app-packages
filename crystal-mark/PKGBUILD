# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=crystalmark
_dirname=crystal
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=2004R7
pkgrel=2
pkgdesc="A benchmarking software (Crystal Dew World)"
url="http://crystalmark.info/software/CrystalMark/index-e.html"
arch=('any')
license=('custom')
depends=("app-i686-crystalsysinfo")
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("CrystalMark.zip::http://crystalmark.info/download/archive/CrystalMark/CrystalMark${pkgver}.zip")
sha512sums=('2a1eb4ba35e3238dc67617db7e7af83089f5d26b542891ff02b11a44049b6c8bedc2256868cc605ee7953fece14020b79445c420524363c95b0c6d177696a894')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    _lc *
    rm -r "data" *sysinfo*
}

package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}" "${a}/mark"
    cp -r "template" *.{dll,exe,gld,gc2} "${a}"
    cp *.txt "${a}/mark"
}
