# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=vivaldi
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=1.0.94.2
pkgrel=1
pkgdesc="A new browser for our friends"
url="https://vivaldi.com/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip) # digital signatures
source=("Vivaldi_TP2.exe::https://vivaldi.com/download/Vivaldi_TP2_${pkgver}.exe")
md5sums=('6121b74d2a3433506ea44a50a8e47fad')

prepare() {
    cd "${srcdir}"
    7z x -y -bd "Vivaldi_TP2.exe"
    7z x -y -bd "vivaldi.7z"

    for f in "Vivaldi-bin"/* "Vivaldi-bin/${pkgver}"/*
    do
        n=$(echo "${f}" | tr 'A-Z' 'a-z')
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

package() {
    mkdir -p "${pkgdir}/apps${_apparch}/${_realname}"

    cp "${srcdir}/Vivaldi-bin"/*.exe "${pkgdir}/apps${_apparch}/${_realname}/"
    cp -r "${srcdir}/Vivaldi-bin/${pkgver}"/* "${pkgdir}/apps${_apparch}/${_realname}/"
}
