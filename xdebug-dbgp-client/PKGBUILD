# Maintainer: David Macek <david.macek.0@gmail.com>

_dirname=xdebug-dbgp-tools
_realname=xdebug-dbgp-client
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=0.4.1 # determined by running the .exe
pkgrel=1
pkgdesc="DBGp client from Xdebug"
url="https://xdebug.org/docs/dbgpClient"
arch=('any')
license=('unknown')
provides=("${pkgbase}")
conflicts=("xdebug-dbgp-tools")
options=(!strip)
source=("dbgpClient.exe::https://xdebug.org/files/binaries/dbgpClient.exe")
sha512sums=('56bf187deed508ce9329615169564f6b0646a78f5a6c7e3903191b58105ab1444fcc1cf1e867bb616407d5fb8c9d46133340f56c9e0db8d155ad8d7960ed3092')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

package() {
    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}"
    cp "dbgpClient.exe" "${a}"
    _lc "${a}"/*
}
