# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=libreoffice
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=5.4.1
pkgrel=1
pkgdesc="The free office suite"
url="https://www.libreoffice.org/"
arch=('any')
license=('LGPL3' 'custom:Apache')
provides=("${pkgbase}")
options=(!strip)
source=("LibreOffice_Win32.msi::http://download.documentfoundation.org/libreoffice/stable/${pkgver}/win/x86/LibreOffice_${pkgver}_Win_x86.msi"
        "LibreOffice_Win64.msi::http://download.documentfoundation.org/libreoffice/stable/${pkgver}/win/x86_64/LibreOffice_${pkgver}_Win_x64.msi")
sha512sums=('75d8d608c35ac6f20600f537d7e68f26ea6a7fe9d7494624dd97e1e3268072126a6e74c5ca8f198be364440ed5207561f512dbb0d184a328677aeb0499e5849a'
            'bcb03438e1232554a469b4beaeb5602f6bfe59e64736bec84ead2d7adc165efdc0222577290c167cc49df143c8d8143f5332c3fdb72e65f5c0d24bc4c70b5e0e')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_build() {
    msiexec -a "LibreOffice_Win${_apparch}.msi" "TARGETDIR=$(cygpath -wa "msi${_apparch}")" -qn
    _lc "msi${_apparch}"/*
}

build() {
    for _apparch in 32 64
    do
        _build
    done
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "msi${_apparch}"/* "${a}"
    rm -r "${a}"/{fonts,system$1} "${a}"/*.msi

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    mv "${a}/readmes" "${a}/notice" "${a}"/*.{html,txt} "${d}"
}

package_app-i686-libreoffice() {
    _apparch=32
    _package ""
    rm -r "${pkgdir}/apps${_apparch}/${_realname}/program/shlxthdl"/{msvcp,vcruntime}140.dll
}

package_app-x86_64-libreoffice() {
    _apparch=64
    _package "64"
}
