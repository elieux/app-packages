# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=messenger
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=2.0.1
pkgrel=2
pkgdesc="Beautiful desktop client for Facebook Messenger. Chat without being distracted by your feed or notifications."
url="http://messengerfordesktop.com/"
arch=('any')
license=('MIT')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("messengerfordesktop-full.nupkg::https://github.com/Aluxian/Facebook-Messenger-Desktop/releases/download/v${pkgver}/messengerfordesktop-${pkgver}-full.nupkg")
sha512sums=('7753a70988dbe315ce6a33a40681c3cb2766a9c934a19df4cb906d3f6ce50cf1c22189e068e42ca6787c449c18dc75d2c71fb8b5ecd1df75820c7f1e6a42c275')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

prepare() {
    _lc "lib/net45"/*
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "lib/net45"/* "${a}"
    mv "${a}/messenger%20for%20desktop.exe" "${a}/messenger.exe"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    mv "${a}/LICENSE" "${d}"
}
