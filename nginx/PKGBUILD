# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=nginx
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1.19.0
pkgrel=1
pkgdesc="Lightweight HTTP server and IMAP/POP3 proxy server"
url="https://nginx.org/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("nginx.zip::https://nginx.org/download/nginx-${pkgver}.zip")
sha512sums=('8c18141ae5a6a9a110b17895b97093b78eb9d8787c2e9afcb2724f2132657909510967c305948fe3959426b96ef29475953a271a659eaca3f17004da994fafdf')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "nginx-${pkgver}"/* "${a}"
    rm -R "${a}"/{logs,temp}
}
