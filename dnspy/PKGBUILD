# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=dnspy
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=6.1.4
pkgrel=1
pkgdesc=".NET debugger and assembly editor"
url="https://github.com/0xd4d/dnSpy"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("dnSpy-net472.zip::https@subdir://github.com/0xd4d/dnSpy/releases/download/v${pkgver}/dnSpy-net472.zip")
sha512sums=('7e664089da82d4ad71d6b17e11d33530a51c8ef25708df49566e7e964ffd068eb7fccbd7b05ee7c362d95e23f91887c45ec1058fae33f36e220337047450e7cc')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "dnSpy-net472"/* "${a}"
    _lc "${a}"/*
}
