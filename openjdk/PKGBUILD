_chocover() {
    # 16.0.0.3600 -> 16.0.0.36
    # 20.0.2.900 -> 20.0.2.9
    echo "${1}" | sed -r -e 's/00$//'
}

_realname=openjdk
_realver=c7ec1332f7bb44aeba2eb341ae18aca4
_choconame=Temurinjre
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=22.0.1
pkgrel=1
pkgdesc="Open Java Development Kit"
url="https://openjdk.org/"
arch=('any')
license=('custom')
replaces=("app-i686-jdk" "app-x86_64-jdk")
provides=("${pkgbase}")
options=(!strip)
source=("openjdk_windows-x64_bin.zip::https://download.java.net/java/GA/jdk${pkgver}/${_realver}/8/GPL/openjdk-${pkgver}_windows-x64_bin.zip")
sha512sums=('d2bf99302a30845a99fb0a40448ac0af8880ab3d0e8d3119531af46c087c7e75c32c57608b73bd72abe5d74864f68dcb744543180e208fb312cead8296e46134')

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids|atomic_wait))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_([0-9]|threads))?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "jdk-${pkgver}"/* "${a}"
    _rmmsdll "${a}"
}
