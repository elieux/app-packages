_realname=nodejs
_choconame=nodejs
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=16.6.1
pkgrel=1
pkgdesc="Evented I/O for V8 javascript"
url="https://nodejs.org/"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("node-win-x64.7z::https://nodejs.org/dist/v${pkgver}/node-v${pkgver}-win-x64.7z")
sha512sums=('b1ea18a9139070d8a612957aae9d54bace6daf788b38562c993ae132309fe68a8ad5db9e1ee0c81835b126854930798ac197336d1fe2c3c98cfde0e9e3ad8167')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "node-v${pkgver}-win-x64"/* "${a}"
}
