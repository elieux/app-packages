# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=innounp
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=0.46
pkgrel=1
pkgdesc="Inno Setup unpacker"
url="http://innounp.sourceforge.net/"
arch=('any')
license=('GPL')
makedepends=("unrar")
provides=("${pkgbase}")
options=(!strip)
source=("innounp.rar::http://downloads.sourceforge.net/${_realname}/${_realname}/${_realname}%20${pkgver}/${_realname}${pkgver//./}.rar")
sha512sums=('8a22373522fa1eb4fd3ebd3e60c7300d6cd69ee0c250141f7378234b3cd92ea155b19d1a3ba0424dfbce1aee530f5071c972a722bb9c16027f0cec8a6b3e58b3')
noextract=("${source[@]%%::*}") # "Parsing filters is unsupported"

prepare() {
    unrar x -idq -tsm -o+ "innounp.rar"
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp *.exe "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    cp *.htm "${d}"
}

