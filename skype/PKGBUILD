# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=skype
_choconame=skype
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=8.131.0.202
pkgrel=1
pkgdesc="P2P software for high-quality voice communication"
url="https://www.skype.com/"
arch=('any')
license=('custom')
makedepends=("app-innounp")
provides=("${pkgbase}")
options=(!strip)
source=("Skype.exe::https://download.skype.com/s4l/download/win/Skype-${pkgver}.exe")
sha512sums=('520b6da4418bc8e3d8ae45dc7852757a6cb0922efd11f9fd3b0593b5ed8e9686887b0b5117894bceb7c897fc0aaf0ff410135dd14a4de34316687d06d92f0645')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids|atomic_wait))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_([0-9]|threads))?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

prepare() {
    /apps/innounp/innounp -x -q -m -a -y "Skype.exe" -d"Skype.dir"
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "Skype.dir/{app}"/* "${a}"
    _rmmsdll "${a}"
    _lc "${a}"/*
}
