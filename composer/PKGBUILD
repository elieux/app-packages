# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=composer
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=2.8.2
pkgrel=1
pkgdesc="A dependency manager for PHP"
url="https://getcomposer.org/"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("composer.phar::https://github.com/composer/composer/releases/download/${pkgver}/composer.phar")
sha512sums=('4fb56eb690d7acc63d7dd18b549d01e4eea5d16864e3779adbba0b8b7beada831c7674ebabfbfab2fd90e24d938b2a3d84d46571e6192d24b009f5f9603904b6')

package() {
    depends=("app-php")

    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp "composer.phar" "${a}"
}
