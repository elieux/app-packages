# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=wincheater-data
_dirname=wincheater
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=176
pkgrel=1
pkgdesc="Texts for WinCheater"
url="http://www.cheater.cz/winch/win_download_knihovny.htm"
arch=('any')
license=('custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("texty.exe::http://www.cheater.cz/download/upd/${pkgver}/texty.exe")
sha512sums=('8ca9d6044f0db3a96a396563f83caf17c4463a56c5fdaabc2230c8bb283f15153bc97415d02acefc7e264d154c4f780d6d472ac5f7313bb6674d1683bd434d08')
noextract=("texty.exe")

prepare() {
    # 7z x -y -bd "texty.exe" # unsupported method
    true
}

build() {
    "./texty.exe" -d. -s
}

package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}"
    cp *.sct "${a}"
}
