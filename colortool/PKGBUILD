_realname=colortool
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1708.14008
pkgrel=1
pkgdesc="Windows Console Colortool"
url="http://rei.to/carotdav_en.html"
arch=('any')
license=('custom')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("colortool.zip::https://github.com/Microsoft/console/releases/download/${pkgver}/colortool.zip")
sha512sums=('17c54389a6168e96a6be7c7ce2145873126068a509f6fda20c7c3aa3c90ec48fa239eba57b816bc89cf9d6eb4305a95112044729df5f9bd35c57bada3dbfef82')

package() {
    a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R *.exe "schemes" "${a}"
}
