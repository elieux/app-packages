_realname=<customize>
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=<customize>
pkgrel=1
pkgdesc="<customize>"
url="<customize>"
arch=('any')
license=('<customize>')
depends=("<customize>")
makedepends=("unzip")
provides="app-${_realname}"
options=(!strip)
source=("<customize>::<customize>")
md5sums=('<customize>')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    _lc *
}

package() {
    a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -r * "${a}"
}
