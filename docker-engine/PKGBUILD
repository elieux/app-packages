# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=docker-engine
_choconame=docker-engine
_dirname=docker
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=25.0.1
pkgrel=1
pkgdesc="Pack, ship and run any application as a lightweight container"
url="https://docs.docker.com/engine/"
arch=('any')
license=('Apache')
provides=("${pkgbase}")
options=(!strip)
source=("docker.zip::https://download.docker.com/win/static/stable/x86_64/docker-${pkgver}.zip")
sha512sums=('2805b9d0136784b937d3fc45ec915fdb683bb6b966e6aefbcb1e6941e07de5911546031d3fbb2b645efa936fda4be61e2057480cd03c13d629571a7e5ff2b716')

package() {
    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}"
    cp "docker"/* "${a}/"
    rm "${a}/docker.exe"
}
