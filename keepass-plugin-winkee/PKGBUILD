# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=keepass-plugin-winkee
_dirname=keepass
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=2.28.0.1
pkgrel=1
pkgdesc="A KeePass plugin that opens databases using Windows account credentials"
url="http://keepass.info/plugins.html#winkee"
arch=('any')
license=('unknown')
depends=("app-i686-keepass")
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("WinKee.zip::http://keepass.info/extensions/v2/winkee/WinKee-${pkgver}.zip")
md5sums=('110d20f2c30c5698fe438d89e4aab034')

package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}/plugins"
    cp *.plgx "${a}/plugins"

    d="${pkgdir}/docs${_apparch}/${_dirname}"
    mkdir -p "${d}/plugins/winkee"
    cp *.txt "${d}/plugins/winkee"
}
