# Maintainer: David Macek <david.macek.0@gmail.com>

DLAGENTS=('http::/usr/bin/curl -qb "" -fLC - -e "http://www.cheater.cz/" -o %o %u')

_dirname=wincheater
_apparch=32
pkgbase="app-wincheater-data"
pkgname=("app-i686-wincheater-data-base"
         "app-i686-wincheater-data-libs")
pkgver=2016.05.06
pkgrel=1
epoch=1
pkgdesc="Texts for WinCheater"
url="http://www.cheater.cz/wincheater2/download-knihovny/"
arch=('any')
license=('custom')
makedepends=("unrar")
options=(!strip)
source=("download-knihovny.html::${url}")
sha512sums=('ccbfa58d6101268c87cfc905194f648292ce5cced1a984cf7150341a66049590c34ae647791f28446985a79e5b5a1ddcece1b727ca4b91b84382e1a2297f044b')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_dl() {
    pushd "${SRCDEST}" &> /dev/null
    download_file "${1}"
    popd &> /dev/null
}

_dlread() {
    tmp=".tmp"

    rm -f "${SRCDEST}/${tmp}"
    _dl "${tmp}::${1}" &> /dev/null
    cat "${SRCDEST}/${tmp}"
    rm "${SRCDEST}/${tmp}"
}

pkgver() {
    #find . -mindepth 1 -maxdepth 1 -name '*.sc2' -printf '%TY.%Tm.%Td\n' | sort | tail -1
    find . -mindepth 1 -maxdepth 1 -name '*.exe' -execdir bash -c 'unrar l -c- "{}" | sed "/^;/d" | sed "/^$/d" | tail -n +6 | head -n -2 | sed -r "s/[ ]+/\t/g" | cut -f 4 | sed -r "s/^([0-9][0-9])-([0-9][0-9])-([0-9][0-9])$/20\3-\2-\1/" | tr "-" "."' \; | sort | tail -1
}

prepare() {
    source=()
    noextract=()
    for n in $(cat "download-knihovny.html" | grep 'onclick="downloadx' | sed -r "s/.*downloadx\('(.*?)'\).*/\1/")
    do
        f="$(_dlread "http://www.cheater.cz/download/get-name.php?soubor=${n}")"
        h="$(_dlread "http://www.cheater.cz/download/get-link.php?soubor=${n}" | sed -r 's/.*hash=([a-z0-9]+).*/\1/')"
        if [ "${f}" = "????" ]
        then
            f="${i}.exe"
        fi
        _dl "${f}::http://www.cheater.cz/download/download-file.php?hash=${h}"
        source+=("${f}")
        noextract+=("${f}")
    done
    extract_sources

    for f in *.exe
    do
        unrar x -idq -tsm -o+ "${f}"
    done
    _lc *
    for f in *" "*
    do
        n="$(echo "${f}" | tr ' ' '_')"
        mv "${f}" "${n}"
    done
}

package_wincheater-data-base() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}"
    cp *.sct "${a}"
}

package_wincheater-data-libs() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}"
    cp *.sc2 "${a}"
}

package_app-i686-wincheater-data-base() {
    provides=("app-wincheater-data-base")
    replaces=("app-i686-wincheater-data")
    conflicts=("app-i686-wincheater-data")

    package_wincheater-data-base
}

package_app-i686-wincheater-data-libs() {
    provides=("app-wincheater-data-libs")
    replaces=("app-i686-wincheater-libraries")
    conflicts=("app-i686-wincheater-libraries")
    depends=("app-i686-wincheater")

    package_wincheater-data-libs
}
