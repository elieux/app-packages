# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=mc
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=4.8.21.214
pkgrel=1
pkgdesc="GNU terminal two-pane file manager"
url="https://sourceforge.net/projects/mcwin32/"
arch=('any')
license=('GPL3')
provides=("${pkgbase}")
makedepends=("app-innounp")
options=(!strip)
source=("mcwin32-build-setup.exe::https://downloads.sourceforge.net/mcwin32/mcwin32-build${pkgver##*.}-setup.exe")
sha512sums=('543320c8e3a38217c0d136f0d576c50cf05f239b8832dbeca49b27e6f40360b88eb716c53b49353474de27053da3c5de2a76ef471746b560721ba5f6102e7938')

prepare() {
    /apps/innounp/innounp -x -q -m -a -y "mcwin32-build-setup.exe" -d"mcwin32-build-setup.dir"
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "mcwin32-build-setup.dir/{app}"/* "${a}"
    rm "${a}"/*.map
}
