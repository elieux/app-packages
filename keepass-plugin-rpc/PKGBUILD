_realname=keepass-plugin-rpc
_dirname=keepass
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1.12.1
pkgrel=1
pkgdesc="A KeePass plugin that provides a RPC server for Kee"
url="https://www.kee.pm/"
arch=('any')
license=('GPL2')
provides=("${pkgbase}")
options=(!strip)
source=("KeePassRPC.plgx::https://github.com/kee-org/keepassrpc/releases/download/v${pkgver}/KeePassRPC.plgx")
sha512sums=('81e5eb767a639f93552c65088aa40c664140e16f939b63739871dcca7253c52df0fb7de9fa658ca66a80252bbae266c6bd9597171201534223f5990b88cf4fda')

package() {
    depends=("app-keepass")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/Plugins"
    cp *.plgx "${a}/Plugins"
}
