# Maintainer: David Macek <david.macek.0@gmail.com>

_chocover() {
    # choco version format: 1.1.37
    echo "${1}" | sed -r 's/^([0-9]+)[.]([0-9]+)[.]([0-9]+)$/\1.\2.\3.00/'
}

_realname=autohotkey
_choconame=autohotkey
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=1.1.37.00
pkgrel=1
pkgdesc="Macro-creation and automation-oriented scripting utility for Windows"
url="https://www.autohotkey.com/"
arch=('any')
license=('GPL2')
provides=("${pkgbase}")
makedepends=("p7zip")
options=(!strip)
source=("AutoHotkey_setup.exe::https://github.com/Lexikos/AutoHotkey_L/releases/download/v${pkgver}/AutoHotkey_${pkgver}_setup.exe")
sha512sums=('19b81dcc2cddda53a911f063fdfe689de4882a256238870c47610925170f3d9080d999ad5b2ce69e2dcca93bc13494b37eeb250ce0460274b746aeb75008b968')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    7z x -y -bd "AutoHotkey_setup.exe" -o"AutoHotkey_setup.dir" > /dev/null
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "AutoHotkey_setup.dir"/* "${a}"
    mv "${a}/Compiler"/* "${a}"
    rm -R "${a}/Compiler" "${a}/setup.exe" "${a}/Installer.ahk"
    _lc "${a}"/*
}
