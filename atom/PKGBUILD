# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=atom
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=1.25.0
pkgrel=2
pkgdesc="A hackable text editor for the 21st Century"
arch=('any')
url="https://atom.io/"
license=('custom')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("atom-x32-windows.zip::https://github.com/atom/atom/releases/download/v${pkgver}/atom-windows.zip"
        "atom-x64-windows.zip::https://github.com/atom/atom/releases/download/v${pkgver}/atom-x64-windows.zip")
sha512sums=('f9db1e88855cdd0115f7a486c7db38440c3303e17160fc002de948312e81ff57b8b73fc96c0ae9795bff2dc80b71aaf0f3e884434a1c9b1c3b204a1c5c1cea29'
            'f70a380001a66a8d04db71dbf4339bf972be16bdb452bc1099c3514f1800295ee302db9a6f699dc78fa552379800afca8fbbfd3ea3ffbb74977565e6b95a1f60')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+"
        "vc([ao]mp|corlib|runtime)[0-9]+"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

_prepare() {
    _lc "Atom x${_apparch}"/*
}

prepare() {
    mv "Atom" "Atom x32"

    for _apparch in 32 64
    do
        _prepare
    done
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "Atom x${_apparch}"/* "${a}"
    _rmmsdll "${a}"
}

package_app-i686-atom() {
    _apparch=32
    _package
}

package_app-x86_64-atom() {
    _apparch=64
    _package
}
