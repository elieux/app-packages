_realname=keepass-plugin-keetheme
_choconame=keepass-plugin-keetheme
_dirname=keepass
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=0.10.0
pkgrel=1
pkgdesc="Change the appearance of KeePass, to make it look better at night"
url="https://github.com/xatupal/KeeTheme"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("KeeTheme.plgx::https://github.com/xatupal/KeeTheme/releases/download/v${pkgver}/KeeTheme.plgx")
sha512sums=('80a6f41d929cf8089d15703fe80c2955a76bbe80988c70c0dd7ea93df0d9f1e09bf1da0a1afbf5fc356d2f6dab9e09ba3fb690fcae12bfa27207e79d46c3b187')

package() {
    depends=("app-keepass")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/Plugins"
    cp *.plgx "${a}/Plugins"
}
