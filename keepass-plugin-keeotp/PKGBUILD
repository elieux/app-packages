_realname=keepass-plugin-keeotp
_choconame=keepass-plugin-keeotp2
_dirname=keepass
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1.5.8.1
pkgrel=1
pkgdesc="A KeePass plugin that calculates TOTP codes"
url="https://github.com/tiuub/KeeOtp2"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("KeeOtp2.plgx::https://github.com/tiuub/KeeOtp2/releases/download/v${pkgver}/KeeOtp2.plgx")
sha512sums=('eb2295050cd5f5b7b0327499c53e241899ec18d80f8708c350830f968817ff64b088d02f305cb73e8735b96bf52533cb82ca00d803d3e8be2e711a88e6e7d9ca')

package() {
    depends=("app-keepass")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/Plugins"
    cp "KeeOtp2.plgx" "${a}/Plugins"
}
