# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=unbound
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=1.5.10
pkgrel=1
pkgdesc="Validating, recursive, and caching DNS resolver"
arch=('any')
url="http://unbound.net/"
license=('custom:BSD')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("unbound.zip::https://www.unbound.net/downloads/unbound-${pkgver}.zip")
sha512sums=('3eed6beb6ceb6db5027f4a314bfb8ff77718aea8eb80a1599c384b4fa1f4ff13fd15ee87bfc39f337137f42a268ac8d7bdb30afe6ed12da07e81677afe775f3c')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

prepare() {
    _lc *
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp *.{exe,cmd} "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    cp *.{txt,conf,url} "license" "${d}"
}
