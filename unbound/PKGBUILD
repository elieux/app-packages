# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=unbound
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=1.6.2
pkgrel=1
pkgdesc="Validating, recursive, and caching DNS resolver"
arch=('any')
url="http://unbound.net/"
license=('custom:BSD')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("unbound.zip::https://www.unbound.net/downloads/unbound-${pkgver}.zip")
sha512sums=('4fa7fcf4ad4e6ff19411b715c40f9b42a4c703455978e3da7c05c7e9de39f35c6f1c891aea08bb6fb39f75ced50aad468d2bdc8de533386b189a97ec5261f761')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    _lc *
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp *.{exe,cmd} "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    cp *.{txt,conf,url} "license" "${d}"
}
