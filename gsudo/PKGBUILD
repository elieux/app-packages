# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=gsudo
_choconame=gsudo
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=1.0.1
pkgrel=1
pkgdesc="A Sudo for Windows"
url="https://github.com/gerardog/gsudo"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("gsudo.zip::https@subdir://github.com/gerardog/gsudo/releases/download/v${pkgver}/gsudo.v${pkgver}.zip")
sha512sums=('95349a730fcbc182cd6260f27d28c4eb5ce9690f78b8d83f39f09a60f9ab7c789afc1650dc000e76a675eaf87a57979ca5a7cba511730a0b6cb3bd3717254ec9')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "gsudo"/* "${a}"
    mv "${a}/gsudo" "${a}/sudo"
    mv "${a}/gsudo.exe" "${a}/sudo.exe"
    mv "${a}/gsudo.ps1" "${a}/sudo.ps1"
}
