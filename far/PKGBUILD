# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=far
_realver=30b5000-20170807
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver="$(echo -n "${_realver}" | sed -r 's/^([0-9])([0-9])b([0-9]+)-[0-9]+$/\1.\2.\3/')"
pkgrel=1
pkgdesc="Extensible text mode file manager"
url="http://farmanager.com/index.php?l=en"
arch=('any')
license=('GPL2' 'BSD' 'custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("Far.x86.7z::http://farmanager.com/files/Far${_realver%%-*}.x86.${_realver##*-}.7z"
        "Far.x64.7z::http://farmanager.com/files/Far${_realver%%-*}.x64.${_realver##*-}.7z")
sha512sums=('dbb777ae36f82b9ba7735607f20eced7b1337b357dcc0ce8f941f9d2bbd1cdcfa131ea8c6be8f659e03ed1b7044fff9bd3d4a696c739ef677761f133fe31a3f5'
            'f95d4ae8433ae3ca2e3c9ab1f9fa2ef935faf42b7e33543c846c68a2bf110fc342336a2aa71793a5da7be616d8dfcedadff2d810d5aafe7eb669c9acb5ce6553')
noextract=("${source[@]%%::*}")

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    for f in *.7z
    do
        7z x -y -bd "${f}" -o"${f%%.7z}"
        _lc "${f%%.7z}"/*
    done
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "Far.x${1}"/*.{exe,lng,hlf,dll,cmd} "Far.x${1}"/{addons,pluginsdk} "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    cp -r "Far.x${1}"/*.{ini,diz,map} "Far.x${1}"/changelog{,_eng} "Far.x${1}"/{documentation,encyclopedia} "${d}"

    mkdir -p "${a}/plugins" "${d}/plugins"
    for f in "Far.x${1}/plugins"/*
    do
        p="${f##*/}"
        echo "${p}"
        mkdir -p "${a}/plugins/${p}" "${d}/plugins/${p}"
        cp -r "${f}"/* "${a}/plugins/${p}"
        find "${a}/plugins/${p}" -regextype posix-extended -maxdepth 1 -regex '.+([.](txt|md)|LICENSE|changelog.*)' -print0 | xargs -0r mv -t "${d}/plugins/${p}"
        if test -z "$(find "${d}/plugins/${p}" -type f)"
        then
            rm -d "${d}/plugins/${p}"
        fi
    done
}

package_app-i686-far() {
    _apparch=32
    _package "86"
}

package_app-x86_64-far() {
    _apparch=64
    _package "64"
}
