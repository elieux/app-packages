_chocover() {
    # choco version format: 20.11.4.0
    echo "${1}" | sed -r -e 's/[.]([0-9])[.]/.0\1./' -e 's/[.]([0-9])[.]/.0\1./' -e 's/^([0-9]+)[.]([0-9]+)[.]([0-9]+)[.]0$/\1.\2.\3/'
}

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=conemu
_choconame=ConEmu
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=21.08.16
pkgrel=1
pkgdesc="A powerful, highly customizable console emulator with tabs"
url="https://conemu.github.io/"
arch=('any')
license=('BSD')
replaces=("app-i686-${_realname}")
provides=("${pkgbase}")
options=(!strip)
source=("ConEmuPack.7z::https@subdir://github.com/Maximus5/ConEmu/releases/download/v${pkgver}/ConEmuPack.${pkgver//./}.7z")
sha512sums=('4c0aecd1a9d73aa1a4215e34ad373538d927a1c9d8cb8aa890c3c85b12ae485eb9bd6616ce127ff816f3d0ac3e4fa47af9b91fc0c4a4944937604bb7aba12448')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "ConEmuPack"/* "${a}"
    mv -f "${a}/ConEmu64.exe" "${a}/ConEmu.exe"
    find "${a}" -name '*.map' -delete
    _lc "${a}"/*
}
