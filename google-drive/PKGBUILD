# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=google-drive
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=1.31.2755.2156
pkgrel=1
pkgdesc="The Google Drive synchronization tool"
url="http://www.google.com/drive/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("gsync.msi::http://dl.google.com/drive/${pkgver}/gsync.msi")
sha512sums=('5ad48e0ac041d7fa737894a235775193d7f1efb43b8a123d7930b7134e8a9728f9426221534642de2fa56411927918ac9396dce686f0f28c039067d64f30e1f5')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

build() {
    msiexec -a "gsync.msi" "TARGETDIR=$(cygpath -wa "msi")" -qn
    _lc "msi/Google/Drive"/*
}

package() {
    s="msi/Google/Drive"
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "${s}"/*.{dll,exe} "${s}/languages" "${a}"
}
