# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=keepass-plugin-http
_dirname=keepass
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=1.8.4.1
pkgrel=1
pkgdesc="A KeePass plugin to expose password entries securely over HTTP"
url="https://github.com/pfn/keepasshttp"
arch=('any')
license=('unknown')
depends=("app-i686-keepass")
provides=("${pkgbase}")
options=(!strip)
source=("KeePassHttp.plgx::http://github.com/pfn/keepasshttp/raw/${pkgver}/KeePassHttp.plgx"
        "README.md::http://github.com/pfn/keepasshttp/raw/${pkgver}/README.md")
sha512sums=('1bb208a76908f0b78b13bee59eb02312e27642bd027c44e5eede9e6b69f7d22e8cd4a590cc68f8b4337142bb94f3a395e45e3947d347ea3f8c31ac405b912770'
            'eb8e7e98db9168f01f413e027c4602241c274a393a58c4337250f756b43829c4fa81b2c51f74d5d5f8d4966bffc2764788f7049432e2aa8ebadb44ff3d4d6b9d')

package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}/plugins"
    cp *.plgx "${a}/plugins"

    d="${pkgdir}/docs${_apparch}/${_dirname}"
    mkdir -p "${d}/plugins/http"
    cp *.md "${d}/plugins/http"
}
