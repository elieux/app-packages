# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

_realname=obs-studio
_choconame=obs-studio
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=32.0.2
pkgrel=1
pkgdesc="Free, open source software for live streaming and recording"
url="https://obsproject.com"
arch=('any')
license=('GPL2')
provides=("${pkgbase}")
options=(!strip)
source=("OBS-Studio-Windows-x64.zip::https@subdir://github.com/obsproject/obs-studio/releases/download/${pkgver}/OBS-Studio-${pkgver}-Windows-x64.zip")
sha512sums=('a4249772f101ab155441a85ee818347f8d7fe4f8e03ad636e9f873163c71b67eb49053501b4eac7804c9984e96b39e367ea9802a928f1c6270fbf1ce689deedf')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "OBS-Studio-Windows-x64"/* "${a}"
}
