# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=php-ext-xdebug
_dirname=php
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=3.1.0
pkgrel=1
pkgdesc="PHP debugging extension"
url="https://xdebug.org/"
arch=('any')
license=('GPL')
provides=("${pkgbase}")
options=(!strip)
source=("php_xdebug-7.4-vc15-nts-x86_64.dll::https://xdebug.org/files/php_xdebug-${pkgver}-7.4-vc15-nts-x86_64.dll")
sha512sums=('85b2c7395f008b8a55bc731267ea3093081905a84b658e443358c3d8c08ca7e9bed71e5c204c63c3799959dad526586aa56d92b64d9f0551a2f59342d5c240b5')

package() {
    depends=("app-php")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/ext"
    cp "php_xdebug-7.4-vc15-nts-x86_64.dll" "${a}/ext/php_xdebug.dll"
}
