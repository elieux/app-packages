# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=unison
_choconame=unison
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=2.52.1
pkgrel=1
pkgdesc="Two-way file synchronizer"
url="https://www.cis.upenn.edu/~bcpierce/unison/"
arch=('any')
license=('GPL')
replaces=("app-i686-${_realname}")
provides=("${pkgbase}")
options=(!strip)
source=("unison+ocaml-4.08.1+x86_64.windows.zip::https@subdir://github.com/bcpierce00/unison/releases/download/v${pkgver}/unison-v${pkgver}+ocaml-4.08.1+x86_64.windows.zip")
sha512sums=('7c8349e5511cc356b6b70e14f848fbada5a358e606a33fbc75b20682956b8d4e2d27250c00d140f7d85e334d08dc0d2256c2f690c52de953efcc6089fb596247')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"

    cp -R "unison+ocaml-4.08.1+x86_64.windows"/* "${a}"
    mv "${a}/bin/unison"* "${a}"
    rm -R "${a}"/{bin,lib}
}
