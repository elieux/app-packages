# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=davmail
_realver=4.7.1-2416
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=${_realver//-/.}
pkgrel=1
pkgdesc="A gateway allowing usage of any mail/calendar client with an Exchange server"
url="http://davmail.sourceforge.net/"
arch=('any')
license=('GPL2')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("davmail-windows-noinstall.zip::http://downloads.sourceforge.net/${_realname}/${_realname}/${_realver%%-*}/${_realname}-${_realver}-windows-noinstall.zip")
sha512sums=('b14f49d31b459d0980f52625b217778f307cf42d3a51a10013a03025dbe28531a0a85bb04ad7066aed3b5f9d8cb9d2f4e4263d9a896472cc685b5b38bfecea57')

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "lib" "davmail.jar" "davmailconsole.exe" "${a}"
    for f in "davmail" "davmailservice"
    do
        cp "${f}${1}.exe" "${a}/${f}.exe"
    done
}

package_app-i686-davmail() {
    _apparch=32
    _package ""
}

package_app-x86_64-davmail() {
    _apparch=64
    _package "64"
}
