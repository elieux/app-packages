# without user-agent, it redirects to localhost
DLAGENTS=('https::/usr/bin/curl -qb "" -fLC - -H user-agent:Mozilla -o %o %u')

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=httpd-mod-fcgid
_dirname=httpd
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=2.3.10
pkgrel=3
pkgdesc="A FastCGI module for Apache HTTP Server"
url="https://httpd.apache.org/mod_fcgid/"
arch=('any')
license=('Apache')
provides=("${pkgbase}")
options=(!strip)
source=("mod_fcgid-win64-VS18.zip::https@subdir://www.apachelounge.com/download/VS18/modules/mod_fcgid-${pkgver}-win64-VS18.zip")
sha512sums=('3acde9d7d23f1672fb130c57e169f6894d62911d8b67b94e2e812ee315e97480e1d8213f85f191687611ee03f8e6a1f8e7b65d66e0f31950972df00b7c0da141')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

package() {
    depends=("app-httpd")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/modules"
    cp -R "mod_fcgid-win64-VS18"/* "${a}"
    mv "${a}/ReadMe.txt" "${a}/ReadMe_ApacheLounge_mod_fcgid.txt"
    rm "${a}/-- Win64 VS18 --"
    mv "${a}"/*.so "${a}/modules"
    mv "${a}/mod_fcgid-${pkgver}"/* "${a}"
    rm -R "${a}/mod_fcgid-${pkgver}"
    _lc "${a}"/*
}
