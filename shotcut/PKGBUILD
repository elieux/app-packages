# Maintainer: David Macek <david.macek.0@gmail.com>

_chocover() {
    # 2021.1.9 -> 2021.01.09
    # 2021.1.19 -> 2021.01.19
    # 2021.11.9 -> 2021.11.09
    # 2021.11.11 -> 2021.11.11
    echo "${1}" | sed -r -e 's/[.]([0-9])[.]/.0\1./' -e 's/[.]([0-9])$/.0\1/'
}

_realname=shotcut
_choconame=Shotcut
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=25.12.30
pkgrel=1
pkgdesc="Cross-platform, open-source video editor"
url="https://shotcut.org/"
arch=('any')
license=('GPL3')
provides=("${pkgbase}")
options=(!strip)
source=("shotcut-win64.zip::https://github.com/mltframework/shotcut/releases/download/v${pkgver}/shotcut-win64-${pkgver}.zip")
sha512sums=('eb80dc04fdf94c97700e88c9fbc182599b4ee4aba0b89ff87618fd49a5d7e003baa7a74b9c54749d57f7b0fa5c29ccfda0e7f6d01af869b488146c6f081e2744')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "Shotcut"/* "${a}"
    _lc "${a}"/*
}
