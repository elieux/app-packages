_realname=keepass-plugin-rpc
_choconame=keepass-rpc
_dirname=keepass
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1.15.1
pkgrel=1
pkgdesc="A KeePass plugin that provides a RPC server for Kee"
url="https://www.kee.pm/"
arch=('any')
license=('GPL2')
provides=("${pkgbase}")
options=(!strip)
source=("KeePassRPC.plgx::https://github.com/kee-org/keepassrpc/releases/download/v${pkgver}/KeePassRPC.plgx")
sha512sums=('0b24b4943ad08e6d0e1ac2b5aed12ddb2b71786c4d78e087f3527aab58295ce85a9b595446f87f7a898c1267377b6aba97e08b056365e9255335902391850f6b')

package() {
    depends=("app-keepass")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/Plugins"
    cp *.plgx "${a}/Plugins"
}
