# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=nginx
_choconame=nginx
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1.21.2
pkgrel=1
pkgdesc="Lightweight HTTP server and IMAP/POP3 proxy server"
url="https://nginx.org/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("nginx.zip::https://nginx.org/download/nginx-${pkgver}.zip")
sha512sums=('0cfb6850634514ff25543454240a2b84212cb52593f3b154e2ca6b7f420c84cf5141e5804a6553afb80af1771f57ab32577da6c07a7b13fb09df9cf24278186b')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "nginx-${pkgver}"/* "${a}"
    rm -R "${a}"/{logs,temp}
}
