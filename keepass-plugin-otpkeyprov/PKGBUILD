# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=keepass-plugin-otpkeyprov
_dirname=keepass
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=2.5
pkgrel=1
pkgdesc="A KeePass plugin that allows using OTP codes for master key"
url="http://keepass.info/plugins.html#otpkeyprov"
arch=('any')
license=('unknown')
depends=("app-i686-keepass")
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("OtpKeyProv.zip::http://keepass.info/extensions/v2/otpkeyprov/OtpKeyProv-${pkgver}.zip")
sha512sums=('7e0a470f2bc32b4b6f68a6eab90b01a42a85a309f1d0208c205011a0e1a8779c0953ac36b144e0d4245d3820201fc0dd00f698abf28ba7034ae847550e25001f')

package() {
    a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/plugins" "${a}/plugins/otpkeyprov"
    cp *.plgx "${a}/plugins"
    cp *.html "${a}/plugins/otpkeyprov"
}
