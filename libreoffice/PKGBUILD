# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=libreoffice
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=4.4.3
pkgrel=1
pkgdesc="The free office suite"
url="https://www.libreoffice.org/"
arch=('any')
license=('LGPL3' 'custom:Apache')
provides=("${pkgbase}")
options=(!strip)
source=("LibreOffice_Win_x86.msi::http://download.documentfoundation.org/libreoffice/stable/${pkgver}/win/x86/LibreOffice_${pkgver}_Win_x86.msi")
md5sums=('2a00806790a9e3583eb9c03dda1bb8ee')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

build() {
    msiexec -a "LibreOffice_Win_x86.msi" "TARGETDIR=$(cygpath -wa "msi")" -qn
    _lc "msi"/*
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "msi"/* "${a}"
    rm -r "${a}"/{Fonts,Win} "${a}"/*.msi
    echo -n "ure" > "${a}/ure-link"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    mv "${a}/readmes" "${a}/notice" "${a}"/*.{html,txt} "${d}"
}
