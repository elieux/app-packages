_realname=keepass-plugin-keetheme
_choconame=keepass-plugin-keetheme
_dirname=keepass
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=0.9.1
pkgrel=1
pkgdesc="Change the appearance of KeePass, to make it look better at night"
url="https://github.com/xatupal/KeeTheme"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("KeeTheme.plgx::https://github.com/xatupal/KeeTheme/releases/download/v${pkgver}/KeeTheme.plgx")
sha512sums=('ad32928487d4fce4796084dd9621eab919803c0e7c0e93eb4329332c82fcd3c880e99fdb12308565dfff0c427411fcd7ece1a7c3ff7fc3bc3b100ceab935e6ef')

package() {
    depends=("app-keepass")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/Plugins"
    cp *.plgx "${a}/Plugins"
}
