# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=keepass-plugin-winkee
_dirname=keepass
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=2.39.1
pkgrel=1
pkgdesc="A KeePass plugin that opens databases using Windows account credentials"
url="https://keepass.info/plugins.html#winkee"
arch=('any')
license=('unknown')
depends=("app-i686-keepass")
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("WinKee.zip::https://keepass.info/extensions/v2/winkee/WinKee-${pkgver}.zip")
sha512sums=('7ec17bf2455ea22b75437b6427d2d0f14188cd97f7b82fed9a47ed18f6657862569efa995f9a7d7b51c0f6fbc0cf9928da6e7cd8017958a2da5fbe9ad6e73b3e')

package() {
    a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/plugins" "${a}/plugins/winkee"
    cp *.plgx "${a}/plugins"
    cp *.txt "${a}/plugins/winkee"
}
