# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=php-ext-apcu
_dirname=php
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=5.1.28
pkgrel=1
pkgdesc="A userland caching module for PHP"
url="https://pecl.php.net/package/APCu"
arch=('any')
license=('PHP')
provides=("${pkgbase}")
options=(!strip)
source=("php_apcu-8.5-nts-vs17-x64.zip::https@subdir://downloads.php.net/~windows/pecl/releases/apcu/${pkgver}/php_apcu-${pkgver}-8.5-nts-vs17-x64.zip")
sha512sums=('96f3b563332ab25ffd343ac6ffc2f6880fed6b3dbd19d29d3a1a3cc6ab6e1a734664addfc29a40246901d3925fa42237fb7c9c50471f60f6c1873450638e8592')

package() {
    depends=("app-x86_64-php>=1~8.5.0" "app-x86_64-php<1~8.6.0")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/ext" "${a}/ext/apcu"
    cp -R "php_apcu-8.5-nts-vs17-x64"/* "${a}/ext/apcu"
    rm "${a}/ext/apcu"/*.pdb
    mv "${a}/ext/apcu/php_apcu.dll" "${a}/ext"
}
