# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=xnview-mp
_choconame=XnViewMP
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=1.8.3
pkgrel=1
pkgdesc="A multi-platform photo and picture viewer"
url="https://www.xnview.com/en/xnviewmp/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("XnView_MP-win-x64.zip::https://download.xnview.com/old_versions/XnView_MP/XnView_MP-${pkgver}-win-x64.zip")
sha512sums=('ba47a87b66fbcf4b31d72c51acec53c94982832cc5de8f0bd46cf912923dccbd2ae1fa68f919e71d80362aff743873144a7a3fe4f6b18317988f03ce5bc2ce0a')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids|atomic_wait))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_([0-9]|threads))?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "XnViewMP"/* "${a}"
    rm "${a}/vc_redist.x64.exe" "${a}/Latest supported Visual C++ Redistributable downloads - Microsoft Learn.url"
    _rmmsdll "${a}"
    _lc "${a}"/*
}
