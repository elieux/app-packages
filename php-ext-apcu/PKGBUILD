# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=php-ext-apcu
_dirname=php
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=5.1.21
pkgrel=2
pkgdesc="A userland caching module for PHP"
url="https://pecl.php.net/package/APCu"
arch=('any')
license=('PHP')
provides=("${pkgbase}")
options=(!strip)
source=("php_apcu-8.0-nts-vs16-x64.zip::https@subdir://windows.php.net/downloads/pecl/releases/apcu/${pkgver}/php_apcu-${pkgver}-8.0-nts-vs16-x64.zip")
sha512sums=('11e27f6120a87600b32919f04b541a14cc579be209bdd0a0afe85258b1cf49d68fbe7e37aecbadfef0e04fed26dfe851ed339f30b50eb19c8c765803617e3867')

package() {
    depends=("app-x86_64-php>=1~8.0.0" "app-x86_64-php<1~8.1.0")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/ext" "${a}/ext/apcu"
    cp -R "php_apcu-8.0-nts-vs16-x64"/* "${a}/ext/apcu"
    rm "${a}/ext/apcu"/*.pdb
    mv "${a}/ext/apcu/php_apcu.dll" "${a}/ext"
}
