# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=pc-wizard
_dirname=cpuid
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=2014.02.13
pkgrel=2
pkgdesc="Analyzes and benchmarks your computer system (CPUID)"
url="http://www.cpuid.com/softwares/pc-wizard.html"
arch=('any')
license=('custom')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("pc-wizard.zip::http://download.cpuid.com/pc-wizard/pc-wizard_${pkgver}.zip")
sha512sums=('07d462b3f96416576ecf1e41c2ec6e165c640e687215a09ac308ab71f75fe21ae49ec3de052a952541fcb7eddd63f63f54f502c81f3f072c1b415fddacce37c9')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    _lc *
}

package() {
    a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}" "${a}/pc-wizard"
    cp "pc wizard.exe" "${a}/pc-wizard.exe"
    cp -r {data,extras,language,mark,partner,web} *.{sys,dll,vxd} "${a}"
    rm "${a}/msvbvm60.dll" "${a}/mark"/{msvcr100,vcomp100}.dll
    cp *.txt "${a}/pc-wizard"
}
