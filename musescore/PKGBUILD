# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=musescore
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=3.3.2
pkgrel=1
pkgdesc="Create, play and print beautiful sheet music"
url="http://musescore.org/"
arch=('any')
license=('GPL')
replaces=("app-i686-${_realname}")
makedepends=("app-lessmsi")
provides=("${pkgbase}")
options=(!strip)
source=("MuseScore-x86_64.msi::https://cdn.jsdelivr.net/musescore/v${pkgver}/MuseScore-${pkgver}-x86_64.msi")
sha512sums=('c9ad17f2158fd8c53c7e79a8f15a7abe854f369ba2c30cea615030cf02a83f792bb39bf0660099571a58accca51ae95a0b3ac59d6f0b41514fd2826295b03718')

prepare() {
    rm -fR "MuseScore-x86_64"
    /apps/lessmsi/lessmsi x "MuseScore-x86_64.msi"
}

package() {
    a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "MuseScore-x86_64/SourceDir/MuseScore 3"/* "${a}"
    rm "${a}/bin"/{concrt,msvcp,vcruntime}140.dll
}
