# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=cpu-z
_dirname=cpuid
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=1.77
pkgrel=1
pkgdesc="Gathers information on some of the main devices of your system (CPUID)"
url="http://www.cpuid.com/softwares/cpu-z.html"
arch=('any')
license=('custom')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("cpu-z-en.zip::http://download.cpuid.com/${_realname}/${_realname}_${pkgver}-en.zip")
sha512sums=('c4e4f6992c5126464edb4bd6aa85f4eb7cd831f13b3e39dd8888170f54cc42cf27d4f3ab25db33f91ecaf9207f0d26bae5118b76563b0d2461ce54aaae090ec3')

_package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}"
    cp "cpuz_x${_apparch}.exe" "${a}/cpuz.exe"
    cp "cpuz.ini" "${a}"

    d="${pkgdir}/docs${_apparch}/${_dirname}"
    mkdir -p "${d}"
    cp "cpuz_readme.txt" "${d}/cpuz.txt"
}

package_app-i686-cpu-z() {
    _apparch=32
    _package
}

package_app-x86_64-cpu-z() {
    _apparch=64
    _package
}
