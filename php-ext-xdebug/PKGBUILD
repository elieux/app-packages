# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=php-ext-xdebug
_dirname=php
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=3.1.3
pkgrel=1
pkgdesc="PHP debugging extension"
url="https://xdebug.org/"
arch=('any')
license=('GPL')
provides=("${pkgbase}")
options=(!strip)
source=("php_xdebug-8.1-vc16-nts-x86_64.dll::https://xdebug.org/files/php_xdebug-${pkgver}-8.1-vs16-nts-x86_64.dll")
sha512sums=('141eaf77397682d70d5196a561f48cea2ad79b9f4dd0de8bfe5da0dd44f010d7283b0c62c72151b0eda5c801b8ae4940cefe359ac3469dad70a069fad3156d20')

package() {
    depends=("app-x86_64-php>=1~8.1.0" "app-x86_64-php<1~8.2.0")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/ext"
    cp "php_xdebug-8.1-vc16-nts-x86_64.dll" "${a}/ext/php_xdebug.dll"
}
