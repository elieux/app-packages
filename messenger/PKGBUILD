# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=messenger
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=2.0.1
pkgrel=1
pkgdesc="Beautiful desktop client for Facebook Messenger. Chat without being distracted by your feed or notifications."
url="http://messengerfordesktop.com/"
arch=('any')
license=('MIT')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("messengerfordesktop-win32-portable.zip::https://github.com/Aluxian/Facebook-Messenger-Desktop/releases/download/v${pkgver}/messengerfordesktop-${pkgver}-win32-portable.zip")
sha512sums=('de00dace2f79e5fd2c051f982592ecef04867995a674a385657e4270306d04f25a3551fb27dddb10d0794c6279ab66fffc159ab828a4762e4f90f0f3746c8ca7')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

prepare() {
    _lc *
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r * "${a}"
    mv "${a}/messenger for desktop.exe" "${a}/messenger.exe"
    rm "${a}/messengerfordesktop-win32-portable.zip"
    
    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    mv "${a}/LICENSE" "${a}"/*.html "${d}"
}
