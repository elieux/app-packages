# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=vscode
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=1.17.1
pkgrel=1
pkgdesc="Editor for building and debugging modern web and cloud applications"
arch=('any')
url="https://code.visualstudio.com/"
license=('custom')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("VSCode-win32.zip::https://vscode-update.azurewebsites.net/${pkgver}/win32-archive/stable"
        "VSCode-win64.zip::https://vscode-update.azurewebsites.net/${pkgver}/win32-x64-archive/stable")
sha512sums=('6438fb731bf38e994147b18f7070917c7cf6d9e07a4c37320e730515f399058c9bbff0aed500545d4bef0d7dcb766dd129109969c316026ff551aae245a68e48'
            'c024bdc732b11b15d12723cd5c49eb8a8693a61d715846b0d56bb614f0b292bb349a1e06d3638a7692c6def494494fdaf00ec1c513801f2ac797cecb430a8c74')
noextract=("VSCode-win32.zip"
           "VSCode-win64.zip")

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+"
        "vc([ao]mp|corlib|runtime)[0-9]+"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

_prepare() {
    unzip -o "VSCode-win${_apparch}.zip" -d "vscode${_apparch}"
    _lc "vscode${_apparch}"/*
    rm "vscode${_apparch}/resources/app/node_modules/vscode-ripgrep/bin/rg"
}

prepare() {
    for _apparch in 32 64
    do
        _prepare
    done
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "vscode${_apparch}"/* "${a}"
    _rmmsdll "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    mv "${a}/resources/app"/*.{html,txt} "${a}/resources/app/licenses"/* "${d}"
    rm -r "${a}/resources/app/licenses"
}

package_app-i686-vscode() {
    _apparch=32
    _package
}

package_app-x86_64-vscode() {
    _apparch=64
    _package
}
