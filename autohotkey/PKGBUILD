_chocover() {
    # 1.1.37 -> 1.1.37.00
    # 1.1.37.1 -> 1.1.37.01
    echo "${1}" | sed -r -e 's/^([0-9]+)[.]([0-9]+)[.]([0-9]+)$/\1.\2.\3.00/' -e 's/^([0-9]+)[.]([0-9]+)[.]([0-9]+)[.]([0-9])$/\1.\2.\3.0\4/'
}

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=autohotkey
_choconame=autohotkey.portable
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=2.0.18
pkgrel=1
pkgdesc="Macro-creation and automation-oriented scripting utility for Windows"
url="https://www.autohotkey.com/"
arch=('any')
license=('GPL2')
provides=("${pkgbase}")
options=(!strip)
source=("AutoHotkey.zip::https@subdir://github.com/AutoHotkey/AutoHotkey/releases/download/v${pkgver}/AutoHotkey_${pkgver}.zip")
sha512sums=('ae47717baee50b1aa2e35776165bda0b7d786ddbb4c93bc6113f53ba7929c1cc117239c4d64ca69851aad63acd9e493031f0bde97eeeab3f6da15b8852d20823')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "AutoHotkey"/* "${a}"
    _lc "${a}"/*
}
