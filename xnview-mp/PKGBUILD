# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=xnview-mp
_choconame=XnViewMP
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=0.98.2
pkgrel=1
pkgdesc="A multi-platform photo and picture viewer"
url="https://www.xnview.com/en/xnviewmp/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("XnViewMP-win-x64.zip::https://download.xnview.com/XnViewMP-win-x64.zip")
sha512sums=('24344fc2c0a29521d6eb27703b98018bf821e35545f299903639c20a7905f7bd3a7acae458bd44d2f8d4b4e515c0f7995b57d4e3c0529aeb4abb000c6bce4414')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_[0-9])?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

pkgver() {
    cat "XnViewMP/WhatsNew.txt" | head -1 | sed -r 's/^Changelog ([0-9.]+):$/\1/' | sed -r 's/^([0-9]+[.][0-9+])$/\1.0/'
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "XnViewMP"/* "${a}"
    rm "${a}/vc_redist.x64.exe"
    _rmmsdll "${a}"
    _lc "${a}"/*
}
