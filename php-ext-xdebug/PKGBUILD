# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=php-ext-xdebug
_dirname=php
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=3.1.4
pkgrel=1
pkgdesc="PHP debugging extension"
url="https://xdebug.org/"
arch=('any')
license=('GPL')
provides=("${pkgbase}")
options=(!strip)
source=("php_xdebug-8.1-vc16-nts-x86_64.dll::https://xdebug.org/files/php_xdebug-${pkgver}-8.1-vs16-nts-x86_64.dll")
sha512sums=('bade23fe5a427eccab799dbb20b9977ea8cd69676ea853e4499e38c6a5064f411fa806ef03528a520fb7674d88c1d075f7eb401111cfde4a7b6760f35bbd7d71')

package() {
    depends=("app-x86_64-php>=1~8.1.0" "app-x86_64-php<1~8.2.0")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/ext"
    cp "php_xdebug-8.1-vc16-nts-x86_64.dll" "${a}/ext/php_xdebug.dll"
}
