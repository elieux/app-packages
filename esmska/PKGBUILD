# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=esmska
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1.9
pkgrel=1
pkgdesc="Program for sending SMS over the Internet"
url="https://github.com/kparal/esmska"
arch=('any')
license=('AGPL' 'custom')
provides=("${pkgbase}")
options=(!strip)
source=("esmska.tar.gz::http://ripper.profitux.cz/${_realname}/packages/${_realname}-${pkgver}.tar.gz")
sha512sums=('089ea57342604b6e89bafa3bd557fd179f22dd44b2553fde615543459921ad16f67c860e488cd544617d37b89778897d371ad86b7338e4be4d60ab6d630d745b')

package() {
    a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -r "esmska-${pkgver}"/{gateways,icons,lib,esmska.*} "${a}"
    cp -r "esmska-${pkgver}"/{license,readme.txt} "${a}"
}
