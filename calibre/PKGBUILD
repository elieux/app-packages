# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=calibre
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=3.8.0
pkgrel=1
pkgdesc="Ebook management application"
url="http://calibre-ebook.com/"
arch=('any')
license=('GPL3')
provides=("${pkgbase}")
options=(!strip)
source=("calibre32.msi::http://download.calibre-ebook.com/${pkgver}/${_realname}-${pkgver}.msi"
        "calibre64.msi::http://download.calibre-ebook.com/${pkgver}/${_realname}-64bit-${pkgver}.msi")
sha512sums=('368c68a7099751692e9bb39dd674774be3d3712559e73e46c134821ed50e6178ea3a1e3ca0326436295803284822aa0bad33d8d92fe8ea7a1b9ba0eb615ccc0e'
            '09344de59aa1c6a3280ffbfc71844d3cee240f403237b106ff0d0586d479b1ec8f6159ba18ceb581a355e7a453f4aafc590761d1a68c1210933c468fa0bcb50a')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+"
        "vc([ao]mp|corlib|runtime)[0-9]+"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

_build() {
    msiexec -a "calibre${_apparch}.msi" "TARGETDIR=$(cygpath -wa "install${_apparch}")" -qn
    attrib -r //s
    _lc "install${_apparch}/PFiles"/*
    _lc "install${_apparch}/PFiles"/calibre*/*
}

build() {
    for _apparch in 32 64
    do
        _build
    done
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "install${_apparch}/PFiles"/calibre*/* "${a}"
    _rmmsdll "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    mv "${a}/license" "${d}"
}

package_app-i686-calibre() {
    _apparch=32
    _package
}

package_app-x86_64-calibre() {
    _apparch=64
    _package
}
