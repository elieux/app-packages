_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=php
_choconame=php
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=7.4.24
pkgrel=1
pkgdesc="A general-purpose scripting language that is especially suited to web development"
url="https://windows.php.net/"
arch=('any')
license=('PHP')
provides=("${pkgbase}")
options=(!strip)
source=("php-nts-Win32-vc15-x64.zip::https@subdir://windows.php.net/downloads/releases/archives/php-${pkgver}-nts-Win32-vc15-x64.zip")
sha512sums=('cdd4dbe01495f6e4f7ab53d0ca858a89a630ccebcdd02defed72d2de50a2ec1a22da4cbbd9d972b85174524acee08c9ff3fac50681ae8d99ab7d527ce11819c8')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "php-nts-Win32-vc15-x64"/* "${a}"
}
