# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=teamspeak
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=3.1.4
pkgrel=1
pkgdesc="Quality voice communication via the Internet"
url="http://www.teamspeak.com/"
arch=('any')
license=('custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("TeamSpeak3-Client-win32.exe::http://dl.4players.de/ts/releases/${pkgver}/TeamSpeak3-Client-win32-${pkgver}.exe"
        "TeamSpeak3-Client-win64.exe::http://dl.4players.de/ts/releases/${pkgver}/TeamSpeak3-Client-win64-${pkgver}.exe"
        # "pluginsdk.zip::http://dl.4players.de/ts/client/pluginsdk/pluginsdk_${pkgver}.zip"
)
sha512sums=('af5f03449dd16f965f6afa629fa23e344e21cdb15a5077801a370d7cf5a515623131494dae2638009baef97b77f3c0394db275b92e5158268965ea9ee8a79e90'
            '8fa496a63ceb7430e646ea6f76fc990a64827750e511ad417f41b147a8bbab0650203b186a6a7a4c7488525edbb4d1077b278433992e7ec84f34e803b960004d')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_prepare() {
    w="*license*.rtf"
    7z x -y -bd -x!"${w}" "TeamSpeak3-Client-win${_apparch}.exe" -o"win${_apparch}"
    for f in $(7z l -y -bd -i!"${w}" "TeamSpeak3-Client-win${_apparch}.exe" | grep 'license.*rtf' | sed -r 's/[ ]+/\t/g' | cut -f 5 | sed 's/^.*\\//')
    do
        7z e -y -bd -so -i!"*${f}" "TeamSpeak3-Client-win${_apparch}.exe" > "win${_apparch}/${f}"
    done
    _lc "win${_apparch}"/*
}

prepare() {
    for _apparch in 32 64
    do
        _prepare
    done
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "win${_apparch}"/* "${a}"
    rm -r "${a}/update.exe" "${a}/uninstall.exe.nsis" "${a}/[nsis].nsi" "${a}"/'$pluginsdir'
    mv "${a}/ts3client_win${_apparch}.exe" "${a}/ts3client.exe"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    mv "${a}"/*.{txt,rtf} "${a}/html" "${d}"
}

package_app-i686-teamspeak() {
    _apparch=32
    _package
}

package_app-x86_64-teamspeak() {
    _apparch=64
    _package
}
