# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=slack
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=4.7.0
pkgrel=1
pkgdesc="Client for the Slack team communication platform"
url="https://www.slack.com/"
arch=('any')
license=('custom')
replaces=("app-i686-${_realname}")
makedepends=("p7zip" "unzip")
provides=("${pkgbase}")
options=(!strip)
source=("SlackSetup64.exe::https://slack.com/ssb/download-win64")
sha512sums=('2f9ce22daff113899fd7ec621eb80183d9881e54aa1afe3817a26ded352558199a3f96eb5bc59c31eaee2232015761598ff7d5ad2981d1033ff66d92aae8934f')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_[0-9])?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

prepare() {
    rm -fR "SlackSetup64.dir"
    7z x -y -bd "SlackSetup64.exe" -o"SlackSetup64.dir" > /dev/null
    unzip -q -o "SlackSetup64.dir/slack"-*-"full.nupkg" -d "slack-full"
}

pkgver() {
    powershell -command '(Get-Item "SlackSetup64.exe").VersionInfo.ProductVersion'
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "slack-full/lib/net45"/* "${a}"
    _rmmsdll "${a}"
    _lc "${a}"/*
}
