# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=php-ext-xdebug
_dirname=php
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=3.4.7
pkgrel=1
pkgdesc="PHP debugging extension"
url="https://xdebug.org/"
arch=('any')
license=('GPL')
provides=("${pkgbase}")
options=(!strip)
source=("php_xdebug-8.4-nts-vs17-x86_64.dll::https://xdebug.org/files/php_xdebug-${pkgver}-8.4-nts-vs17-x86_64.dll")
sha512sums=('335acff3a7b811ea5e6d10da1c3729f70dfc9ba37d8b72004d14c414a759566c7f4016d0cfe81ab7d209819170438212d8aed6cb3d47d269dbeb50e1f27b7812')

package() {
    depends=("app-x86_64-php>=1~8.4.0" "app-x86_64-php<1~8.5.0")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/ext"
    cp "php_xdebug-8.4-nts-vs17-x86_64.dll" "${a}/ext/php_xdebug.dll"
}
