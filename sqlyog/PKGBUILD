# Maintainer: David Macek <david.macek.0@gmail.com>

DLAGENTS=('https::/usr/bin/curl -k -qb "" -fLC - -o %o %u')

_realname=sqlyog
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=12.4.1
pkgrel=1
pkgdesc="MySQL manager and admin tool"
url="https://github.com/webyog/sqlyog-community"
arch=('any')
license=('GPL2')
makedepends=("p7zip" "curl")
provides=("${pkgbase}")
options=(!strip)
source=("SQLyogCommunity32.exe::https://s3.amazonaws.com/SQLyog_Community/SQLyog+${pkgver}/SQLyog-${pkgver}-0.x86Community.exe"
        "SQLyogCommunity64.exe::https://s3.amazonaws.com/SQLyog_Community/SQLyog+${pkgver}/SQLyog-${pkgver}-0.x64Community.exe")
sha512sums=('c7ca77ad6a131ffc6234e039e745faef5b855c1c146cb8fca8415413a98c2e6a6b877363104b7b961623a0e83cee97de419fdf2bcbf861a657b3d58a7adf941f'
            '403689bb550bbabb3f2ad2849de19bf215f0f88a9b3355951ec28389f0a9dc6db21a1a515855ef1bc0edafae9df617af8910e3a6ca514bf63f0639320778853d')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_prepare() {
    7z x -y -bd "SQLyogCommunity${_apparch}.exe" -o"SQLyogCommunity${_apparch}"
    _lc "SQLyogCommunity${_apparch}"/*
}

prepare() {
    for _apparch in 32 64
    do
        _prepare
    done
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp "SQLyogCommunity${_apparch}"/*.{exe,dll,db} "${a}"
    rm "${a}/uninst.exe"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    cp "SQLyogCommunity${_apparch}"/*.txt "${d}"
    mv "${d}/[license].txt" "${d}/license.txt"
}

package_app-i686-sqlyog() {
    _apparch=32
    _package
}

package_app-x86_64-sqlyog() {
    _apparch=64
    _package
}
