# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=1password
_choconame=1password
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=8.11.14.24
pkgrel=1
pkgdesc="Password manager and secure wallet"
url="https://1password.com/downloads"
arch=('any')
license=('custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("1PasswordSetup-latest.exe::https://downloads.1password.com/win/1PasswordSetup-latest.exe")
sha512sums=('fa9c78a901aad3190671de261b0c2e813042a8b4dbb6c031772e17c0fb6be4f0660db3a26a5d25ace991ce8eedf17960ce4d587063873733cd8b3d31faac3836')
noextract=("1PasswordSetup-latest.exe")

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    rm -fR "1PasswordSetup-latest.dir"
    7z x -y -bd "1PasswordSetup-latest.exe" -o"1PasswordSetup-latest.dir" > /dev/null
    7z x -y -bd "1PasswordSetup-latest.dir/.rdata" -o"rdata" > /dev/null
}

pkgver() {
    powershell -command '(Get-Item "1PasswordSetup-latest.exe").VersionInfo.ProductVersionRaw.ToString()'
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "rdata"/* "${a}"
    _lc "${a}"/*
}
