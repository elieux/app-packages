_realname=crystalsysinfo
_dirname=crystal
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=1.0.0.452
pkgrel=1
pkgdesc="A system inspection driver (Crystal Dew World)"
url="http://crystalmark.info/?lang=en"
arch=('any')
license=('custom')
replaces=("app-i686-${_realname}")
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("CrystalCPUIDx64.zip::http://crystalmark.info/download/archive/CrystalCPUID/CrystalCPUID415x64.zip"
        "CrystalMark.zip::http://crystalmark.info/download/archive/CrystalMark/CrystalMark2004R3.zip") # order is important
sha512sums=('955a7f19b4ec651a7d07e5e800e2b40a1735056dfe2ed72d12ac93b75530d5b9973c707607a2015bc970c4904a34048d3f1c637c49599247a938d827fcf13d67'
            'f837bee1b4cd8cd5d53b1304505382a7826cc8c4159cbed941db0c3aef335ff3b8988b28417a104dae978e0b2f484033d7383a9e3f9ad73c9f0986bd30eb001e')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

pkgver() {
    b="$(cygpath -wa "SysInfox64.dll" | sed 's/\\/\\\\/g')"
    wmic datafile where name=\""${b}"\" get version | grep 'Version' -A 1 | tail -1 | tr -d ' ' | sed -r 's/([0-9]+)[.]([0-9]+)[.]([0-9]+).0$/\1.\2\3/'
}

prepare() {
    _lc *
}

package() {
    a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}" "${a}/sysinfo"
    cp -r "data" *sysinfo*.{dll,sys,vxd} "${a}"
    cp *sysinfo*.txt "${a}/sysinfo"
    rm "${a}/sysinfont4.sys" "${a}"/sysinfo.*
}
