# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=obsidian
_choconame=obsidian
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=1.11.5
pkgrel=1
pkgdesc="A powerful knowledge base that works on top of a local folder of plain text Markdown files"
url="https://obsidian.md/"
arch=('any')
license=('custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("Obsidian.exe::https://github.com/obsidianmd/obsidian-releases/releases/download/v${pkgver}/Obsidian-${pkgver}.exe")
sha512sums=('0535ced1dc70f9da566d280c107b0846d985bf4ea51e2e4b6327b6c65b420c1b23724a15f668fa169adc5304aa288090b1d138b2b0b0c0c4fcc23281169515f5')
noextract=("Obsidian.exe")

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    rm -fR "Obsidian.dir"
    7z x -y -bd "Obsidian.exe" -o"Obsidian.dir" > /dev/null
    7z x -y -bd "Obsidian.dir"/'$PLUGINSDIR'/"app-64.7z" -o"app-64" > /dev/null
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "app-64"/* "${a}"
    _lc "${a}"/*
}
