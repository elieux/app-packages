# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=tap-windows
_choconame=tapwindows
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=9.24.2
pkgrel=1
pkgdesc="NDIS 6 TAP adapter driver"
url="https://community.openvpn.net/openvpn#Tap-windowssubproject"
arch=('any')
license=('GPL2' 'custom')
provides=("${pkgbase}")
options=(!strip)
source=("tap-windows.zip::https://build.openvpn.net/downloads/releases/tap-windows-${pkgver}.zip")
sha512sums=('882d7473867a329a3fdd4e94008bc363138fcbbe474e27bc9e6f66c8844ecc671f3481f33523f1f12ef7274916453138f8e965b6c1b97106eb89ce30712dd378')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "tap-windows-${pkgver}"/* "${a}"
    mv "${a}/amd64"/* "${a}"
    rm -R "${a}"/{amd64,arm64,i386}
}
