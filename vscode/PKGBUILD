# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=vscode
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=1.17.2
pkgrel=1
pkgdesc="Editor for building and debugging modern web and cloud applications"
arch=('any')
url="https://code.visualstudio.com/"
license=('custom')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("VSCode-win32.zip::https://vscode-update.azurewebsites.net/${pkgver}/win32-archive/stable"
        "VSCode-win64.zip::https://vscode-update.azurewebsites.net/${pkgver}/win32-x64-archive/stable")
sha512sums=('19e5790eb90dd08900b20ccda85a7b82b2f875f84d5ac4c13a0e29282a5e4d4b9d2781d9ed5d915bbed94095398a32d3ae8eb2345f9a5883282e8713d018a273'
            'e437e43aee890dc33ffe52d4b137084efa6ff746c7c40efe9275ee9d4935e9e82a2dd13221e4a6511b69e0f8e7537155a01d87d8c5b6993af36b0355cd24d496')
noextract=("VSCode-win32.zip"
           "VSCode-win64.zip")

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+"
        "vc([ao]mp|corlib|runtime)[0-9]+"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

_prepare() {
    unzip -o "VSCode-win${_apparch}.zip" -d "vscode${_apparch}"
    _lc "vscode${_apparch}"/*
    rm "vscode${_apparch}/resources/app/node_modules/vscode-ripgrep/bin/rg"
}

prepare() {
    for _apparch in 32 64
    do
        _prepare
    done
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "vscode${_apparch}"/* "${a}"
    _rmmsdll "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    mv "${a}/resources/app"/*.{html,txt} "${a}/resources/app/licenses"/* "${d}"
    rm -r "${a}/resources/app/licenses"
}

package_app-i686-vscode() {
    _apparch=32
    _package
}

package_app-x86_64-vscode() {
    _apparch=64
    _package
}
