# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=opera-classic
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=12.18
pkgrel=1
pkgdesc="Fast and secure Presto-based web browser and Internet suite"
url="http://www.opera.com/download/guide/?os=windows&ver=12.18&local=y"
arch=('any')
license=('custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("Opera_int_Setup32.exe::http://www.opera.com/download/get/?id=39129&location=360&nothanks=yes&sub=marine"
        "Opera_int_Setup64.exe::http://www.opera.com/download/get/?id=39131&location=360&nothanks=yes&sub=marine")
sha512sums=('5a40c440b52b61d66a143d4e38050c8898769fe383ea192410fca4da541502a49032ee68b115deaa47769a3dcbfe8467a5a16b7daff4a806855459f157c619ce'
            '450fcbff79a4777703b532bff21444b67ede88145e08ea9ad1a59b803a25f53d919c1b8beaa1e86c5f7ee616f43684379be0e60cb55994f98722a9c0f1112439')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

pkgver() {
    for _apparch in 32 64
    do
        7z e -y -bd "Opera_int_Setup${_apparch}.exe" "opera.exe" > /dev/null
        b="$(cygpath -wa "opera.exe" | sed 's/\\/\\\\/g')"
        eval _ver${_apparch}="$(wmic datafile where name=\""${b}"\" get version | grep 'Version' -A 1 | tail -1 | tr -d ' ' | sed -r 's/^([0-9]+[.][0-9]+)[.][0-9]+[.]0+$/\1/')"
    done
    if [ "${_ver32}" != "${_ver64}" ]
    then
        echo "32-bit version number is different from 64-bit."
    else
        echo "${_ver32}"
    fi
}

_prepare() {
    7z x -y -bd "Opera_int_Setup${_apparch}.exe" -o"Opera_int${_apparch}"
    _lc "Opera_int${_apparch}"/*
}

prepare() {
    for _apparch in 32 64
    do
        _prepare
    done
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "Opera_int${_apparch}"/* "${a}"
    rm -r "${a}/updatechecker" "${a}"/files*

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}" "${d}/gstreamer"
    mv "${a}/gstreamer"/*.txt "${d}/gstreamer"
}

package_app-i686-opera-classic() {
    replaces=("app-i686-opera<15")
    _apparch=32
    _package
}

package_app-x86_64-opera-classic() {
    replaces=("app-x86_64-opera<15")
    _apparch=64
    _package
}
