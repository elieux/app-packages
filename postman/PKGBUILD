# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=postman
_choconame=postman
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=10.21.0
pkgrel=1
pkgdesc="A platform for building and using APIs"
url="https://www.postman.com/"
arch=('any')
license=('custom')
makedepends=("p7zip" "unzip")
provides=("${pkgbase}")
options=(!strip)
source=("Postman-win64-Setup.exe::https://dl.pstmn.io/download/latest/win64")
sha512sums=('eeb44169cb83a4ec355df9fd3a19dcf6487fece8b0ad9656cbf3f3b0d9b97d00c33b4025b7b51a0c0ec2c6f8c5a52605a895747200ae9261ac9a163ffa05b82a')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids|atomic_wait))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_([0-9]|threads))?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

prepare() {
    rm -fR "Postman-win64-Setup.dir"
    7z x -y -bd "Postman-win64-Setup.exe" -o"Postman-win64-Setup.dir" > /dev/null
    unzip -q -o "Postman-win64-Setup.dir/Postman"-*-"full.nupkg" -d "Postman-full"
}

pkgver() {
    powershell -command '(Get-Item "Postman-win64-Setup.exe").VersionInfo.ProductVersion'
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "Postman-full/lib/net45"/* "${a}"
    _rmmsdll "${a}"
    _lc "${a}"/*
}
