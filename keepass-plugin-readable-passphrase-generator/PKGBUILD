_realname=keepass-plugin-readable-passphrase-generator
_dirname=keepass
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1.1
pkgrel=1
pkgdesc="A KeePass plugin that generates gramatically correct passphrases"
url="https://bitbucket.org/ligos/readablepassphrasegenerator"
arch=('any')
license=('Apache 2.0')
depends=("app-i686-keepass")
provides=("${pkgbase}")
options=(!strip)
source=("ReadablePassphrase.plgx::https://bitbucket.org/ligos/readablepassphrasegenerator/downloads/ReadablePassphrase%20${pkgver}.0.plgx")
sha512sums=('771dc25a853195234b5b462801253e94ba3e6d23f4427e85da12d322fd060f800061a873d390a8676c41ce994a042037e72025f1422a279316463b460e42167d')

package() {
    a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/plugins"
    cp *.plgx "${a}/plugins"
}
