# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=mumble
_choconame=mumble
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=1.4.230
pkgrel=1
pkgdesc="Open Source, Low Latency, High Quality Voice Chat"
url="https://www.mumble.info/"
arch=('any')
license=('BSD')
makedepends=("app-lessmsi")
provides=("${pkgbase}")
options=(!strip)
source=("mumble_client.x64.msi::https://github.com/mumble-voip/mumble/releases/download/v${pkgver}/mumble_client-${pkgver}.x64.msi"
        "mumble_server.x64.msi::https://github.com/mumble-voip/mumble/releases/download/v${pkgver}/mumble_server-${pkgver}.x64.msi")
sha512sums=('18531ae5035fff76b989dd3ec29e4373a28fb0223145dddc7b2b57a374868aa83c29a239f603011740cc8b9fecd9f3ab7d071fd9f3c3073e805395639da5030d'
            '38967144d215c2a13b306c3f4c6d42080200edd7fe28e0a46d3d092b7ec427356c39e0975e14f3cd914ca599b8f194f5e71f0e162ca5cb3c3fb689a829d55bb7')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids|atomic_wait))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_[0-9])?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

prepare() {
    rm -fR "mumble_client.x64"
    /apps/lessmsi/lessmsi x "mumble_client.x64.msi" > /dev/null
    rm -fR "mumble_server.x64"
    /apps/lessmsi/lessmsi x "mumble_server.x64.msi" > /dev/null
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "mumble_client.x64/SourceDir/ProgramFiles64Folder/Mumble/client"/* "${a}"
    cp -R "mumble_server.x64/SourceDir/ProgramFiles64Folder/Mumble/server"/* "${a}"
    _rmmsdll "${a}"
    _lc "${a}"/*
}
