_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

_realname=7zip
_choconame=7zip
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=21.02
pkgrel=1
pkgdesc="A free file archiver for extremely high compression"
url="https://www.7-zip.org/"
arch=('any')
license=('LGPL2' 'custom')
replaces=("app-i686-${_realname}")
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("7z-x64.exe::https://7-zip.org/a/7z${pkgver//./}-x64.exe"
        "7z-extra.7z::https@subdir://7-zip.org/a/7z${pkgver//./}-extra.7z")
sha512sums=('f7670813878728cd24343406f43123a4746ec9428fd8fb2046e1f1203cbdf179f3562a2308bfe96929b50f03746dcb6d7d551bbf2e4d0dd8fb7e80fb98f61c89'
            '941b36fd73030fc1dbd9849fd370bead609e21334faf502bc6b139c4c7b9c876823b5b5e1fe95258e8155fabfac7ea3800f88ca145d5113aa79b1adf6ba63ff8')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    7z x -y -bd "7z-x64.exe" -o"7z-x64.dir" > /dev/null
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}" "${a}/extra"
    cp -R "7z-x64.dir"/* "${a}"
    cp -R "7z-extra"/* "${a}/extra"
    mv "${a}/extra/x64"/*.{dll,exe} "${a}"
    rm -R "${a}/extra/x64" "${a}/extra/Far" "${a}/extra"/7z{a.dll,a.exe,xa.dll}
    rm "${a}/Uninstall.exe"
    _lc "${a}"/*
}
