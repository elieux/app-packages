# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=php-ext-xdebug
_dirname=php
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=3.4.3
pkgrel=1
pkgdesc="PHP debugging extension"
url="https://xdebug.org/"
arch=('any')
license=('GPL')
provides=("${pkgbase}")
options=(!strip)
source=("php_xdebug-8.4-nts-vs17-x86_64.dll::https://xdebug.org/files/php_xdebug-${pkgver}-8.4-nts-vs17-x86_64.dll")
sha512sums=('deb02fac22198196cff5caa037b994c6d51cc3b5d4edf1cd5c2f3a3c9dd22e3d360cc59e2c0bffd1549370a4c93a210067b40eac956ae194412f2c5a45a8ff50')

package() {
    depends=("app-x86_64-php>=1~8.4.0" "app-x86_64-php<1~8.5.0")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/ext"
    cp "php_xdebug-8.4-nts-vs17-x86_64.dll" "${a}/ext/php_xdebug.dll"
}
