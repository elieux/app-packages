# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=gpu-z
_realver=2718
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=0.8.9
pkgrel=1
pkgdesc="Lightweight utility providing GPU and graphics card information"
arch=('any')
url="http://www.techpowerup.com/gpuz/"
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("GPU-Z.exe::http://www.techpowerup.com/downloads/${_realver}/techpowerup-gpu-z-v${pkgver//./-}/start?server=6")
sha512sums=('5df51b2663de5e732e6f401df0344a4a4b6151b38ff6941bad55169bd0172fb081119a937de488f83e02e4835f2099af83665eb462bafe4c8020f870c49aadeb')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

prepare() {
    _lc *
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r *.exe "${a}"
}
