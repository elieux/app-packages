# Maintainer: David Macek <david.macek.0@gmail.com>

DLAGENTS=('http::/usr/bin/curl -qb "" -fLC - -A "makepkg" -o %o %u')

_realname=keepass-plugin-keeagent
_dirname=keepass
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=0.6.2
pkgrel=1
pkgdesc="A KeePass plugin that acts as a SSH authentication agent"
url="http://lechnology.com/software/keeagent/"
arch=('any')
license=('unknown')
depends=("app-i686-keepass")
provides=("${pkgbase}")
options=(!strip)
source=("KeeAgent.zip::http://lechnology.com/wp-content/uploads/2015/04/KeeAgent_v${pkgver}.zip")
md5sums=('7d8641af770f80b338879cfe4f91bfff')

package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}/plugins"
    cp *.plgx "${a}/plugins"

    d="${pkgdir}/docs${_apparch}/${_dirname}"
    mkdir -p "${d}/plugins/keeagent"
    cp *.txt "${d}/plugins/keeagent"
}
