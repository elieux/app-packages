# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=notepad++
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=7.2
pkgrel=1
pkgdesc="A free Scintilla-based editor with plugin support"
url="https://notepad-plus-plus.org/"
arch=('any')
license=('GPL')
makedepends=("p7zip" "unzip")
provides=("${pkgbase}")
options=(!strip)
source=("npp.Installer.exe::https://notepad-plus-plus.org/repository/${pkgver%%.*}.x/${pkgver}/npp.${pkgver}.Installer.exe"
        "npp.bin.zip::https://notepad-plus-plus.org/repository/${pkgver%%.*}.x/${pkgver}/npp.${pkgver}.bin.zip")
sha512sums=('85ad9075277cdf52f3b81912f2446799f62735c83059d73724ba230ae29c1e1d1bc9aded140fe1e448e608e49b4d97624d260cae48cbc3d856d25918278d26c7'
            '46f0fa2c0a3dd10b8a078e5aa4dad4c533d4d4866596ad42953f7b75f99252f72e8d832d41fd38296b485061a5a2dcb9a76dd90ef0657e295ed002bcbfbc5472')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

prepare() {
    rm -f NppShell_06*.dll
    echo u | 7z x -bd -i!"NppShell_06.dll" "npp.Installer.exe"
    _lc *
    for f in nppshell_06*.dll
    do
        case $(file "${f}") in
        *80386*) mv "${f}" "nppshell_06.32.dll" ;;
        *x86-64*) mv "${f}" "nppshell_06.64.dll" ;;
        esac
    done
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r * "${a}"
    rm "${a}/dolocalconf.xml" "${a}"/npp.{installer.exe,bin.zip}

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    mv "${a}"/*.{log,txt} "${d}"
}
