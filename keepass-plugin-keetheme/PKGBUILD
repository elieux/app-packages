_realname=keepass-plugin-keetheme
_choconame=keepass-plugin-keetheme
_dirname=keepass
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=0.10.1
pkgrel=1
pkgdesc="Change the appearance of KeePass, to make it look better at night"
url="https://github.com/xatupal/KeeTheme"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("KeeTheme.plgx::https://github.com/xatupal/KeeTheme/releases/download/v${pkgver}/KeeTheme.plgx")
sha512sums=('40f359a7480a1d7494558928d66699d6396622a3767fae0ae4f6650bc116bede7b079e5b491fc68debc0306f90940a6f2b62dbef769050fc04910b050e5abb12')

package() {
    depends=("app-keepass")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/Plugins"
    cp *.plgx "${a}/Plugins"
}
