# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=teamspeak
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=3.0.19.4
pkgrel=1
pkgdesc="Quality voice communication via the Internet"
url="http://www.teamspeak.com/"
arch=('any')
license=('custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("TeamSpeak3-Client-win32.exe::http://dl.4players.de/ts/releases/${pkgver}/TeamSpeak3-Client-win32-${pkgver}.exe"
        "TeamSpeak3-Client-win64.exe::http://dl.4players.de/ts/releases/${pkgver}/TeamSpeak3-Client-win64-${pkgver}.exe"
        # "pluginsdk.zip::http://dl.4players.de/ts/client/pluginsdk/pluginsdk_${pkgver}.zip"
)
sha512sums=('2badc917847c6cad3c56e8361748fa58904d39266bab3e1c36d911a771657aebdb6c0800a4245e2fd0f86617f7cf9708533551407a3be12ad830f057d1980221'
            'da2814bc7b9870bf5958edc77c61678c672f306f348bf48b03ec36de99045245ec4f10212b792db6268a1c00585515ff0a0997089c33088343d070435eaa12a0')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_prepare() {
    w="*license*.rtf"
    7z x -y -bd -x!"${w}" "TeamSpeak3-Client-win${_apparch}.exe" -o"win${_apparch}"
    for f in $(7z l -y -bd -i!"${w}" "TeamSpeak3-Client-win${_apparch}.exe" | grep 'license.*rtf' | sed -r 's/[ ]+/\t/g' | cut -f 5 | sed 's/^.*\\//')
    do
        7z e -y -bd -so -i!"*${f}" "TeamSpeak3-Client-win${_apparch}.exe" > "win${_apparch}/${f}"
    done
    _lc "win${_apparch}"/*
}

prepare() {
    for _apparch in 32 64
    do
        _prepare
    done
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "win${_apparch}"/* "${a}"
    rm -r "${a}/update.exe" "${a}"/msvc{p,r}120.dll "${a}/uninstall.exe.nsis" "${a}/[nsis].nsi" "${a}"/'$pluginsdir'
    mv "${a}/ts3client_win${_apparch}.exe" "${a}/ts3client.exe"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    mv "${a}"/*.{txt,html,rtf} "${a}/news" "${d}"
}

package_app-i686-teamspeak() {
    _apparch=32
    _package
}

package_app-x86_64-teamspeak() {
    _apparch=64
    _package
}
