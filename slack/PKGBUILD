# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=slack
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=2.9.0
pkgrel=1
pkgdesc="Client for the Slack team communication platform"
url="http://www.slack.com/"
arch=('any')
license=('custom')
makedepends=("p7zip" "unzip")
provides=("${pkgbase}")
options=(!strip)
source=("SlackSetup32.exe::https://slack.com/ssb/download-win"
        "SlackSetup64.exe::https://slack.com/ssb/download-win64")
sha512sums=('a89662c9c55722c3cea678996b04f8c0bbf69bbc65e91f70cb91487c96f4a0263a311f3d2841987f336554dd312564d6bf4708e328040f65203eaa02f0fd0617'
            '5edef14603278a90c265a7d528abb8a4bf8265c0ebc11029b726835db24b93fe402e8d447060cafd400deb00ee729fd801abb28bda6df11e7c4ef1efef0f73b4')

_eqver() {
    local r v

    for v in "${@}"
    do
        if [ -n "${r}" -a "${r}" != "${v}" ]
        then
            echo "Version mismatch between ${r} and ${v}."
        fi
        r="${v}"
    done
    echo "${r}"
}

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+"
        "vc([ao]mp|corlib|runtime)[0-9]+"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

pkgver() {
    _vers=( $(
        for _apparch in 32 64
        do
            "${SYSTEMROOT}/System32/WindowsPowerShell/v1.0/powershell" -command '(Get-Item "SlackSetup'"${_apparch}"'.exe").VersionInfo.ProductVersion' | dos2unix
        done
    ) )
    _eqver "${_vers[@]}"
}

_prepare() {
    find -name 'slack-*-full.nupkg' -delete
    7z x -y -bd "SlackSetup${_apparch}.exe" -o"SlackSetup${_apparch}"
    unzip -o "SlackSetup${_apparch}/slack"-*-"full.nupkg" -d "SlackSetup${_apparch}"
    _lc "lib/net45"/*
}

prepare() {
    for _apparch in 32 64
    do
        _prepare
    done
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "SlackSetup${_apparch}/lib/net45"/* "${a}"
    _rmmsdll "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    mv "${a}/license" "${d}"
}

package_app-i686-slack() {
    _apparch=32
    _package
}

package_app-x86_64-slack() {
    _apparch=64
    _package
}
