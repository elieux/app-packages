# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=tightvnc
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=2.7.10
pkgrel=1
pkgdesc="Light weight VNC implementation"
url="http://www.tightvnc.com/"
arch=('any')
license=('GPL2')
provides=("${pkgbase}")
options=(!strip)
source=("tightvnc-setup-64bit.msi::http://www.tightvnc.com/download/${pkgver}/tightvnc-${pkgver}-setup-64bit.msi"
        "tightvnc-setup-32bit.msi::http://www.tightvnc.com/download/${pkgver}/tightvnc-${pkgver}-setup-32bit.msi")
md5sums=('349575dc788c24c6c726356d55d3cbaa'
         '9f5e660c6bad014c8a0ce5eddf4bb50b')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

_build() {
    msiexec -a "tightvnc-setup-${_apparch}bit.msi" "TARGETDIR=$(cygpath -wa "install${_apparch}")" -qn
}

build() {
    for _apparch in 32 64
    do
        _build
    done
}

_package() {
    s="install${_apparch}/PFiles/TightVNC"

    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "${s}"/*.{exe,dll} "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    cp "${s}"/*.{txt,url} "${d}"
}

package_app-i686-tightvnc() {
    _apparch=32
    _package
}

package_app-x86_64-tightvnc() {
    _apparch=64
    _package
}
