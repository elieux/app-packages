# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=docker-engine
_choconame=docker-engine
_dirname=docker
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=23.0.6
pkgrel=1
pkgdesc="Pack, ship and run any application as a lightweight container"
url="https://docs.docker.com/engine/"
arch=('any')
license=('Apache')
provides=("${pkgbase}")
options=(!strip)
source=("docker.zip::https://download.docker.com/win/static/stable/x86_64/docker-${pkgver}.zip")
sha512sums=('d7fe954912f64c4a9302e0ba73b3a058fa5f22ff45b07c0de080b349d8aab5daa7d4efcdbfc720619e1a2d013182c23fb19bd1b61f67b8ee392dbda2dc998f25')

package() {
    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}"
    cp "docker"/* "${a}/"
    rm "${a}/docker.exe"
}
