# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=nginx
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1.19.2
pkgrel=1
pkgdesc="Lightweight HTTP server and IMAP/POP3 proxy server"
url="https://nginx.org/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("nginx.zip::https://nginx.org/download/nginx-${pkgver}.zip")
sha512sums=('3fc98d636a3e43e6577820149c5acb74bb625ef837b1ed0635d1fcd44e403d6eaeed17213ca44dc6d624096400973e1d05d93e3df9d6d49eb8d81f1e9cd88d6d')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "nginx-${pkgver}"/* "${a}"
    rm -R "${a}"/{logs,temp}
}
