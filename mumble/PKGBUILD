# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=mumble
_choconame=mumble
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=1.3.3
pkgrel=1
pkgdesc="Open Source, Low Latency, High Quality Voice Chat"
url="https://www.mumble.info/"
arch=('any')
license=('BSD')
makedepends=("app-lessmsi")
provides=("${pkgbase}")
options=(!strip)
source=("mumble.winx64.msi::https://github.com/mumble-voip/mumble/releases/download/${pkgver}/mumble-${pkgver}.winx64.msi")
sha512sums=('e97cadaffd8ab7e20c9ad006f9e2d78a12383a3fb2c2c6af179ef307a8e51972e9e90559a7ae41a7e1f23148731dc67aed1f59584b599374b58f572834beda7c')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_[0-9])?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

prepare() {
    rm -fR "mumble.winx64"
    /apps/lessmsi/lessmsi x "mumble.winx64.msi" > /dev/null
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "mumble.winx64/SourceDir/Mumble"/* "${a}"
    _rmmsdll "${a}"
    _lc "${a}"/*
}
