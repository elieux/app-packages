_chocover() {
    # choco version format: 1.53.4.20210131
    echo "${1}" | sed -r 's/^([0-9]+)[.]([0-9]+)[.]([0-9]+)[.][0-9]{8}$/\1.\2.\3/'
}

_realname=rclone
_choconame=rclone
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=1.56.1
pkgrel=1
pkgdesc="Syncs your files to cloud storage"
url="https://rclone.org/"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("rclone-windows-amd64.zip::https://downloads.rclone.org/v${pkgver}/rclone-v${pkgver}-windows-amd64.zip")
sha512sums=('8d9133cfca859ac67496b75d696087f93607ab5fafb8c18d0b841c4439140fd4569912658c1471c595e18a055f09c9b3caec274624c90bdd0dc1dceaf73289c9')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "rclone-v${pkgver}-windows-amd64"/* "${a}"
}
