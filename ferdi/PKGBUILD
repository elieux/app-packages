# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=ferdi
_choconame=ferdi
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=5.6.2
pkgrel=1
pkgdesc="Combine your favourite messaging services into one application, community fork of Franz"
url="https://getferdi.com/"
arch=('any')
license=('Apache2')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("Ferdi-Setup.exe::https://github.com/getferdi/ferdi/releases/download/v${pkgver}/Ferdi-Setup-${pkgver}.exe")
sha512sums=('0d7a478f101bf0c7b9354a3716330756f960c44ddf01dc952a8de9c7f9d2486f730338871305a4325c776b3da27f0efd76e8f8d8355fb7fc12b8657a4b1919ba')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    7z x -y -bd "Ferdi-Setup.exe" -o"Ferdi-Setup.dir" > /dev/null
    7z x -y -bd "Ferdi-Setup.dir"/'$PLUGINSDIR'/"app-64.7z" -o"app-64" > /dev/null
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "app-64"/* "${a}"
    _lc "${a}"/*
}
