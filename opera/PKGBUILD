# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=opera
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=44.0.2510.1218
pkgrel=1
pkgdesc="A fast and free Blink-based web browser"
url="http://www.opera.com/computer"
arch=('any')
license=('custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("Opera_Setup_x32.exe::http://ftp.opera.com/pub/opera/desktop/${pkgver}/win/Opera_${pkgver}_Setup.exe"
        "Opera_Setup_x64.exe::http://ftp.opera.com/pub/opera/desktop/${pkgver}/win/Opera_${pkgver}_Setup_x64.exe")
sha512sums=('762a3c9943e89defe340f36087000bdd947606758170e5ac9759f3492ef2218670328e7d3a2250fa1bd978a445bc1e266497fb34df81bcec57f25a4a53c74e78'
            'c616f5a6b1ade712914d65ce3a2591d24bf2aaee1334dfd0754207fe933d1c4b263e285c3cf5edd8b0386f21b3ad38d15e5d588840299660a0dd82f1ebcbdf79')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_prepare() {
    7z x -y -bd "Opera_Setup_x${_apparch}.exe" -o"Opera${_apparch}"
    _lc "Opera${_apparch}"/*
}

prepare() {
    for _apparch in 32 64
    do
        _prepare
    done
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "Opera${_apparch}"/* "${a}"
    rm -r "${a}"/{assets,root_files_list,files_list,launcher.exe,launcher.visualelementsmanifest.xml,resources.pri} "${a}"/{msvcp100.dll,msvcr100.dll} "${a}"/{installer.exe,opera_autoupdate.exe,opera_autoupdate.licenses,opera_autoupdate.version}
    rm "${a}"/{msvcp,pgort,vccorlib,vcruntime}140.dll "${a}/ucrtbase.dll"
}

package_app-i686-opera() {
    replaces=("app-i686-opera2")
    conflicts=("app-i686-${_realname}<15")
    _apparch=32
    _package
}

package_app-x86_64-opera() {
    replaces=("app-x86_64-opera2")
    conflicts=("app-x86_64-${_realname}<15")
    _apparch=64
    _package
}
