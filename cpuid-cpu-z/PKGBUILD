_chocover() {
    # choco version format: 2.0.0
    echo "${1}" | sed -r -e 's/^([0-9]+)[.]([0-9]+)[.]0$/\1.\2/' -e 's/^([0-9]+)[.]([0-9])$/\1.\2\E0/'
}

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

download_http@subdir() {
    download_file "${1/@subdir:/:}"
}

extract_http@subdir() {
    _extract_subdir "${@}"
}

_realname=cpu-z
_choconame=cpu-z
_dirname=cpuid
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=2.01
pkgrel=1
pkgdesc="Gathers information on some of the main devices of your system (CPUID)"
url="https://www.cpuid.com/softwares/cpu-z.html"
arch=('any')
license=('custom')
replaces=("app-i686-${_realname}")
provides=("${pkgbase}")
options=(!strip)
source=("cpu-z-en.zip::http@subdir://download.cpuid.com/cpu-z/cpu-z_${pkgver}-en.zip")
sha512sums=('cac46b514b5fd906b43fc21f83c2c89daf8bf0377b0921240684607d7a7ce4c0745e0448be92e1a566f71bd7fd742fadfa3866fcdf7e3dfe55ba6e57c37cc9f4')

package() {
    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}"
    cp "cpu-z-en"/* "${a}"
    rm "${a}/cpuz_x32.exe"
    mv "${a}/cpuz_x64.exe" "${a}/cpuz.exe"
}
