# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=nconvert
_dirname=xnview
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=7.41
pkgrel=1
pkgdesc="A powerful command line multi-platform batch image processor"
arch=('any')
url="https://www.xnview.com/en/nconvert/"
license=('custom')
replaces=("app-i686-${_realname}")
provides=("${pkgbase}")
options=(!strip)
source=("NConvert-win64.zip::https://download.xnview.com/NConvert-win64.zip")
sha512sums=('b0ce20191dee340b400a71fc2983112b7f78ff371c3f40c88cdf1ba13feabc46b5a9de57c13d5c2852b8b4f392db3cc8cf65e48160ceb71d19eef65ff5f5a776')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_[0-9])?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

pkgver() {
    cat "NConvert/whatsnew.txt" | head -1 | sed -r 's/^.*NConvert v([0-9.]+).*$/\1/'
}

package() {
    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}"
    cp "NConvert"/* "${a}"
    _rmmsdll "${a}"
    _lc "${a}"/*
}
