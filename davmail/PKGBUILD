# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

_realname=davmail
_choconame=davmail
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=6.5.1.3873
pkgrel=1
pkgdesc="A gateway allowing usage of any mail/calendar client with an Exchange server"
url="http://davmail.sourceforge.net/"
arch=('any')
license=('GPL2')
replaces=("app-i686-${_realname}")
provides=("${pkgbase}")
options=(!strip)
source=("davmail-windows-standalone.zip::https@subdir://downloads.sourceforge.net/davmail/davmail/${pkgver%.*}/davmail-$(echo "${pkgver}" | sed -r 's/([0-9]+)[.]([0-9]+)[.]([0-9]+)[.]([0-9]+)/\1.\2.\3-\4/')-windows-standalone.zip")
sha512sums=('4185e1f0a2e803316c2f32a471ed93db8998ddfd1e3e9b5a8bcd1632333c02f97df0546cb32cb8171a8ef8f8be554a1dfb3d05833eae67796cde4b4e2cadb441')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "davmail-windows-standalone"/* "${a}"
    mv -f "${a}/davmail64.exe" "${a}/davmail.exe"
    mv -f "${a}/davmailservice64.exe" "${a}/davmailservice.exe"
    rm "${a}/davmail64.ini" "${a}/davmailservice64.ini"
    rm -R "${a}/jre"
}
