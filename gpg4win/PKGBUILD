# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=gpg4win
_choconame=Gpg4win
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=4.0.2
pkgrel=1
pkgdesc="A secure solution for file and email encryption"
url="https://www.gpg4win.org/index.html"
arch=('any')
license=('custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("gpg4win.exe::https://files.gpg4win.org/gpg4win-${pkgver}.exe")
sha512sums=('8bae8c7a438eb86cc0a4ac0a6c5c55660104d6cbce133fe00cd5116540a84dd7cb40ad3411039b9d033d163e397e17f51e10208f64cb7d6a5a3c771d3f7650a8')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    7z x -y -bd "gpg4win.exe" -o"gpg4win.dir" > /dev/null
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "gpg4win.dir"/* "${a}"
    find "${a}" -iname '*.tmp' -delete
    rm -R "${a}"/'$PLUGINSDIR' "${a}"/'$TEMP'  "${a}/gpg4win-uninstall.exe.nsis"
    rm "${a}/bin/pinentry.exe"
    cp "${a}/bin/pinentry-w32.exe" "${a}/bin/pinentry.exe"
    _lc "${a}"/*
}
