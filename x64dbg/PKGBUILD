_chocover() {
    # choco version format: 20201112.0512
    echo "${1}" | sed -r 's/^([0-9]{4})([0-9]{2})([0-9]{2})[.]([0-9]{2})([0-9]{2})$/\1.\2.\3.\4.\5/'
}

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=x64dbg
_choconame=x64dbg.portable
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=2021.05.08.14.17
pkgrel=1
pkgdesc="An open-source x64/x32 debugger for Windows"
arch=('any')
url="https://x64dbg.com/"
license=('GPL3')
provides=("${pkgbase}")
options=(!strip)
source=("snapshot.zip::https@subdir://github.com/x64dbg/x64dbg/releases/download/snapshot/snapshot_$(echo "${pkgver}" | sed -r 's/^([0-9]+)[.]([0-9]+)[.]([0-9]+)[.]([0-9]+)[.]([0-9]+)$/\1-\2-\3_\4-\5/').zip")
sha512sums=('16eb634a2790ceb3f07f66801e36f8cea57029c27ec5bc587592474860c16d6fc537985ffa783a0b73d89de7954a390cb0fc9d29e277159d36c52152c695d65c')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "snapshot"/* "${a}"
    mv "${a}/release"/* "${a}"
    rm -R "${a}/release"
}
