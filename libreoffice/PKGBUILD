# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=libreoffice
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=6.0.2
pkgrel=1
pkgdesc="The free office suite"
url="https://www.libreoffice.org/"
arch=('any')
license=('LGPL3' 'custom:Apache')
replaces=("app-i686-${_realname}")
provides=("${pkgbase}")
options=(!strip)
source=("LibreOffice_Win64.msi::http://download.documentfoundation.org/libreoffice/stable/${pkgver}/win/x86_64/LibreOffice_${pkgver}_Win_x64.msi")
sha512sums=('2cf5102052995002d1fbafbf21b7edc7bfdbc11d121f4e19e19ef8f2b650b9b45e9915fb50af4c88245db9e66a07fc3c6527eaa65ac34abc8845a3227adef37d')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

build() {
    msiexec -a "LibreOffice_Win64.msi" "TARGETDIR=$(cygpath -wa "msi")" -qn
    _lc "msi"/*
}

package() {
    a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -r "msi"/* "${a}"
    rm -r "${a}"/{fonts,system64} "${a}"/*.msi
}
