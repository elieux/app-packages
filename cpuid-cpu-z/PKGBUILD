_realname=cpu-z
_dirname=cpuid
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=1.90
pkgrel=1
pkgdesc="Gathers information on some of the main devices of your system (CPUID)"
url="http://www.cpuid.com/softwares/cpu-z.html"
arch=('any')
license=('custom')
replaces=("app-i686-${_realname}")
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("cpu-z-en.zip::http://download.cpuid.com/cpu-z/cpu-z_${pkgver}-en.zip")
sha512sums=('dfaf89242da40b98b9fd85fa8a245c5a810c6aa1d0ac37e06823175d751f58556c9196e60feb91f261362e0855c99e417f759f0250d7fade8d06549de3a65a7e')

package() {
    a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}"
    cp "cpuz_x64.exe" "${a}/cpuz.exe"
    cp "cpuz.ini" "${a}"
    cp "cpuz_readme.txt" "${a}/cpuz.txt"
}
