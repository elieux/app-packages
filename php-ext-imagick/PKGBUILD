_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=php-ext-imagick
_dirname=php
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=3.8.0
pkgrel=2
pkgdesc="PHP extension to create and modify images using the ImageMagick library"
url="https://pecl.php.net/package/imagick"
arch=('any')
license=('PHP')
provides=("${pkgbase}")
options=(!strip)
source=("php_imagick-8.5-nts-vs17-x64.zip::https@subdir://downloads.php.net/~windows/pecl/releases/imagick/${pkgver}/php_imagick-${pkgver}-8.5-nts-vs17-x64.zip")
sha512sums=('2f01a36c0f6efc82b5a57ed9e27be9bddcb6d9c44c57e9647f5b746a6e2d97746bc55cc23cf93f51534e167f74093de53d6ac656ad7ba26ee2bcb825209b673e')

package() {
    depends=("app-x86_64-php>=1~8.5.0" "app-x86_64-php<1~8.6.0")

    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}/ext" "${a}/ext/imagick"
    cp -R "php_imagick-8.5-nts-vs17-x64"/* "${a}/ext/imagick"
    rm "${a}/ext/imagick"/*.pdb
    mv "${a}/ext/imagick/php_imagick.dll" "${a}/ext"
    mv "${a}/ext/imagick"/*.dll "${a}"
}
