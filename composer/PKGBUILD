# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=composer
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=2.5.8
pkgrel=1
pkgdesc="A dependency manager for PHP"
url="https://getcomposer.org/"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("composer.phar::https://github.com/composer/composer/releases/download/${pkgver}/composer.phar")
sha512sums=('365de0fdb261d06c91e0c495d5a323a288c0041eda2f240ec9fa0a557a8f034ac8fbdd2b0149550279346891c724083a96786614d87ddeb9d1b98bfcff560823')

package() {
    depends=("app-php")

    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp "composer.phar" "${a}"
}
