# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=nginx
_choconame=nginx
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1.29.3
pkgrel=1
pkgdesc="Lightweight HTTP server and IMAP/POP3 proxy server"
url="https://nginx.org/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("nginx.zip::https://nginx.org/download/nginx-${pkgver}.zip")
sha512sums=('f020a65c57ae8fa61079bbdb760174200634487f965216558d0813f3a2279cc5b5edff507efc7e409c6474d3f04ada19557883d990180a9d685ad50e3f1d177e')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "nginx-${pkgver}"/* "${a}"
    rm -R "${a}"/{logs,temp}
}
