# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=gnupg
_realver=2.2.17_20190709
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=${_realver%%_*}
pkgrel=1
pkgdesc="Complete and free implementation of the OpenPGP standard"
url="http://www.gnupg.org/"
arch=('any')
license=('custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("gnupg-w32.exe::ftp://ftp.gnupg.org/gcrypt/binary/gnupg-w32-${_realver}.exe")
sha512sums=('f1b8092e595e95f13a90fb4209886cce62ff85027b4129077177587265d8dc8a460a61e709391ff722fc480bb1c58108d9e9a8aed2bf4326fbfbb45300a8491f')

prepare() {
    7z x -y -bd "gnupg-w32.exe"
}

package() {
    a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -r "bin" "include" "lib" "share" "${a}"
    find "${a}" -iname '*.tmp' -delete
    cp -r "README.txt" "${a}"
}
