# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=innounp
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=0.45
pkgrel=1
pkgdesc="Inno Setup unpacker"
url="http://innounp.sourceforge.net/"
arch=('any')
license=('GPL')
makedepends=("unrar")
provides=("${pkgbase}")
options=(!strip)
source=("innounp.rar::http://downloads.sourceforge.net/${_realname}/${_realname}/${_realname}%20${pkgver}/${_realname}${pkgver//./}.rar")
sha512sums=('33ade973785b074292f877253c7bc898bd1d4b258a1f8f5e1e6b372529e783d2e2981b9eaeacf4861be06f4bc55c3ed0492d96ce627d567a8c8ed9a4698b90b0')
noextract=("${source[@]%%::*}") # "Parsing filters is unsupported"

prepare() {
    unrar x -idq -tsm -o+ "innounp.rar"
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp *.exe "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    cp *.htm "${d}"
}

