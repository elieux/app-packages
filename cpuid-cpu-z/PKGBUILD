# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=cpu-z
_dirname=cpuid
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=1.78
pkgrel=1
pkgdesc="Gathers information on some of the main devices of your system (CPUID)"
url="http://www.cpuid.com/softwares/cpu-z.html"
arch=('any')
license=('custom')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("cpu-z-en.zip::http://download.cpuid.com/${_realname}/${_realname}_${pkgver}-en.zip")
sha512sums=('3f9ecc4dfb49b3ba0f55b5ebcec29a9e60fa9d76ccf3571108ad71b0bd94c7a70d3761346582ea0b864d6e3bcc4f8c179f25e2de8bd861b7182ccb78f7ba85ed')

_package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}"
    cp "cpuz_x${_apparch}.exe" "${a}/cpuz.exe"
    cp "cpuz.ini" "${a}"

    d="${pkgdir}/docs${_apparch}/${_dirname}"
    mkdir -p "${d}"
    cp "cpuz_readme.txt" "${d}/cpuz.txt"
}

package_app-i686-cpu-z() {
    _apparch=32
    _package
}

package_app-x86_64-cpu-z() {
    _apparch=64
    _package
}
