# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=cpu-z
_dirname=cpuid
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=1.79
pkgrel=1
pkgdesc="Gathers information on some of the main devices of your system (CPUID)"
url="http://www.cpuid.com/softwares/cpu-z.html"
arch=('any')
license=('custom')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("cpu-z-en.zip::http://download.cpuid.com/${_realname}/${_realname}_${pkgver}-en.zip")
sha512sums=('06a04667167f91ae87d5a2e8b35e1958423a01638d45829cac4497ff0c1ecc03637086ca65736805cd68e6bfe345f7d5c637e5678928d3d491c6a71c6fde9db0')

_package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}"
    cp "cpuz_x${_apparch}.exe" "${a}/cpuz.exe"
    cp "cpuz.ini" "${a}"

    d="${pkgdir}/docs${_apparch}/${_dirname}"
    mkdir -p "${d}"
    cp "cpuz_readme.txt" "${d}/cpuz.txt"
}

package_app-i686-cpu-z() {
    _apparch=32
    _package
}

package_app-x86_64-cpu-z() {
    _apparch=64
    _package
}
