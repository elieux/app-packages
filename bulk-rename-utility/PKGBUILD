# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

_dirname=bulk-rename
_realname=bulk-rename-utility
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=3.4.1.0
pkgrel=1
pkgdesc="File renaming software"
arch=('any')
url="https://www.bulkrenameutility.co.uk/"
license=('custom')
replaces=("app-i686-${_realname}")
provides=("${pkgbase}")
options=(!strip)
source=("BRU_NoInstall.zip::https@subdir://www.bulkrenameutility.co.uk/Downloads/BRU_NoInstall.zip")
sha512sums=('788024844808394b8333fcfa51bd5bbfafa3ac3925e4fa73c34c67ff74b62e54a604c7cd69f6fa50df8f660e17e676e0bdb962c0d1c122e121ee5b988eefd037')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

pkgver() {
    powershell -command '(Get-Item "BRU_NoInstall/64-bit/Bulk Rename Utility.exe").VersionInfo.ProductVersionRaw.ToString()'
}

package() {
    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}"
    cp -R "BRU_NoInstall/64-bit"/* "BRU_NoInstall/All"/* "${a}"
    mv "${a}/Bulk Rename Utility.exe" "${a}/BRU.exe"
    _lc "${a}"/*
}
