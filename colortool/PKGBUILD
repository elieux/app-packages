_realname=colortool
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1904.29002
pkgrel=1
pkgdesc="Windows Console Colortool"
url="https://github.com/microsoft/terminal/tree/master/src/tools/ColorTool"
arch=('any')
license=('custom')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("colortool.zip::https://github.com/microsoft/terminal/releases/download/${pkgver}/colortool.zip")
sha512sums=('33fe16d675213fd09b80c5f0477471bc15b2f9cd3112fb5e78693ea9249e41beb52f3fddae6c168d1611d363df81a4683060cd4a61b3a266efada1b48b15c8c8')

package() {
    a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R *.exe "schemes" "${a}"
}
