_realname=keepass-plugin-http
_dirname=keepass
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=1.8.4.0
pkgrel=2
pkgdesc="A KeePass plugin to expose password entries securely over HTTP"
url=""
arch=('any')
license=('unknown')
depends=("app-i686-keepass")
provides=("${pkgbase}")
options=(!strip)
source=("KeePassHttp.plgx::http://github.com/pfn/keepasshttp/raw/${pkgver}/KeePassHttp.plgx"
        "README.md::http://github.com/pfn/keepasshttp/raw/${pkgver}/README.md")
sha512sums=('1fe71c0363e2cbbb1f8d0f668be326876088f128d5945a81124fd419e7ddba87a8eb762aa80c91944d0dcaa072d2cf6012d186380817456d8e307878e768ad0c'
            '867ac4ac041608c0e18b9eba6de54320a9b4916d17a6ce9b0c4e83b21cfce3027e5a3ba732764874ff1db37dd4d3d4cf03fc8c6f322549b606eec5f2937ef930')

package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}/plugins"
    cp *.plgx "${a}/plugins"

    d="${pkgdir}/docs${_apparch}/${_dirname}"
    mkdir -p "${d}/plugins/http"
    cp *.md "${d}/plugins/http"
}
