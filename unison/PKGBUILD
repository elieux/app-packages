# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=unison
_choconame=unison
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=2.53.8
pkgrel=1
pkgdesc="Two-way file synchronizer"
url="https://www.cis.upenn.edu/~bcpierce/unison/"
arch=('any')
license=('GPL')
replaces=("app-i686-${_realname}")
provides=("${pkgbase}")
options=(!strip)
source=("unison-windows-x86_64.zip::https://github.com/bcpierce00/unison/releases/download/v${pkgver}/unison-${pkgver}-windows-x86_64.zip")
sha512sums=('c1ea4a68b8f2bc70101bfc3d54a5c6e6d792a55962595f958c1a6170581647921a3f11cb652bbf545c53758245a9153c43410df60dd2e5f2ff1818e371faccdd')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"

    cp -R "unison-${pkgver}-windows-x86_64"/* "${a}"
    mv "${a}/bin/unison"* "${a}"
    rm -R "${a}"/{bin,etc,lib,share}
}
