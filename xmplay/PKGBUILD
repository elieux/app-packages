# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=xmplay
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=3.8.2.3
pkgrel=1
pkgdesc="Light weight, pluggable audio player"
url="http://www.un4seen.com/xmplay.html"
arch=('any')
license=('custom')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("xmplay.zip::http://us.un4seen.com/files/xmplay38.zip")
sha512sums=('c1a4875874004d9efe32f54b004f60607a4a5b11a43af709c1d3a2c48ae6d2b08f93e0fcbe58a4032bbbf0909e3c1af46c7084d92f5c43b94ec6ac48e9cc7fc6')

pkgver() {
    b="$(cygpath -wa "xmplay.exe" | sed 's/\\/\\\\/g')"
    wmic datafile where name=\""${b}"\" get version | grep 'Version' -A 1 | tail -1 | tr -d ' '
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r *.{dll,exe} "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    cp -r *.txt "${d}"
}
