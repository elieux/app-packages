# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=ketarin
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1.8.9
pkgrel=1
pkgdesc="A small application which automatically updates setup packages"
url="https://ketarin.org"
arch=('any')
license=('custom')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("Ketarin.zip::https://ketarin.org/downloads/Ketarin/Ketarin-${pkgver}.zip?noredirect")
sha512sums=('0de7fffefcfe62d989511157a55d9f01a1cd9c5b7a2949c9b86bd402b78ab8a1dbe805d291339bb153da2d55cd084c9b294034402cd5c161abe9654c72a4cbeb')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    _lc *
}

package() {
    a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp *.{exe,dll,config} "${a}"
}
