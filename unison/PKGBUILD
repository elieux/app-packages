# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=unison
_choconame=unison
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=2.48.4
pkgrel=1
pkgdesc="Two-way file synchronizer"
url="https://www.cis.upenn.edu/~bcpierce/unison/"
arch=('any')
license=('GPL')
provides=("${pkgbase}")
makedepends=("p7zip")
options=(!strip)
source=("Unison-Windows.zip::https@subdir://github.com/bcpierce00/unison/releases/download/${pkgver}/Unison-Windows-${pkgver}.zip"
        # ugly bundled dependency because who keeps 32-bit GTK+ around
        "gtk2-runtime-ash.exe::https://downloads.sourceforge.net/gtk-win/gtk2-runtime-2.24.10-2012-10-10-ash.exe")
sha512sums=('2e2c282c0729c1078a46bb4d090404c9d5f39baa1fabf78c873b33f3c3b027d2c99b6830696c7bb82b2387dd813353779620370581a2ecb79f95369f1390478d'
            '61c3e9ba1edae1778f2ebf0674afd072acca191617abcb2d8df334428e1a938ce8dfe7b63e8eb72b9a41e063e7064184ba922ac4d607fc9fedb80e7d79c3d8a0')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    7z x -y -bd "gtk2-runtime-ash.exe" -o"gtk2-runtime-ash.dir" > /dev/null
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"

    cp -R "gtk2-runtime-ash.dir"/* "${a}"
    mv "${a}"/'$_63_' "${a}/bin"
    rm -R "${a}"/'$PLUGINSDIR' "${a}/gtk2_runtime_uninst.exe" "${a}/bin"/*.exe{,.manifest}

    cp "Unison-Windows"/* "${a}/bin"
    mv "${a}/bin/unison ${pkgver} GTK.exe" "${a}/bin/unison-gui.exe"
    mv "${a}/bin/unison ${pkgver} text.exe" "${a}/bin/unison.exe"

    _lc "${a}"/*
}
