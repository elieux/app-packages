# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=xnview-mp
_choconame=XnViewMP
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=1.6.4
pkgrel=1
pkgdesc="A multi-platform photo and picture viewer"
url="https://www.xnview.com/en/xnviewmp/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("XnView_MP-win-x64.zip::https://download.xnview.com/old_versions/XnView_MP/XnView_MP-${pkgver}-win-x64.zip")
sha512sums=('b43ab5f48d7c2f2899e58e738774e9ad208e6e23cde91365a5428d850790950e36b3b5b353fcac71c43c1937292b77bec72fe4abb371708a1811194e46a72fdc')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+(_([0-9]|codecvt_ids|atomic_wait))?"
        "vc([ao]mp|corlib|runtime)[0-9]+(_([0-9]|threads))?"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "XnViewMP"/* "${a}"
    rm "${a}/vc_redist.x64.exe" "${a}/The latest supported Visual C++ downloads.URL"
    _rmmsdll "${a}"
    _lc "${a}"/*
}
