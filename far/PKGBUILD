# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=far
_realver=30b5151-20180227
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver="$(echo -n "${_realver}" | sed -r 's/^([0-9])([0-9])b([0-9]+)-[0-9]+$/\1.\2.\3/')"
pkgrel=2
pkgdesc="Extensible text mode file manager"
url="http://farmanager.com/index.php?l=en"
arch=('any')
license=('GPL2' 'BSD' 'custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("Far.x86.7z::http://farmanager.com/files/Far${_realver%%-*}.x86.${_realver##*-}.7z"
        "Far.x64.7z::http://farmanager.com/files/Far${_realver%%-*}.x64.${_realver##*-}.7z")
sha512sums=('afd571801d7e50f4516c4a0d710be1a10018ae849725a480f7bf0483c1d89b4f8bc66e82024aa453ba7673ebb2c93fcdd1166bd028f2b077cc7d332e3434ec22'
            '39c008345c1dea04d74e1d17503187dd06bbb434dc5a16db3380310692741aa8c41c7fb7c2c154b3f32c991aece191f76b3fd162b03369e24a77ada03d664df8')
noextract=("${source[@]%%::*}")

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    for f in *.7z
    do
        7z x -y -bd "${f}" -o"${f%%.7z}"
        _lc "${f%%.7z}"/*
    done
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "Far.x${1}"/*.{exe,lng,hlf,dll,cmd} "Far.x${1}"/{addons,plugins,pluginsdk} "${a}"
    cp -r "Far.x${1}"/*.{ini,diz,map} "Far.x${1}"/changelog{,_eng} "Far.x${1}"/{documentation,encyclopedia} "${a}"
}

package_app-i686-far() {
    _apparch=32
    _package "86"
}

package_app-x86_64-far() {
    _apparch=64
    _package "64"
}
