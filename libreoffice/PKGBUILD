# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=libreoffice
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=4.4.5
pkgrel=1
pkgdesc="The free office suite"
url="https://www.libreoffice.org/"
arch=('any')
license=('LGPL3' 'custom:Apache')
provides=("${pkgbase}")
options=(!strip)
source=("LibreOffice_Win_x86.msi::http://download.documentfoundation.org/libreoffice/stable/${pkgver}/win/x86/LibreOffice_${pkgver}_Win_x86.msi")
md5sums=('fcea53a0d8217048c3f03939d9715ce2')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

build() {
    msiexec -a "LibreOffice_Win_x86.msi" "TARGETDIR=$(cygpath -wa "msi")" -qn
    _lc "msi"/*
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "msi"/* "${a}"
    rm -r "${a}"/{Fonts,Win} "${a}"/*.msi "${a}/program"/msvc{p,r}80.dll "${a}/program/shlxthdl"/msvc{p,r}110.dll
    echo -n "ure" > "${a}/ure-link"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    mv "${a}/readmes" "${a}/notice" "${a}"/*.{html,txt} "${d}"
}
