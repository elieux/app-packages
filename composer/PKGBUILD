# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=composer
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=2.8.12
pkgrel=1
pkgdesc="A dependency manager for PHP"
url="https://getcomposer.org/"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("composer.phar::https://github.com/composer/composer/releases/download/${pkgver}/composer.phar")
sha512sums=('9cc94c7dc1932d4ea2ed95dc439fbddcbcae97a0bae01a4d66ab4c3d53ba3ab6120e1640a32d3ef127c1a62c8b31ae40037156b7712d1889ebc15b4c939c2210')

package() {
    depends=("app-php")

    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp "composer.phar" "${a}"
}
