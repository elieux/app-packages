# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=keepass-plugin-pronounceable-password-generator
_dirname=keepass
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=1.0.4b
pkgrel=2
pkgdesc="A KeePass plugin that generates pronounceable passwords"
url="http://sourceforge.net/projects/pronouncepwgen/"
arch=('any')
license=('GPL3')
depends=("app-i686-keepass")
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("PronouncePwGen.zip::http://downloads.sourceforge.net/pronouncepwgen/pronouncepwgen/${pkgver}/PronouncePwGen-${pkgver}.zip")
sha512sums=('b897c49413a94f35a7f5d92c3c43215bd41da1ae7f9f2694cb17ab611b59286a75a20f6586c94b41f17a77786440fdb4ecb5655761ed14c8bef83e858755f8cf')

package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}/plugins" "${a}/plugins/pronounceable-password-generator"
    cp *.plgx "${a}/plugins"
    cp -r "ppgsub" "${a}"
    cp *.txt "${a}/plugins/pronounceable-password-generator"
}
