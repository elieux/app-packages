# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=wincheater-data
_dirname=wincheater
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=176
pkgrel=1
pkgdesc="Texts for WinCheater"
url="http://www.cheater.cz/winch/win_download_knihovny.htm"
arch=('any')
license=('custom')
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("texty.exe::http://www.cheater.cz/download/upd/${pkgver}/texty.exe")
md5sums=('a621d5311df893761a64a05af7709f21')
noextract=("texty.exe")

prepare() {
    # 7z x -y -bd "texty.exe" # unsupported method
    true
}

build() {
    "./texty.exe" -d. -s
}

package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}"
    cp *.sct "${a}"
}
