# Maintainer: David Macek <david.macek.0@gmail.com>

_chocover() {
    # 3.24.0 -> 3.24
    echo "${1}" | sed -r -e 's/^([0-9]+)[.]([0-9]+)[.]0$/\1.\2/'
}

_realname=mp3tag
_choconame=mp3tag
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=3.33
pkgrel=1
pkgdesc="Powerful audio metadata editor"
arch=('any')
url="https://mp3tag.de/en/index.html"
license=('custom')
replaces=("app-i686-${_realname}")
makedepends=("p7zip")
provides=("${pkgbase}")
options=(!strip)
source=("mp3tag-x64-setup.exe::https://download.mp3tag.de/mp3tag-v${pkgver}-x64-setup.exe")
sha512sums=('e1847d1d30b06b7e70d6a616465611caf5231b3d8a99120803895bbfa0412498e243fd2aabf1a83c89400a74d65b4216b0510a0010b258b3935ca58029bd4157')
noextract=("mp3tag-x64-setup.exe")

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    local w f
    w="*license*.txt"
    7z x -y -bd -x!"${w}" "mp3tag-x64-setup.exe" -o"mp3tag-x64-setup.dir" > /dev/null
    for f in $(7z l -y -bd -i!"${w}" "mp3tag-x64-setup.exe" | grep 'license.*txt' | sed -r 's/[ ]+/\t/g' | cut -f 5 | sed 's/^.*\\//')
    do
        7z e -y -bd -so -i!"*${f}" "mp3tag-x64-setup.exe" > "mp3tag-x64-setup.dir/${f}"
    done
}

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}" "${a}/help"
    cp -R "mp3tag-x64-setup.dir"/* "${a}"
    touch "${a}/help/helpmap.idx"
    rm -R "${a}"/'$PLUGINSDIR' "${a}"/'$R0' "${a}"/'$R2'
    _lc "${a}"/*
}
