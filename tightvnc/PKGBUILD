# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=tightvnc
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=2.7.10
pkgrel=1
pkgdesc="Light weight VNC implementation"
url="http://www.tightvnc.com/"
arch=('any')
license=('GPL2')
provides=("${pkgbase}")
options=(!strip)
source=("tightvnc-setup-64bit.msi::http://www.tightvnc.com/download/${pkgver}/tightvnc-${pkgver}-setup-64bit.msi"
        "tightvnc-setup-32bit.msi::http://www.tightvnc.com/download/${pkgver}/tightvnc-${pkgver}-setup-32bit.msi")
sha512sums=('2eee6968fa627508d83c4b1f16fc274602e593e3dea65eedf333fd8f061247f081c8b68d48406cd1a261c772272a608c44bed498f085b63e3ea42c7b1c691252'
            '5d8974aeb07ef6f9189e6369048f4a83bb934d04b282f7ba4c7c0083c89bc4593c8dfc7e358cb532f20575dfbfcdc59105feabbfcd8d44ea6480cff1b4003335')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

_build() {
    msiexec -a "tightvnc-setup-${_apparch}bit.msi" "TARGETDIR=$(cygpath -wa "install${_apparch}")" -qn
}

build() {
    for _apparch in 32 64
    do
        _build
    done
}

_package() {
    s="install${_apparch}/PFiles/TightVNC"

    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "${s}"/*.{exe,dll} "${a}"

    d="${pkgdir}/docs${_apparch}/${_realname}"
    mkdir -p "${d}"
    cp "${s}"/*.{txt,url} "${d}"
}

package_app-i686-tightvnc() {
    _apparch=32
    _package
}

package_app-x86_64-tightvnc() {
    _apparch=64
    _package
}
