# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=crystalmark
_dirname=crystal
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=2004R3
pkgrel=1
pkgdesc="A benchmarking software (Crystal Dew World)"
url="http://crystalmark.info/software/CrystalMark/index-e.html"
arch=('any')
license=('custom')
depends=("app-i686-crystalsysinfo")
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("CrystalMark.zip::http://crystalmark.info/download/archive/CrystalMark/CrystalMark${pkgver}.zip")
sha512sums=('f837bee1b4cd8cd5d53b1304505382a7826cc8c4159cbed941db0c3aef335ff3b8988b28417a104dae978e0b2f484033d7383a9e3f9ad73c9f0986bd30eb001e')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

prepare() {
    _lc *
    rm -r "data" *sysinfo*
}

package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}"
    cp -r "template" *.{dll,ini,exe,gld,gc2} "${a}"

    d="${pkgdir}/docs${_apparch}/${_dirname}"
    mkdir -p "${d}/mark"
    cp *.txt "${d}/mark"
}
