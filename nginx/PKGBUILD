# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=nginx
_choconame=nginx
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=1.29.2
pkgrel=1
pkgdesc="Lightweight HTTP server and IMAP/POP3 proxy server"
url="https://nginx.org/"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip)
source=("nginx.zip::https://nginx.org/download/nginx-${pkgver}.zip")
sha512sums=('df1049ebdb7cbd6f0c45ba2e93d493e9741d581182c64541b05dcbd18d9e9b5cb41d35544c68e6aab4d1375c38e27ae038e6c7f261cb96e8b51e0184e2cf9273')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "nginx-${pkgver}"/* "${a}"
    rm -R "${a}"/{logs,temp}
}
