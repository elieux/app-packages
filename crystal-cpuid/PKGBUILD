# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=crystalcpuid
_dirname=crystal
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}"
         "app-x86_64-${_realname}")
pkgver=4.1.5
pkgrel=1
pkgdesc="A CPU utility (Crystal Dew World)"
url="http://crystalmark.info/software/CrystalCPUID/index-e.html"
arch=('any')
license=('custom')
makedepends=("unzip")
provides=("${pkgbase}")
options=(!strip)
source=("CrystalCPUID32.zip::http://crystalmark.info/download/archive/CrystalCPUID/CrystalCPUID${pkgver//./}.zip"
        "CrystalCPUID64.zip::http://crystalmark.info/download/archive/CrystalCPUID/CrystalCPUID${pkgver//./}x64.zip")
sha512sums=('c947ba7dde617d7cf33676a8f9be2059b3ba825936804a73f28ea1f85652f976d7c907d913bb1e0c25300e2fcc403d61a9e99257ec15089ace2e322aefec376d'
            '955a7f19b4ec651a7d07e5e800e2b40a1735056dfe2ed72d12ac93b75530d5b9973c707607a2015bc970c4904a34048d3f1c637c49599247a938d827fcf13d67')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

prepare() {
    _lc *
    rm -r "data" *sysinfo*
}

_package() {
    a="${pkgdir}/apps${_apparch}/${_dirname}"
    mkdir -p "${a}"
    cp "crystalcpuid${1}.exe" "${a}/crystalcpuid.exe"

    d="${pkgdir}/docs${_apparch}/${_dirname}"
    mkdir -p "${d}/cpuid"
    cp -r *.txt "${d}/cpuid"
}

package_app-i686-crystalcpuid() {
    _apparch=32
    depends=("app-i686-crystalsysinfo")
    _package ""
}

package_app-x86_64-crystalcpuid() {
    _apparch=64
    depends=("app-x86_64-crystalsysinfo")
    _package "x64"
}
