# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=docker-engine
_choconame=docker-engine
_dirname=docker
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=24.0.6
pkgrel=1
pkgdesc="Pack, ship and run any application as a lightweight container"
url="https://docs.docker.com/engine/"
arch=('any')
license=('Apache')
provides=("${pkgbase}")
options=(!strip)
source=("docker.zip::https://download.docker.com/win/static/stable/x86_64/docker-${pkgver}.zip")
sha512sums=('bcf3f72bd6133a39877fff3e4bdb7c6c13323ab85f9e1059418c7752c7baff39265bb0ac8a5f196bb802771faf054982335057029bac051247d07f76f5626c6a')

package() {
    local a="${pkgdir}/apps/${_dirname}"
    mkdir -p "${a}"
    cp "docker"/* "${a}/"
    rm "${a}/docker.exe"
}
