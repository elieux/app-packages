# Maintainer: David Macek <david.macek.0@gmail.com>

_extract_subdir() {
    local _file="$(get_filename "${1}")"
    local _dir="${_file%.*}"
    if type bsdtar | head -1 | grep -q 'is a function'
    then
        local _original_bsdtar="$(type bsdtar | tail +2)"
    fi
    bsdtar() {
        local _extra_args=()
        if [ "${1}" = "-xf" ]
        then
            mkdir -p "${_dir}"
            _extra_args=(-C "${_dir}")
        fi
        /usr/bin/bsdtar "${_extra_args[@]}" "${@}"
    }
    extract_file "${_file}"
    unset -f bsdtar
    eval "${_original_bsdtar}"
}

extract_https@subdir() {
    _extract_subdir "${@}"
}

download_https@subdir() {
    download_file "${1/@subdir:/:}"
}

_realname=unison
_choconame=unison
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=2.53.3
pkgrel=1
pkgdesc="Two-way file synchronizer"
url="https://www.cis.upenn.edu/~bcpierce/unison/"
arch=('any')
license=('GPL')
replaces=("app-i686-${_realname}")
provides=("${pkgbase}")
options=(!strip)
source=("unison-windows-x86_64.zip::https@subdir://github.com/bcpierce00/unison/releases/download/v${pkgver}/unison-${pkgver}-windows-x86_64.zip")
sha512sums=('3f4c223a1c707dd69e25c3aff3d74b91c2edeb02299d398505231e7f70d86412b23ac0ca7474cbfa58be9020c307303a7fa2993be9ea28f8030c11f46a49ac45')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"

    cp -R "unison-windows-x86_64"/* "${a}"
    mv "${a}/bin/unison"* "${a}"
    rm -R "${a}"/{bin,etc,lib,share}
}
