# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=rclone
_choconame=rclone
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=1.58.1
pkgrel=1
pkgdesc="Syncs your files to cloud storage"
url="https://rclone.org/"
arch=('any')
license=('MIT')
provides=("${pkgbase}")
options=(!strip)
source=("rclone-windows-amd64.zip::https://downloads.rclone.org/v${pkgver}/rclone-v${pkgver}-windows-amd64.zip")
sha512sums=('b3bc11a86db83f7b2424285231f578041a0bad05ad07eb54c1f51dbf5d920dae1ef926adc0a9ab8279d6fde9d48605133d18f3ddc7b8d1a2c8150a6bf335b6f0')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "rclone-v${pkgver}-windows-amd64"/* "${a}"
}
