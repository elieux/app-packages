# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=slack
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=4.1.2
pkgrel=1
pkgdesc="Client for the Slack team communication platform"
url="http://www.slack.com/"
arch=('any')
license=('custom')
replaces=("app-i686-${_realname}")
makedepends=("p7zip" "unzip")
provides=("${pkgbase}")
options=(!strip)
source=("SlackSetup64.exe::https://slack.com/ssb/download-win64")
sha512sums=('8a4a41dbcdb30dd72c00dc492038c55b4eae2b71acf1fdcbd28b5c2cac97c3de9a11ba014f3f9cac589ffb6d39118f284415432102f00b1abb37cbc946fad5f7')

_lc() {
    local d f n

    for f in "${@}"
    do
        d="$(dirname "${f}")"
        f="$(basename "${f}")"
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${d}/${f}" "${d}/${n}"
        fi
    done
}

_rmmsdll() {
    local ms

    ms=("msvbvm[0-9]+"
        "ucrtbase"
        "mfcm?[0-9]+[a-z]+"
        "msvc[rp][0-9]+"
        "vc([ao]mp|corlib|runtime)[0-9]+"
        "concrt[0-9]+"
        "pgort[0-9]+"
        "api-ms-win-[0-9a-z-]+")
    find "${1}" -iname '*.dll' | grep -Eif <(for m in "${ms[@]}"; do echo "/${m}[.]dll$"; done) | xargs -r rm
}

prepare() {
    find -name 'slack-*-full.nupkg' -delete
    7z x -y -bd "SlackSetup64.exe" -o"SlackSetup"
    unzip -o "SlackSetup/slack"-*-"full.nupkg" -d "SlackSetup"
    _lc "lib/net45"/*
}

pkgver() {
    "${SYSTEMROOT}/System32/WindowsPowerShell/v1.0/powershell" -command '(Get-Item "SlackSetup64.exe").VersionInfo.ProductVersion' | dos2unix
}

package() {
    a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -r "SlackSetup/lib/net45"/* "${a}"
    _rmmsdll "${a}"
}
