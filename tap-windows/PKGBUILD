_realname=tap-windows
_choconame=tapwindows
pkgbase="app-${_realname}"
pkgname=("app-x86_64-${_realname}")
epoch=1
pkgver=9.27.0
pkgrel=1
pkgdesc="NDIS 6 TAP adapter driver"
url="https://community.openvpn.net/Pages/Getting%20tap-windows"
arch=('any')
license=('GPL2' 'custom')
provides=("${pkgbase}")
options=(!strip)
source=("tap-windows.zip::https://github.com/OpenVPN/tap-windows6/releases/download/${pkgver}/dist.win10.zip")
sha512sums=('1f82967cc075d5325b1bc986b747614a8e7e33b220d5f1f022bed64f6347e64f332659f5a05ac5b9f42f7a346e62c7870236d9f9756188841b04041a7d11bf64')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp -R "dist.win10"/* "${a}"
    mv "${a}/amd64"/* "${a}"
    rm -R "${a}"/{amd64,arm64,i386,devcon.exe}
}
