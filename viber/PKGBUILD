# Maintainer: David Macek <david.macek.0@gmail.com>

_realname=viber
_apparch=32
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
pkgver=5.0.0.2821
pkgrel=1
pkgdesc="Free messages and calls in any country"
url="http://www.viber.com/en/products/windows"
arch=('any')
license=('custom')
provides=("${pkgbase}")
options=(!strip) # digital signatures
source=("ViberSetup.exe::http://download.viber.com/desktop/windows/ViberSetup.exe")
md5sums=('2b2a89b2997d0cf26d4718f06d78a9a5')

_lc() {
    for f in "${@}"
    do
        n="$(echo "${f}" | tr 'A-Z' 'a-z')"
        if test "${f}" != "${n}"
        then
            mv "${f}" "${n}"
        fi
    done
}

pkgver() {
    b="$(cygpath -wa "ViberSetup.exe" | sed 's/\\/\\\\/g')"
    wmic datafile where name=\"\" get version | grep 'Version' -A 1 | tail -1 | tr -d ' '
}

prepare() {
    7z x -y -bd "ViberSetup.exe"
    7z x -y -bd "pack.exe"
    _lc * "${pkgver}"/*
}

package() {
    a="${pkgdir}/apps${_apparch}/${_realname}"
    mkdir -p "${a}"
    cp -r "viber.exe" "${pkgver}"/* "${a}"
    rm "${a}"/msvc{p,r}100.dll
}
