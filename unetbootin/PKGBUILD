_realname=unetbootin
pkgbase="app-${_realname}"
pkgname=("app-i686-${_realname}")
epoch=1
pkgver=677
pkgrel=1
pkgdesc="Create bootable Live USB drives"
arch=('any')
url="https://unetbootin.github.io/"
license=('GPL')
provides=("${pkgbase}")
options=(!strip)
source=("unetbootin-windows.exe::https://github.com/unetbootin/unetbootin/releases/download/${pkgver}/unetbootin-windows-${pkgver}.exe")
sha512sums=('ea6aea138064840d9d86df2a126c9302687185fef1b16316d9abd8e0484736b9d36b9c83a8d78784e3a44a2311863ae75a1be9bccd88938264e1b36048fd9244')

package() {
    local a="${pkgdir}/apps/${_realname}"
    mkdir -p "${a}"
    cp "unetbootin-windows.exe" "${a}/unetbootin.exe"
}
